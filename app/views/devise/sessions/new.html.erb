<div class="flex min-h-screen flex-col items-center justify-center bg-gray-100 p-6 md:p-10">
  <div class="w-full max-w-sm md:max-w-3xl">
    <div class="flex flex-col gap-6">
      <div class="overflow-hidden rounded-lg border border-gray-200 bg-white shadow-sm">
        <div class="grid p-0 md:grid-cols-2">
         <%= simple_form_for(resource, as: resource_name, :url => session_path(resource_name),
        wrapper_mappings: {boolean: :vertical_boolean }, html: { autocomplete: 'off', class: "p-6 md:p-8" }) do |form| %>
            <div class="flex flex-col gap-6">
              <div class="flex flex-col items-center text-center">
                <h1 class="text-2xl font-bold">Welcome back</h1>
                <p class="text-balance text-gray-500">Login to your IPSMPC account</p>
              </div>
<%# Error Messages %>
              <% if flash[:alert].present? %>
                <div class="rounded-md border border-red-200 bg-red-50 p-4">
                  <div class="flex">
                    <div class="flex-shrink-0">
                      <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <div class="ml-3">
                      <p class="text-sm text-red-700">
                        <%= flash[:alert] %>
                      </p>
                    </div>
                  </div>
                </div>
              <% end %>
              <div class="grid gap-2">
                <%= form.label :email, class: "text-sm font-medium" %>
                <%= form.email_field :email, placeholder: "m@example.com", required: true, class: "w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500" %>
              </div>

              <div class="grid gap-2">
                <div class="flex items-center">
                  <%= form.label :password, class: "text-sm font-medium" %>
                </div>
                <%= form.password_field :password, required: true, class: "w-full rounded-md border border-gray-300 px-3 py-2 text-sm focus:border-blue-500 focus:outline-none focus:ring-1 focus:ring-blue-500" %>
              </div>

              <%= form.submit "Login", class: "w-full rounded-md bg-blue-600 px-4 py-2 text-sm font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
            </div>
          <% end %>

         <div class="relative hidden bg-gray-200 md:block">
            <img
              src="https://images.unsplash.com/photo-1590069261209-f8e9b8642343?auto=format&fit=crop&q=80&w=1000&h=1000"
              alt="Office workspace with laptop and coffee"
              class="absolute inset-0 h-full w-full object-cover dark:brightness-[0.2] dark:grayscale"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
