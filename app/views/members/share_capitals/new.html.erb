<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-solid">
      <div class="box-header bg-gray">
        <div class="row">
          <div class="col-md-3">
            <center> <%= image_tag(@member.avatar.url(:medium), class: "profile-user-img img-responsive img-circle") %></center>
          </div>
          <div class="col-md-8">
            <h3 class="condensed-text text-purple"><%= @member.name.try(:upcase)%></h3><br>
          
          </div>
        </div>
      </div>
      <div class="box-body">

<%= simple_form_for @share_capital, url: :member_share_capitals do |f| %>
  <%= f.input :subscriber_id, input_html: { value: @member.id }, as: :hidden %>
  <%= f.input :subscriber_type, input_html: { value: @member.class }, as: :hidden %>
  <%= f.input :share_capital_product_id, label: false, collection: CoopServicesModule::ShareCapitalProduct.all.map{|a| [a.name, a.id] }, as: :radio_buttons %>
  <%= f.input :share_count, label: "Number of Shares" %>
  <%= f.input :reference_number %>
  <%= f.input :amount %>
  <%= f.input :recorder_id, input_html: { value: current_user.id },as: :hidden %>
  <%= f.input :account_number, input_html: { value: AccountNumberGenerator.generate_account_number(@share_capital) }, as: :hidden %>

  <div class="box-footer">
    <%= f.submit "Save Capital Build Up", class: "btn btn-primary pull-right" %>
  </div>
<% end %>
