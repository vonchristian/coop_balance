<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6 col-md-offset-3">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"> Edit Member Details </h3>
      </div>
      <div class="card-body">
        <%= simple_form_for @member, multipart: true do |f| %>
            <center><%= image_tag @member.avatar, class: 'center-block img-responsive img-circle'%></center>
          <center><%= f.input :avatar, as: :file, label: "Upload photo" %></center>
          <%= f.error_notification %>
          <%= f.input :first_name %>
          <%= f.input :middle_name %>
          <%= f.input :last_name %>
          <%= f.input :contact_number %>
          <%= f.input :sex, collection: Member.sexes.keys.to_a.map{|a| [a.titleize, a] }, as: :radio_buttons %>
          <%= f.input :civil_status, collection: Member.civil_statuses.keys.to_a.map{|a| [a.titleize, a] }, as: :radio_buttons %>

          <%= f.input :date_of_birth, as: :string, input_html: { class: "datepicker" } %>

          <%= f.simple_fields_for :tin do |t| %>
          <%= t.input :number, label: "TIN Number" %>
          <% end %>
          <h4 class="box-title"> Signature Specimen </h4>
          <%= f.input :signature_specimen, as: :file %>
          <div class="box-footer">
            <%= f.submit "Save Member", class: "btn btn-primary float-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
