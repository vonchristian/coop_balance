<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="box box-solid">
      <div class="box-header">
        <%= image_tag(@member.avatar.url(:thumb), class: "profile-user-img img-responsive img-circle") %>
        <h3 class="profile-username text-center"><%= @member.first_and_last_name %></h3>
      </div>
      <div class="box-body">
<%= simple_form_for [@member, @saving], url: :member_savings_accounts do |f| %>
  <%= f.error_notification %>
  <%= f.input :date, label: "Date Opened", as: :string, input_html: { class: "datepicker" } %>
  <%= f.input :saving_product_id, label: "Savings Account Type", collection: CoopServicesModule::SavingProduct.all.map{ |a| [ a.name.titleize, a.id] }, as: :radio_buttons %>
  <%= f.input :amount, label: "Initial Deposit" %>
  <%= f.input :or_number %>
  <%= f.input :depositor_id, input_html: { value: @member.memberships.where(cooperative: current_cooperative).id }, as: :hidden %>
  <%= f.input :depositor_type, input_html: { value: @member.class }, as: :hidden %>
  <%= f.input :recorder_id, input_html: { value: current_user.id }, as: :hidden %>
  <%= f.input :account_number, input_html: { value: AccountNumberGenerator.generate_account_number(@saving) }, as: :hidden %>
  <div class="box-footer">
    <%= f.submit "Open Savings Account", class: "btn btn-primary pull-right" %>
  </div>
<% end %>
