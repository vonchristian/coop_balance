<%= simple_form_for @merging, url: :member_account_mergings do |f| %>
<%= f.input :mergee_id, collection: Member.all.map{|a| [a.name, a.id] } %>
<%= f.input :merger_id, input_html: { value: @merger.id } %>
<%= f.submit "Merge Account", class: "btn btn-primary" %>
<% end %>
<script type="text/javascript">
  $(document).ready(function() {
    $("#account_merging_mergee_id").select2({
      theme: "bootstrap"
    });
  });
</script>
