<div class="modal-header">
  <h4 class="modal-title card-title" id="mainModalLabel">
    Update Retirement
  </h4>
  <button type="button" class="close float-right" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
</div>
<div class="modal-body">
  <%= render 'members/partials/form_header', member: @member %>
</div>
<%= simple_form_for @member, url: :member_retirement, html: { data: { modal: true } } do |f| %>
  <div class="modal-body">
    <%= f.error_notification %>
    <%= f.input :retired_at, label: 'Retirement Date', as: :string, input_html: { class: "datepicker" }%>
  </div>
  <div class="modal-footer">
    <%= f.submit "Update", class: "btn btn-primary float-right" %>
  </div>
<% end %>
