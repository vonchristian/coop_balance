<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card">
      <div class="card-header">
        <h4><center><%= image_tag(@member.avatar.variant(resize: '60x60'), class: 'media-object img-circle') if @member.avatar.attached? %></center></h4>
         <h3><center><%= @member.name %></center></h3>
      </div>
      <div class="card-body">
        <%= simple_form_for [@member, @tin], url: :member_tins, html: { autocomplete: "off"} do |f| %>
          <%= f.error_notification %>
          <%= f.input :number, label: 'TIN Number' %>
          <hr>
          <%= link_to "Cancel", member_path(@member), class: 'btn btn-default' %>
          <%= f.submit "Save TIN", class: "btn btn-primary float-right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
