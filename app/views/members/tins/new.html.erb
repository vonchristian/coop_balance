<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="card">
      <div class="card-header">
        <h4><center><%= image_tag(@member.avatar, style: 'width:60px;height:60px;', class: 'media-object img-circle') %></center></h4>
         <h3><center><%= @member.name %></center></h3>
      </div>
      <div class="card-body">
        <%= simple_form_for [@member, @tin], url: :member_tins do |f| %>
          <%= f.error_notification %>
          <%= f.input :number %>
          <%= f.submit "Save TIN", class: "btn btn-primary pull-right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
