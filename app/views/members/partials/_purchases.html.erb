<div class="tab-pane active" id="purchases">
  <div class="box-body">
    <div class="table table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Date</th>
            <th>OR / Invoice #</th>
            <th></th>
            <th>Member</th>
            <th><span class="pull-right">Total Cost </span></th>
          </tr>
        </thead>
        <tbody>
          <% @member.orders.each do |order| %>
            <tr data-link="<%=store_module_order_path(order)%>" class="myClass">
              <td><%= order.date.strftime("%B %e, %Y") %></td>
              <td><%= order.official_receipt_number %></td>
              <td width="30px"><%= image_tag(order.customer.avatar.url(:thumb), class: 'media-object img-circle') %></td>
              <td><%= order.customer_name %></td>
              <td><span class="pull-right"><%=number_to_currency order.total_cost %></span></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script type="text/javascript">
  $("tr").click(function() {
  window.location = $(this).data("link")
});
  $('.myClass').css('cursor', 'pointer');
</script>
</div>
