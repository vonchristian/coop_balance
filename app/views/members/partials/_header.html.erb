<%= link_to member_path(member) do %>
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-md-1">
          <%= image_tag(member.avatar, height: 45, width: 45, class: "img-circle") %>
        </div>
        <div class="col-md-11">
          <h3 class="card-title"> <%= member.full_name.upcase %></h3>
          <div class="row">
            <div class="col-md-3">
              <small class="text-muted"><i class="fa fa-map-marker"></i>&nbsp;  <%= member.current_address_complete_address %></small>
            </div>
            <div class="col-md-3">
              <small class="text-muted">
                <i class="fa fa-phone"></i>&nbsp;  <%= member.current_contact_number %>
              </small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
