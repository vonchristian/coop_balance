<div class="card">
  <div class="card-header">
    <div class="row">
      <div class="col-md-6">
        <h4 class="card-title">Share Capital</h4>
      </div>
      <div class="col-md-6">
        <% if policy([:members, :share_capital]).new? %>
          <%= link_to 'New Share Capital', new_share_capital_application_path(subscriber_id: @member.id, subscriber_type: @member.class.to_s), class: "btn btn-primary btn-flat float-right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% @member.share_capitals.each do |share_capital| %>
  <%= render 'share_capitals/partials/header', share_capital: share_capital %>
<% end %>
