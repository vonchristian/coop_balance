<div class="tab-pane <%='active' if current_page?(member_savings_accounts_path(@member)) %>" id="savings-accounts">
  <% if @member.savings.any? %>
    <% @member.savings.each do |savings_account| %>
      <%= link_to savings_account_path(savings_account) do %>
        <small class="text-muted condensed-text"> <%= savings_account.saving_product_name.try(:upcase) %></small><br>
          <h3 class="no-padding"><%= number_to_currency savings_account.balance %></h3>
           <%= link_to 'Deposit', new_savings_account_deposit_path(savings_account), class: "btn btn-success" %> &nbsp; &nbsp;
                  <%= link_to 'Withdraw', new_savings_account_withdrawal_path(savings_account), class: "btn btn-warning" %>
        <hr />
      <% end %>
    <% end %>
  <% else %>
    <br>
    <span class="alert alert-info"> No Savings Account opened by <%= @member.first_and_last_name %> <%=link_to 'Open Savings Account', new_member_savings_account_path(@member) %></span>
    <br>
    <br>
    <br>
  <% end %>

</div>
