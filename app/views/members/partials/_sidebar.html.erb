

  <!-- Profile Image -->
  <div class="box box-solid">
    <div class="box-body box-profile">
    <%= image_tag(member.avatar.url(:medium), class: "profile-user-img img-responsive img-circle") %>

      <h3 class="profile-username text-center"><%= member.first_and_last_name %></h3>
          <center><span class="text-muted text-center"><%= member.current_occupation %> &nbsp; </span> </center>

        <center><%= link_to 'Add Occupation', new_member_occupation_path(member), class: 'text-muted text-center' %></center>
        <hr>




      <strong><i class="fa fa-phone margin-r-5"></i> Contact Number</strong>

      <p class="text-muted"><%= member.contact_number %>

      </p>

      <hr>

      <strong><i class="fa fa-map-marker margin-r-5"></i> Address</strong>


      <p class="text-muted"><%= member.current_address %></p>
      <%= link_to 'Update Address', new_member_address_path(id: member.id, member_id: member.id) %>
      <hr>
       <strong><i class="fa fa-book margin-r-5"></i> TIN Number</strong>

      <p class="text-muted"><%= member.tin_number %></p>
      <%= link_to 'Update TIN', new_member_tin_path(member) %>


      <hr>

      <strong><i class="fa fa-book margin-r-5"></i> Membership Type</strong>

      <p class="text-muted"><%= member.membership_type.try(:titleize) %></p>
      <% if member.membership.present? %>
        <%= link_to 'Update Membership', edit_member_membership_path(id: member.id, member_id: member.id) %>
      <% else %>
        <%= link_to 'Update Membership', new_member_membership_path(id: member.id, member_id: member.id) %>
      <% end %>

      <hr>
      <strong><i class="fa fa-map-marker margin-r-5"></i> Date of Birth</strong>


      <p class="text-muted"><%= member.date_of_birth.try(:strftime, "%B %e, %Y") %></p>
      <p class="text-muted"> Age <%= member.age %> Years</p>

      <hr>
      <strong><i class="fa fa-book margin-r-5"></i> Office</strong>

      <p class="text-muted"><%= member.office_name %></p>
      <%= link_to 'Update Branch Office', edit_member_office_path(id: member.id, member_id: member.id) %>
      <hr />


      <strong><i class="fa fa-file-text margin-r-5"></i> Notes</strong>

      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam fermentum enim neque.</p>
       <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <%= link_to 'Update Info', edit_member_path(member), class: "btn btn-primary btn-block" %>
        <br>
      </div>
    </div>
    </div>


    <!-- /.box-body -->
  </div>
  <!-- /.box -->

