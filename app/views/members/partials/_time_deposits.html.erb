<div class="tab-pane <%='active' if current_page?(member_time_deposits_path(@member)) %>" id='time-deposit'>
  <div class="row">
    <div class="col-md-12">
      <% if policy([:members, :time_deposit]).new? %>
        <% @member.memberships.each do |membership| %>
          <% if membership.cooperative == current_user.cooperative %>
            <%= link_to 'New Time Deposit', new_membership_time_deposit_path(membership), class: "btn btn-primary btn-flat pull-right" %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
  <hr>
  <% @member.time_deposits.each do |time_deposit| %>
    <%=link_to time_deposit_path(time_deposit) do %>
      <h3><%=  number_to_currency time_deposit.amount_deposited %></h3>
      <%= time_deposit.current_term.number_of_days %>Days Deposited
      <% if time_deposit.withdrawn? %>
                <span class="text-danger"> Withdrawn last <%= time_deposit.withdrawal_date.strftime("%B %e, %Y") %></span>
              <% end %>
    <% end %>
  <% end %>
</div>
