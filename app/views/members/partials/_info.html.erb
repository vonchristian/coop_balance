      </div>
    </div>
  </div>
</div>


<script type="text/javascript">
  $('#browse').click(function(e) {
    $('#member_signature_specimen').click();
    e.preventDefault();
    e.stopPropagation();
    $('#member_signature_specimen').change(function() {
      var val = $('#member_signature_specimen').val();
      if (val != ''){
        $('#new_member').submit();
      }
    });
  });
</script>
