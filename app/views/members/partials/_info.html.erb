
<div class="row">
  <div class="col-md-7">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-md-6">
            <h4 class="card-title"> Information</h4>
          </div>
          <div class="col-md-6">
            <div class="row">
              <div class="col-md-6">
                <%= link_to 'View (PDF)', member_info_index_path(@member, format: 'pdf'), class: 'btn btn-default btn-sm float-right' %>
              </div>
              <div class="col-md-6">
                <%= link_to 'Update Profile', edit_member_path(@member), class: "btn btn-outline-warning btn-sm float-right", data: { modal: true } %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-10 col-sm-10">
            <span class="text-muted"><i class="fa fa-user"></i> &nbsp; Name</span>
            <div class="row justify-content-end">
              <div class="col-md-10 col-sm-10">
                <%= @member.name_and_initial %>
              </div>
            </div>
          </div>
          <div class="col-md-2 col-sm-2">
          </div>
        </div>
      </div>
      <hr class="no-margin">
      <div class="card-body">
        <div class="row">
          <div class="col-md-10 col-sm-10">
            <span class="text-muted"><i class="fa fa-sitemap"></i> &nbsp; Organizations/Office</span>
            <div class="row justify-content-end">
              <div class="col-md-10 col-sm-10">
                <% @member.organizations.each do |organization| %>
                  <p class="no-margin-bottom"><%= organization.name  %></p>
                <% end %>
              </div>
            </div>
          </div>
          <div class="col-md-2 col-sm-2">
          </div>
        </div>
      </div>
      <hr class="no-margin">
      <div class="card-body">
        <div class="row">
          <div class="col-md-10 col-sm-10">
            <span class="text-muted"><i class="fa fa-map-marker-alt"></i> &nbsp; Complete Address</span>
            <div class="row justify-content-end">
              <div class="col-md-10 col-sm-10">
                <%= @member.current_address_complete_address %>
              </div>
            </div>
          </div>
          <div class="col-md-2 col-sm-2">
          </div>
        </div>
      </div>
      <hr class="no-margin">
      <div class="card-body">
        <div class="row">
          <div class="col-md-10 col-sm-10">
            <span class="text-muted"><i class="fa fa-fire"></i> &nbsp; Barangay</span>
            <div class="row justify-content-end">
              <div class="col-md-10 col-sm-10">
                <%= @member.current_address_barangay_name %>
              </div>
            </div>
          </div>
          <div class="col-md-2 col-sm-2">
          </div>
        </div>
      </div>
      <hr class="no-margin">
      <div class="card-body">
        <div class="row">
          <div class="col-md-10 col-sm-10">
            <span class="text-muted"><i class="fa fa-book"></i> &nbsp; Account Number</span>
            <div class="row justify-content-end">
              <div class="col-md-10 col-sm-10">
                <%= @member.account_number %>
              </div>
            </div>
          </div>
          <div class="col-md-2 col-sm-2">
          </div>
        </div>
      </div>
      <hr class="no-margin">
      <div class="card-body">
        <div class="row">
          <div class="col-md-10 col-sm-10">
            <span class="text-muted"><i class="fa fa-phone"></i>  &nbsp; Contact Info</span>
            <div class="row justify-content-end">
              <div class="col-md-10 col-sm-10">
                <%= @member.current_contact_number %>
              </div>
            </div>
          </div>
          <div class="col-md-2 col-sm-2">
          </div>
        </div>
      </div>
      <hr class="no-margin">
      <div class="card-body">
        <div class="row">
          <div class="col-md-10 col-sm-10">
            <span class="text-muted"><i class="fa fa-calendar"></i> &nbsp; Date of Birth</span>
            <div class="row justify-content-end">
              <div class="col-md-10 col-sm-10">
                <%= @member.date_of_birth.try(:strftime, "%B %e, %Y") %>
              </div>
            </div>
          </div>
          <div class="col-md-2 col-sm-2">
          </div>
        </div>
      </div>
      <hr class="no-margin">
      <div class="card-body">
        <div class="row">
          <div class="col-md-10 col-sm-10">
            <span class="text-muted"><i class="fa fa-user-clock"></i> &nbsp; Age</span>
            <div class="row justify-content-end">
              <div class="col-md-10 col-sm-10">
                <%= @member.age %>
              </div>
            </div>
          </div>
          <div class="col-md-2 col-sm-2">
          </div>
        </div>
      </div>
      <hr class="no-margin">
      <div class="card-body">
        <div class="row">
          <div class="col-md-10 col-sm-10">
            <span class="text-muted"><i class="fa fa-mars"></i> &nbsp; Sex</span>
            <div class="row justify-content-end">
              <div class="col-md-10 col-sm-10">
                <%= @member.sex.try(:titleize) %>
              </div>
            </div>
          </div>
          <div class="col-md-2 col-sm-2">
          </div>
        </div>
      </div>
      <hr class="no-margin">
      <div class="card-body">
        <div class="row">
          <div class="col-md-10 col-sm-10">
            <span class="text-muted"><i class="fa fa-motorcycle"></i> &nbsp; Civil Status</span>
            <div class="row justify-content-end">
              <div class="col-md-10 col-sm-10">
                <%= @member.civil_status.try(:titleize) %>
              </div>
            </div>
          </div>
          <div class="col-md-2 col-sm-2">
          </div>
        </div>
      </div>
      <hr class="no-margin">
      <div class="card-body">
        <div class="row">
          <div class="col-md-10 col-sm-10">
            <span class="text-muted"><i class="fa fa-info"></i>  &nbsp; TIN Number</span>
            <div class="row justify-content-end">
              <div class="col-md-10 col-sm-10">
               
              </div>
            </div>
          </div>
          <div class="col-md-2 col-sm-2">
          </div>
        </div>
      </div>
      <hr class="no-margin">
      <div class="card-body">
        <div class="row">
          <div class="col-md-10 col-sm-10">
            <span class="text-muted"><i class="fa fa-calendar"></i>  &nbsp; Membership Date</span>
            <div class="row justify-content-end">
              <div class="col-md-10 col-sm-10">
                <% @member.memberships.for_cooperative(current_user.cooperative).each do |membership| %>
                  <p><%= membership.membership_date.try(:strftime, ("%B %e, %Y")) %></p>
                <% end %>
              </div>
            </div>
          </div>
          <div class="col-md-2 col-sm-2">
          </div>
        </div>
      </div>
      <hr class="no-margin">
      <div class="card-body">
        <div class="row">
          <div class="col-md-10 col-sm-10">
            <span class="text-muted"><i class="fa fa-users"></i>  &nbsp; Beneficiaries</span>
            <div class="row justify-content-end">
              <div class="col-md-10 col-sm-10">
                <% @member.beneficiaries.split(", ").each do |beneficiary| %>
                  <p class="mb-0"><%= beneficiary %></p>
                <% end %>
              </div>
            </div>
          </div>
          <div class="col-md-2 col-sm-2">
          </div>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-md-6">
            <h3 class="card-title"> Signature Specimen </h3>
          </div>
          <div class="col-md-6">
            <%= simple_form_for Member.new, url: member_signature_specimens_path(@member) do |f| %>
              <%= f.input :signature_specimen, as: :file, label: false, input_html: { class: 'choose-btn center-block' } %>
              <a class="btn btn-sm btn-outline-warning float-right" id="browse">Update Signature Specimen</a>
            <% end %>
          </div>
        </div>
      </div>
      <div class="card-body">
        <% if @member.signature_specimen.attachment.present? %>
          <%= image_tag(@member.signature_specimen, height: 200, width: 350) %>
        <% end %>
      </div>
    </div>
    <div class="card">
      <div class="card-header">
          <div class="row">
            <div class="col-md-9">
              <h3 class="card-title"> Identifications </h3>
            </div>
            <div class="col-md-3">
              <%= link_to new_identification_path(identifiable_id: @member.id, identifiable_type: @member.class.to_s) do %>
                <span class="btn btn-warning btn-sm" title="New Identification" data-toggle="tooltip"> <i class="fa fa-plus-circle"></i> New </span>
              <% end %>
            </div>
          </div>
        </div>
        <div class="card-body">
          <% @member.identifications.each do |identification| %>
            <h6><%= identification.identity_provider_name %></h6>
            <div class="row">
              <div class="col-md-3">
                <span>ID Number: </span>
              </div>
              <div class="col-md-9">
                <%= identification.number %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-3">
                <span>Date Issued: </span>
              </div>
              <div class="col-md-9">
                <%= identification.issuance_date.try(:strftime, "%B %e, %Y") %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-3">
                <span>Exp. Date: </span>
              </div>
              <div class="col-md-9">
                <%= identification.expiry_date.try(:strftime, "%B %e, %Y") %>
              </div>
            </div>
            <% identification.photos.each do |photo| %>
              <%= image_tag(photo, height: 200, width: 350)  %><br>
            <% end %>
          <% end %>
        </div>
      </div>
  </div>
