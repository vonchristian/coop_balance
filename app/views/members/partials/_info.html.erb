<div class="tab-pane <%='active' if current_page?(member_info_index_path(@member)) %>">
<%= member.full_name %>
<hr>
<p class="text-muted">REAL PROPERTIES </p>
  <%= link_to 'New Property', new_member_real_property_path(@member) %>
<% @member.real_properties.each do |real_property| %>
  <%= real_property.address %>
<% end %>
<hr>
<%= link_to 'Print Member Info', member_info_index_path(@member, format: 'pdf') %>
<hr>
<p class="text-muted"> SAVINGS </p>
<% if policy([:members, :savings_account]).new? %>
   <%=link_to 'New Savings Account', new_member_savings_account_path(@member), class: "btn btn-primary" %>
  <% end %>
   <hr>
  <% if @member.savings.any? %>
    <% @member.savings.each do |savings_account| %>
      <%= link_to savings_account_path(savings_account) do %>
        <small class="text-muted condensed-text"> <%= savings_account.saving_product_name.try(:upcase) %></small><br>
          <h3 class="no-padding"><%= number_to_currency savings_account.balance %></h3><br>
          <% if policy([:savings_accounts, :deposit]).new? %>
            <%= link_to 'Deposit', new_savings_account_deposit_path(savings_account), class: "btn btn-success" %> &nbsp; &nbsp;
            <%= link_to 'Withdraw', new_savings_account_withdrawal_path(savings_account), class: "btn btn-warning" %>
          <% end %>
        <hr />
      <% end %>
    <% end %>
  <% else %>
    <br>
    <span class="alert alert-info"> No Savings Account opened by <%= @member.first_and_last_name %></span>
  <% if policy([:members, :savings_account]).new? %>
      <%=link_to 'Open Savings Account', new_member_savings_account_path(@member) %>
  <% end %>
    <br>
    <br>
    <br>
  <% end %>
</div>
