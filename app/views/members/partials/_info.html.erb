<div class="tab-pane <%='active' if current_page?(member_info_index_path(@member)) %>">

    <div class="row">
      <div class="col-md-3">
        <strong>
          <i class="fa fa-map-marker"></i> Current Address
        </strong>
      </div>
      <div class="col-md-6">
        <%= @member.current_address_complete_address %><br>
      </div>
      <div class="col-md-3">
        <%= link_to 'Update', new_member_address_path(@member), class: "btn btn-outline-warning btn-sm" %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-3">
        <strong><i class="fa fa-phone"></i> Account Number </strong>
      </div>
      <div class="col-md-6">
        <%= @member.account_number %>
      </div>
      <div class="col-md-3"></div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-3">
        <strong><i class="fa fa-phone"></i> Contact Info </strong>
      </div>
      <div class="col-md-6">
        <%= @member.current_contact_number %>
      </div>
      <div class="col-md-3">
        <%= link_to 'Update', new_member_contact_path(@member), class: "btn btn-outline-warning btn-sm" %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-6">
        <strong><i class="fa fa-calendar"></i> Date of Birth </strong>
      </div>
      <div class="col-md-6">
        <%= @member.date_of_birth.try(:strftime, "%B %e, %Y") %><br>
        <%= @member.age %> Years Old  <br>
        <%= link_to 'Update', edit_member_path(@member), class: "btn btn-default btn-xs" %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-6">
        <strong><i class="fa fa-calendar"></i> Sex </strong>
      </div>
      <div class="col-md-6">
        <%= @member.sex.titleize %><br>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-6">
        <strong><i class="fa fa-calendar"></i> Civil Status </strong>
      </div>
      <div class="col-md-6">
        <%= @member.civil_status.titleize %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-6">
        <strong><i class="fa fa-info"></i> TIN Number </strong>
      </div>
      <div class="col-md-6">
        <%= @member.current_tin_number %><br>
        <%= link_to 'Update', new_member_tin_path(@member), class: "btn btn-default btn-xs" %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-6">
        <strong><i class="fa fa-info"></i> Office </strong>
      </div>
      <div class="col-md-6">
        <%= @member.office_name %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-6">
        <strong><i class="fa fa-info"></i> Organizations </strong>
      </div>
      <div class="col-md-6">
        <% @member.organizations.each do |organization| %>
          <p><%= organization.name %></p>
        <% end %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-6">
        <strong><i class="fa fa-calendar"></i> Membership Date </strong>
      </div>
      <div class="col-md-6">
        <%= @member.memberships.pluck(:membership_date).last.strftime("%B %e, %Y") %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-6">
        <strong><i class="fa fa-info"></i> Beneficiaries </strong>
      </div>
      <div class="col-md-6">
        <table>
          <% @member.beneficiaries.each do |beneficiary| %>
            <tr>
              <td style="width:120px"><%= beneficiary.full_name %></td>
              <td style="width:120px"><%= beneficiary.relationship %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
<hr>
<h3 class="card-title"> Signature Specimen </h3>
<br>
<% if @member.signature_specimen.attachment.present? %>
  <%= image_tag(@member.signature_specimen, height: 300, width: 500) %>
<% end %>
<hr>
<%= link_to 'Print Member Info', member_info_index_path(@member, format: 'pdf') %>
<hr>
