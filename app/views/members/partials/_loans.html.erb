<div class="tab-pane active" id="loans">

  <%= link_to 'New Loan Application', new_loans_department_member_loan_application_path(member_id: @member.id), class: "btn btn-primary" %>
<hr />
  <% @member.loans.each do |loan| %>
    <% cache loan do %>
      <%=link_to loans_department_loan_path(loan) do %>
        <div class="row">
          <div class="col-md-2 border-left">
            <span class="text-muted"> <%=loan.loan_product_name.upcase %></span><br>
            <h4 class="text-muted"><%=number_to_currency loan.loan_amount %></h4>
          </div>
          <div class="col-md-2">
            <span class="text-muted"> PAYMENTS </span><br>
            <h4 class="text-muted"><%=number_to_currency loan.payments.total %></h4>
          </div>
          <div class="col-md-2">
            <span class="text-muted"> BALANCE </span><br>
            <h4 class="text-muted"><%=number_to_currency loan.balance %></h4>
          </div>
        </div>
        <hr>
      <% end %>
    <% end %>
  <% end %>
</div>
