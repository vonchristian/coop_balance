<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <h3 class="card-title">Loans </h3>
      </div>
      <div class="col-md-6">
        <% if policy([:members, :loan]).new? %>
          <%= link_to 'New Loan Application', new_loans_module_loan_application_path(borrower_id: @member.id, borrower_type: @member.class.to_s), 'data-turbolinks' => false, class: "btn btn-primary float-right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<hr>
  <% @member.loans.each do |loan| %>
    <%= render 'loans/partials/header', loan: loan %>
  <% end %>
</div>
