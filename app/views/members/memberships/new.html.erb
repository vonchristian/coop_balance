<%= simple_form_for [@member, @membership], url: :member_memberships do |f| %>
  <%= f.error_notification %>
  <%= f.input :membership_type, collection: Membership.membership_types.keys.to_a.map{|a| [a.titleize, a] }, as: :radio_buttons %>
  <%= f.input :account_number, input_html: {value:  AccountNumberGenerator.generate_account_number(@member) } %>

  <%= f.submit "Save Membership" %>
<% end %>
