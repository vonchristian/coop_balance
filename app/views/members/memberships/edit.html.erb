<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-solid">
      <div class="box-header">
        <h4><center><%= image_tag(@member.avatar.url(:medium), style: 'width:60px;height:60px;', class: 'media-object img-circle') %></center></h4>
         <h3><center><%= @member.name %></center></h3>
      </div>
      <div class="box-body">
<%= simple_form_for [@member, @membership], url: :member_membership do |f| %>
  <%= f.error_notification %>
  <%= f.input :membership_date, as: :string, input_html: { class: "datepicker" } %>
  <%= f.input :membership_type, collection: Membership.membership_types.keys.to_a.map{|a| [a.titleize, a] }, as: :radio_buttons %>
  <div class="box-footer">
    <%= f.submit "Save Membership", class: "btn btn-primary pull-right"%>
  </div>
<% end %>
