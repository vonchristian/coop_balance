<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h4 class="modal-title">New Customer</h4>
    </div>
    <%=simple_form_for @customer, url: :customer_registrations, remote: true do |f| %>
    <%= f.error_notification %>
      <div class="modal-body">
        <ul class="errors text-danger">
        </ul>
        <div class="row">
          <div class="col-md-6">
            <%=f.input :first_name %>
          </div>
           <div class="col-md-6">
            <%=f.input :last_name %>
          </div>
        </div>
           <div class="col-md-6">
            <%=f.input :contact_number %>
          </div>
        </div>
      <div class="modal-footer">
        <%= link_to "Cancel", "#", class: "btn btn-default pull-left", data: {dismiss: "modal"} %>
        <%=f.submit "Save Customer", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
