<aside class="main-sidebar">
    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">
      <!-- Sidebar user panel -->
      <div class="user-panel">
        <div class="pull-left image">
          <%#=link_to(image_tag(current_user.avatar.url(:small), class: "img-circle", width: 40, height: 40), user_path(current_user)) %>
        </div>
        <div class="pull-left info">
          <p><%#=link_to current_user.first_name, bplo_section_settings_user_path(current_user) %></p>
          <a href="#"><i class="fa fa-circle text-success"></i> <small><%#=current_user.role %></small></a>
        </div>
      </div>
      <!-- search form -->
      <%=form_tag store_module_search_results_path, method: :get, class: "sidebar-form" do %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search..." %>
        <span class="input-group-btn">
          <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
            <i class="fa fa-search"></i>
          <% end %>
        </span>
      </div>
    <% end %>
      <!-- /.search form -->
      <!-- sidebar menu: : style can be found in sidebar.less -->
      <ul class="sidebar-menu">
          <li class="header"> STORE </li>
          <!-- <li><a href="/dashboard"><i class="fa fa-dashboard"></i> <span>Dashboard</span></a></li> -->
          <li class=<%#= 'active' if current_page?(store_index_path) %> ><a href="/store"><i class="fa fa-home"></i> <span>Store</span></a></li>

          <li class=<%= 'active' if current_page?(store_module_products_path) %> ><a href="/store_module/products"><i class="fa fa-tag"></i> <span>Products</span></a></li>
          <li class=<%= 'active' if current_page?(store_module_stocks_path) %> ><a href="/store_module/stocks"><i class="fa fa-cubes"></i> <span>Stocks</span></a></li>
          <li class=<%= 'active' if current_page?(store_module_orders_path) %> ><a href="/store_module/orders"><i class="fa fa-server"></i> <span> Orders</span></a></li>

          <li class=<%= 'active' if current_page?(store_module_members_path) %> ><a href="/store_module/members"><i class="fa fa-users"></i> <span> Members</span></a></li>
          <li class=<%#= 'active' if current_page?(admin_settings_path) %> ><a href="/admin/settings"><i class="fa fa-cog"></i> <span> Settings</span></a></li>

    </section>
    <!-- /.sidebar -->
  </aside>
