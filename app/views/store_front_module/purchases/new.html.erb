
<div class="row">
  <div class="col-md-4">
    <div class="box box-solid">
      <div class="box-body">
        <p><b>Search for Product</b></p>

        <%= simple_form_for :product_search, url: :new_store_front_module_purchase, method: :get, class: "sidebar-form" do |f| %>
          <div class="input-group">
            <%= f.input :product_id, input_html: {class: "form-control" }, placeholder: "Search...", collection: StoreFrontModule::Product.all.map{|a| [a.name, a.id]}, label: false %>
            <span class="input-group-btn">
              <%= button_tag(type: 'submit', class: "btn btn-flat") do %>
                <i class="fa fa-search"></i>
              <% end %>
            </span>
          </div>
        <% end %>
        <%= simple_form_for @line_item, url: :store_front_module_purchases do |f| %>
          <%= f.error_notification %>

          <% if @product.present? %>
            <%= f.input :product_id, input_html: { value: @product.id }, as: :hidden %>
            <%= @product.name %>
          <% else %>
            No Product Found.
          <% end %>
          <%= f.input :date, as: :string, input_html: { class: "datepicker", value: Time.zone.now.strftime("%B %e, %Y") } %>
          <%= f.input :quantity, input_html: { autofocus: true, id: 'stock_quantity', oninput: 'calculateTotalPurchaseCost()'} %>
            <% if @product.present?%>
          <%= f.input :unit_of_measurement_id, collection: @product.unit_of_measurements.map{|a| [a.quantity_and_code, a.id] } %>

              <%= f.input :unit_cost, label: "Purchase Cost", input_html: {id: 'stock_purchase_cost', oninput: 'calculateTotalPurchaseCost()', value: @product.purchases.order(date: :desc).first.try(:unit_cost) } %>

            <% end %>
          <%= f.input :total_cost, input_html: { id: 'stock_total_purchase_cost' }, readonly: true %>
          <% if params[:search].present? %>
            <%= f.input :barcode, input_html: { value: params[:search] } %>
          <% else %>
            <%= f.input :barcode %>
          <% end %>

 <%= f.input :cart_id, input_html: { value: @cart.id }, as: :hidden %>

          <div class="box-footer">
            <%= f.submit "Save Stock", class: "btn btn-default btn-flat" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="box box-solid">
      <div class="box-header with-border">
        <%=form_tag new_store_front_module_purchase_path, method: :get, class: "sidebar-form" do %>
          <div class="input-group">

             <%= text_field_tag :supplier_search, params[:supplier_search], class: "form-control", placeholder: "Search...", type: "search", data: {autocomplete: autocomplete_supplier_business_name_store_front_module_purchases_path} %>

            <span class="input-group-btn">
              <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
                <i class="fa fa-search"></i>
              <% end %>
            </span>
          </div>
        <% end %>
      </div>
    </div>
    <div class="box box-solid">
        <div class="box-header bg-gray">
        <% if @supplier.present? %>
          <div class="row">
            <div class="col-md-2">
              <center><%= image_tag(@supplier.avatar.url(:medium), class: "img-circle", hegiht: 45, width: 45) %></center>
            </div>
            <div class="col-md-5">
              <b> <%= @supplier.business_name.try(:upcase) %></b><br>
              <i class="fa fa-map-marker"></i> Address: <%= @supplier.address %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="box-body">
        <div class="table table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>QTY</th>

                <th>DESCRIPTION</th>
                <th><span class="pull-right">PURCHASE COST</span></th>
                <th><span class="pull-right">TOTAL COST</span></th>
              </tr>
            </thead>
            <tbody>
              <% @cart.line_items.each do |line_item| %>
                <tr>
                  <td>
                    <%= line_item.quantity %> <%= line_item.unit_of_measurement_code %>
                  </td>
                  <td>
                    <%= line_item.name %><br>
                    <small class="text-muted"><%= line_item.barcode %></small>
                  </td>
                  <td><span class="pull-right"> <%= number_to_currency line_item.unit_cost %></span></td>
                  <td><span class="pull-right"><%= number_to_currency line_item.total_cost %></span></td>
                  <td><%= link_to store_front_module_line_item_path(line_item), method: :delete do %>
                      <span class="fa fa-trash"></span>
                      <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
          <div class="row">
            <div class="col-md-6">
              <b>TOTAL</b>
            </div>
            <div class="col-md-5">
              <span class="pull-right">
                <%=number_to_currency @cart.line_items.pluck(:total_cost).sum%>
              </span>
            </div>
          </div>
          <hr>
          <%= link_to "Process",new_store_front_module_purchase_order_processing_path %>



      </div>
    </div>
  </div>
</div>
<script>
  $(document).ready(function() {
    $("#product_search_product_id").select2({
      theme: "bootstrap"
    });
  });
</script>
