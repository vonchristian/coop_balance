<div class="row">
  <div class="col-md-7">
    <div class="box box-solid">
      <div class="box-body">
       <% if params[:search].present? %>
        <%=form_tag new_store_front_module_spoilage_path, method: :get do %>
          <div class="input-group">
            <%= text_field_tag :search, params[:search], class: "form-control input-lg", placeholder: "Search Products..." %>
            <span class="input-group-btn">
              <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat btn-lg") do %>
                <i class="fa fa-search"></i> Search
              <% end %>
            </span>
          </div>
        <% end %>
        <% else %>
         <%=form_tag new_store_front_module_spoilage_path, method: :get do %>
          <div class="input-group">
            <%= text_field_tag :search, params[:search], autofocus: true,  class: "form-control input-lg", placeholder: "Search Products..."  %>
            <span class="input-group-btn">
              <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat btn-lg") do %>
                <i class="fa fa-search"></i> Search
              <% end %>
            </span>
          </div>
        <% end %>
      <% end %>
        <br>
        <table class="table table-responsive">
          <tbody>
            <% if @products.present? %>
              <%= render 'store_front_module/spoilages/searched_products' %>
            <% elsif @line_items.present? %>
              <%= render 'store_front_module/spoilages/searched_line_items' %>
            <% end %>
          </tbody>
        </table>
        <hr>
        <% if @spoilage_order_line_items.present? %>
          <p class="text-muted"> ORDER DETAILS </p>
          <div class="table table-responsive">
            <table class="table table-hover table-striped">
              <thead>
                <tr>
                  <th><b>QTY</b></th>
                  <th><b>DESCRIPTION</b></th>
                  <th><span class="pull-right"><b>UNIT COST</b></span></th>
                  <th><span class="pull-right"><b>TOTAL COST</b></span></th>
                </tr>
              </thead>
              <tbody>

                <% @cart.products.order(updated_at: :desc).uniq.each do |product| %>
                  <tr>
                    <td>
                      <%= @cart.line_items_quantity(product) %> <%= product.base_measurement_code %>
                    </td>
                    <td width="300px"><%= product.name.try(:titleize) %> <span class="text-muted"><%#= line_item.barcode %></span>
                    </td>
                    <td>
                      <span class="pull-right">
                        <%= number_to_currency product.base_measurement.price %></td>
                      </span>
                    <td>
                      <span class="pull-right"><%=number_to_currency @cart.line_items_total_cost(product) %></span>
                    </td>
                    <td>
                    <%= link_to store_front_module_spoilage_order_line_item_path(product), method: :delete do %>
                      <span class="fa fa-trash"></span>
                    <% end %>
                    </td>
                  </tr>
                <% end %>
                <hr>
              </tbody>
            </table>
          </div>
        <% end %>
      </div>

    </div>
  </div>
  <div class="col-md-5">
    <div class="box box-solid">
      <% if @cart.line_items.present? %>
      <div class="box-header">
        <div class="row">
          <div class="col-md-4 col-md-offset-2">
            <h3><b> TOTAL </b></h3>
          </div>
          <div class="col-md-5">
            <h3><b><span class="pull-right"><%=number_to_currency @cart.line_items.total_cost %></span></b></h3>
          </div>
        </div>
      </div>
      <div class="box-body">

      <% end %>

