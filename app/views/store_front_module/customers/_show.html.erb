<div class="row">
  <div class="col-md-12">
    <div class="box box-default">
      <div class="box-header">
        <%= image_tag(@customer.avatar.url(:medium), class: "profile-user-img img-responsive img-circle") %>
        <h3 class="profile-username text-center"><%= @customer.first_and_last_name %></h3>
        <ul class="nav nav-tabs">
          <li class="<%= 'active' if current_page?(store_front_module_customer_path(@customer))%>"><%= link_to 'Info', store_front_module_customer_path(@customer) %></li>
          <li class="<%= 'active' if current_page?(store_front_module_customer_sales_orders_path(@customer))%>"><%= link_to 'Sales', store_front_module_customer_sales_orders_path(@customer) %></li>

        </ul>
      <div class="tab-content box-body">
        <% if current_page? store_front_module_customer_path(@customer) %>
          <%= render 'store_front_module/customers/partials/customer_info' %>
        <% end %>
        <% if current_page? store_front_module_customer_sales_orders_path(@customer) %>
          <%= render 'store_front_module/customers/partials/orders' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
