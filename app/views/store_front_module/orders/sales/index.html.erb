<div class="row">
  <div class="col-md-12">
    <div class="box box-solid">
      <div class="box-header">
        <h3 class="box-title">saless</h3>
      </div>
      <div class="box-body">
        <div class="table table-responsive">
          <table class="table table-hover table-striped">
            <thead>
              <tr>
                <th>Customer</th>
                <th>Date</th>
                <th>Total Cost</th>
                <th>Employee</th>
              </tr>
            </thead>
            <tbody>
              <% @sales_orders.each do |sales_order| %>
                 <tr data-link="<%=store_front_module_sales_order_path(sales_order)%>" class="salesOrderIndex">
                  <td><b class="text-primary"><%= image_tag(sales_order.customer.avatar.url(:small), class: "img-circle", height: 45, width: 45) %> &nbsp;<%= sales_order.commercial_document_name %></b></td>
                  <td>
                    <%= sales_order.date.try(:strftime, ("%B %e, %Y")) %><br>
                    <% if sales_order.credit_sales? %>
                      <span class="badge bg-red"> Credit </span>
                    <% end %>
                  </td>
                  <td><%= number_to_currency sales_order.total_cost %></td>
                  <td><%= sales_order.employee_name %></td>
                  <td><%#= number_to_currency sales_order.income %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <center><%= will_paginate @sales_orders %></center>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $("tr").click(function() {
  window.location = $(this).data("link")
});
  $('.salesOrderIndex').css('cursor', 'pointer');
</script>
