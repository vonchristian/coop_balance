 <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-body">
        <div class="row min-margin">
          <div class="col-md-4">
            Customer
          </div>
          <div class="col-md-8">
            <%= @sales_order.customer_name %>
          </div>
        </div>
        <div class="row min-margin">
          <div class="col-md-4">
            Date
          </div>
          <div class="col-md-8">
            <%= @sales_order.date.strftime("%B %e, %Y") %>
          </div>
        </div>
        <div class="table table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>QTY</th>

                <th>DESCRIPTION</th>
                <th><span class="pull-right">UNIT COST</span></th>
                <th><span class="pull-right">TOTAL COST</span></th>
              </tr>
            </thead>
            <tbody>
              <% @sales_order.line_items.each do |line_item| %>
                <tr>
                  <td>
                    <%= line_item.quantity %> <%= line_item.unit_of_measurement_code %>
                  </td>
                  <td>
                    <%= line_item.name %><br>
                    <small class="text-muted"><%= line_item.normalized_barcodes %></small>
                  </td>
                  <td><span class="pull-right"> <%= number_to_currency line_item.unit_cost %></span></td>
                  <td><span class="pull-right"><%= number_to_currency line_item.total_cost %></span></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <hr>
          <div class="row">
            <div class="col-md-6">
              <b>TOTAL</b>
            </div>
            <div class="col-md-6">
              <span class="pull-right">
                <b><%=number_to_currency @sales_order.total_cost%></b>
              </span>
            </div>
          </div>
          <hr>
