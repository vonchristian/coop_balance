 <div class="col-md-8 col-md-offset-2">
    <div class="box box-solid">
      <div class="box-header bg-gray">

           <h4><center><%= image_tag(@customer.avatar.url(:medium), style: 'width:60px;height:60px;', class: 'media-object img-circle') %></center></h4>

            <h3><center><%= @customer.name %></center></h3>
      </div>
      <div class="box-body">
        <div class="table table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>QTY</th>

                <th>DESCRIPTION</th>
                <th><span class="pull-right">UNIT COST</span></th>
                <th><span class="pull-right">TOTAL COST</span></th>
              </tr>
            </thead>
            <tbody>
              <% @sales_order.line_items.each do |line_item| %>
                <tr>
                  <td>
                    <%= line_item.quantity %> <%= line_item.unit_of_measurement_code %>
                  </td>
                  <td>
                    <%= line_item.name %><br>
                    <small class="text-muted"><%= line_item.barcode %></small>
                  </td>
                  <td><span class="pull-right"> <%= number_to_currency line_item.unit_cost %></span></td>
                  <td><span class="pull-right"><%= number_to_currency line_item.total_cost %></span></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <hr>
          <div class="row">
            <div class="col-md-6">
              <b>TOTAL</b>
            </div>
            <div class="col-md-6">
              <span class="pull-right">
                <b><%=number_to_currency @sales_order.total_cost%></b>
              </span>
            </div>
          </div>
          <hr>
