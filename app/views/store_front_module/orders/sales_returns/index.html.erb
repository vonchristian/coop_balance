<div class="row">
  <div class="col-md-12">
    <div class="box box-danger">
      <div class="box-header">
        <div class="row">
          <div class="col-md-4">
            <h3 class="box-title">Sales Returns Section</h3>
            <span class="help-block"> List of sales returns </span>
          </div>
          <div class="col-md-5">
          </div>
          <div class="col-md-3">
            <span class="pull-right">
              <%= link_to "New Sales Return", new_store_front_module_sales_return_line_item_path, class: "btn btn-danger" %>
            </span>
          </div>
        </div>
      </div>
      <div class="box-body">
        <div class="table table-responsive">
          <table class="table table-hover table-striped">
            <thead>
              <tr>
                <th>Date</th>
                <th>Customer</th>
                <th>Items</th>
                <th>Total Cost</th>
                <th>Employee</th>
                <th>Remarks</th>
              </tr>
            </thead>
            <tbody>
              <% @sales_return_orders.each do |sales_return_order| %>
                 <tr data-link="<%=store_front_module_sales_return_order_path(sales_return_order)%>" class="salesReturnOrderIndex">
                  <td><%= sales_return_order.date.strftime("%B %e, %Y") %></td>
                  <td><%= sales_return_order.commercial_document_name %></td>
                  <td>
                    <% sales_return_order.sales_return_order_line_items.each do |line_item|%>
                      <div class="row">
                        <div class="col-md-3">
                          <%= line_item.quantity %> <%= line_item.unit_of_measurement_code %>
                        </div>
                        <div class="col-md-6">
                          <%= line_item.name %>
                        </div>
                        <div class="col-md-3">
                          <%= number_to_currency line_item.unit_cost %>
                        </div>
                      </div>
                      <br>
                    <% end %>
                  </td>
                  <td><%= number_to_currency sales_return_order.total_cost %></td>
                  <td><%= sales_return_order.employee_name %></td>
                  <td><%= sales_return_order.note_content %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <center><%= will_paginate @sales_return_orders %></center>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $("tr").click(function() {
  window.location = $(this).data("link")
});
  $('.salesReturnOrderIndex').css('cursor', 'pointer');
</script>
