<div class="row">
  <div class="col-md-12">
    <div class="box box-solid">
      <div class="box-header">
        <h3 class="box-title">Purchases</h3>
      </div>
      <div class="box-body">
        <div class="table table-responsive">
          <table class="table table-hover table-striped">
            <thead>
              <tr>
                <th>Date</th>
                <th>Supplier</th>
                <th>Items Count</th>
                <th>Total Cost</th>
                <th>Employee</th>
              </tr>
            </thead>
            <tbody>
              <% @purchase_orders.processed.each do |purchase_order| %>
                 <tr data-link="<%=store_front_module_purchase_order_path(purchase_order)%>" class="purchaseOrderIndex">
                  <td><%= purchase_order.date %></td>
                  <td><%= purchase_order.commercial_document_name %></td>
                  <td><%= purchase_order.purchase_order_line_items.count %></td>
                  <td><%= number_to_currency purchase_order.total_cost %></td>
                  <td><%= purchase_order.employee_name %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <center><%= will_paginate @purchase_orders %></center>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $("tr").click(function() {
  window.location = $(this).data("link")
});
  $('.purchaseOrderIndex').css('cursor', 'pointer');
</script>
