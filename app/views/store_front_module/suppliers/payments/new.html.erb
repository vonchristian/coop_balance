<%= simple_form_for [@supplier, @payment], url: :supplier_payments do |f| %>
  <%= f.error_notification %>
  <%= f.input :amount %>
  <%= f.input :reference_number %>
  <%= f.input :description %>
  <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
  <%= f.input :supplier_id, input_html: { value: @supplier.id },as: :hidden %>
  <%= f.input :recorder_id, input_html: { value: current_user.id },as: :hidden %>
  <%= f.submit "Save Payment" %>
<% end %>
