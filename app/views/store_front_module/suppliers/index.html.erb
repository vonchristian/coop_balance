
<div id="supplier-modal" class="modal fade"></div>
<div class="card">
  <div class="card-header">
    <div class="row">
      <div class="col-md-3">
        <h4 class="card-title">Suppliers</h4>
        <p class="category">List of suppliers</p>
      </div>
      <div class="col-md-7">
        <%=form_tag store_front_module_suppliers_path, method: :get, id: "sidebar-form" do %>
          <div class="input-group">
            <%= text_field_tag :search, params[:search], class: "search-query form-control border-input", placeholder: "Search supplier...", type: "search" %>
            <span class="input-group-btn">
              <%= button_tag(type: 'submit', class: "btn") do %>
                <i class="icon-magnifier"></i>
              <% end %>
            </span>
          </div>
        <% end %>
      </div>
      <div class="col-md-2">
        <%=link_to 'New Supplier', new_store_front_module_supplier_path, class: "btn btn-primary pull-right", remote: true %>
      </div>
    </div>
  </div>
</div>
<% @suppliers.each do |supplier| %>
  <% cache(supplier) do %>
    <%= render 'store_front_module/suppliers/partials/header', supplier: supplier %>
  <% end %>
<% end %>
<%= will_paginate @suppliers %>
