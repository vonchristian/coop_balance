<div class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-default">
        <div class="box-header with-border">
          <h3 class="box-title"><%= @product.name %></h3>
        </div>
        <div class="box-body">
          <div class="row">
            <div class="col-md-3 border-right">
              <h3 class="no-padding"><%= @product.purchases_balance %></h3>
              <small>PURCHASES</small>
            </div>
            <div class="col-md-3 border-right">
              <h3 class="no-padding"><%= @product.sales_balance %></h3>
              <small>SALES</small>
            </div>
            <div class="col-md-3 border-right">
              <center>
              <h3 class="no-padding"><%= @product.balance %></h3>
              <small>AVAILABLE QTY</small>
              </center>
            </div>
          </div>
          <hr>
          <div class="nav-tabs">
             <ul class="nav nav-tabs">
          <li class="<%= 'active' if current_page?(store_front_module_product_path(@product))%>"><%= link_to 'Info', store_front_module_product_path(@product) %></li>
          <li class="<%= 'active' if current_page?(store_front_module_product_purchases_path(@product))%>"><%= link_to 'Purchases', store_front_module_product_purchases_path(@product) %></li>
           <li class="<%= 'active' if current_page?(store_front_module_product_sales_path(@product))%>"><%= link_to 'Sales', store_front_module_product_sales_path(@product) %></li>



        </ul>
            <div class="tab-content">
              <% if current_page? store_front_module_product_path(@product) %>
                <%= render 'store_front_module/products/partials/info' %>
              <% end %>
              <% if current_page? store_front_module_product_purchases_path(@product) %>
                <%= render 'store_front_module/products/partials/purchases' %>
              <% end %>
              <% if current_page? store_front_module_product_sales_path(@product) %>
                <%= render 'store_front_module/products/partials/sales' %>
              <% end %>
          </div>

      </div>
