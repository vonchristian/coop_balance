<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-solid">
      <div class="box-header bg-gray">
        <h3 class="box-title">New Stock </h3>
      </div>
      <div class="box-body">
        <div class="row">
          <div class="col-md-9 col-md-offset-2">
            <%= simple_form_for [@product, @stock], url: :store_front_module_product_stocks do |f| %>
              <%= f.error_notification %>
              <%= f.input :supplier_id, input_html: { id: "supplierSelect" }, collection: Supplier.all.map{ |a| [a.business_name, a.id]} %>
              <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
              <%= f.input :quantity, as: :string %>
              <%= f.input :unit_cost, as: :string %>
              <%= f.input :total_cost, as: :string %>
              <%= f.input :retail_price, as: :string %>
              <%= f.input :wholesale_price, as: :string %>
              <%= f.input :barcode %>
              <div class="box-footer">
                <%= f.submit "Save Stock", class: "btn btn-primary pull-right" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

