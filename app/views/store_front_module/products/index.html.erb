<div class="row">
  <div class="col-md-3">
    <div class="box box-solid">
      <div class="box-header">
        <h3 class="box-title"> Categories </h3>
      </div>
      <div class="box-body">
        <% @categories.each do |category| %>
          <div class="row">
            <div class="col-md-8">
              <%= link_to category.name, store_front_module_products_path(category_id: category.id) %>
            </div>
            <div class="col-md-2">
              <span class="badge"><%= category.products.count %></span>
            </div>
          </div>
          <br>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <div class="box box-solid">
      <div class="box-header with-border">
        <div class="row">
          <div class="col-md-2">
            <h3 class="box-title"> Products </h3>
          </div>
          <div class="col-md-5">
            <%=form_tag store_front_module_products_path, method: :get do %>
              <div class="input-group">
                <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search First Name, Last Name ", id: 'account-search-form' %>
                <span class="input-group-btn">
                  <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
                    <i class="fa fa-search"></i>
                  <% end %>
                </span>
              </div>
            <% end %>
            </div>
          <div class="col-md-4">
            <%=link_to 'New Product', new_store_front_module_product_path, class: "btn btn-primary pull-right" %>
          </div>
        </div>
      </div>
      <div class="box-body">
        <div class="table table-responsive">
          <table class="table table-hover table-striped">
            <thead>
            	<tr>
            		<th> Name </th>
            	</tr>
            </thead>
            <tbody>
							<% @products.each do |product| %>
							  <tr>
								  <% cache product do %>
								    <td><%=link_to product.name, store_front_module_product_path(product) %></td>
								  <% end %>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
