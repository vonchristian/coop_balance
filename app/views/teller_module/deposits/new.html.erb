<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="nav-tabs-custom">
      <div class="box-header">
          <h3 class="box-title"> New Deposit Details </h3>
           <h4><center><%= member_avatar(@saving.member, style: 'width:60px;height:60px;', class: 'media-object img-circle') %></center></h4>
           
            <h3><center><%= @saving.member.first_and_last_name %></center></h3>
      </div>
     <div class="box-body">
		<%= simple_form_for [@saving, @deposit], url: :teller_module_savings_account_deposits do |f| %>
		  <%= f.error_notification %>
		  <%= f.input :amount %>
		  <%= f.input :or_number %>
		  <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
		  <%= f.input :saving_id, input_html: { value: @saving.id },as: :hidden %>
		  <%= f.input :recorder_id, input_html: { value: current_user.id },as: :hidden %>
		  <div class="box-footer">
		    <%= f.submit "Save Deposit", class: "btn btn-primary pull-right" %>
		  </div>
		<% end %>
