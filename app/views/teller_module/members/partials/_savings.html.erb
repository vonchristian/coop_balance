<div class="tab-pane" id="savings">
  Savings 
  <%= link_to 'Open Savings Account', new_teller_module_member_saving_path(@member) %>
  <hr>
  <% @member.savings.each do |saving| %>
    <div class="row">
      <div class="col-md-3">
		    <p class="condensed-text"> BALANCE </p>
		    <h2 class="text-muted"><%= number_to_currency saving.balance %></h2>
		    <small class="text-muted"><%=saving.saving_product_name.try(:upcase) %></small>
		  </div>
		  <div class="col-md-2">
		    <%= link_to 'Deposit', new_teller_module_savings_account_deposit_path(saving), class: "btn btn-success" %>
		  </div>
		</div>
  <% end %>
</div>