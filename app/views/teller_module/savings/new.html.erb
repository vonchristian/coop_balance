<div class="content">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="box box-primary">
        <div class="box-header">
          <center>
            <%= member_avatar(@member, style: 'width:60px;height:60px;', class: 'media-object img-circle') %>
            <h3 class="box-title">New Savings Account Details</h3>
          </center>
        </div>
        <div class="box-body">
          <%= simple_form_for [@member, @saving], url: :teller_module_member_savings do |f| %>
            <%= f.error_notification %>
            <%= f.input :date, label: 'Date Opened', as: :string, input_html: { class: "datepicker" } %>
            <%= f.input :saving_product_id,  input_html: {class: 'icheck-me', "data-skin" => 'square', "data-color" => "blue"}, collection: CoopServicesModule::SavingProduct.all.map{ |a| [ a.name.titleize, a.id] }, as: :radio_buttons %>
            <%= f.input :account_number %>
            <%= f.input :amount, label: "Initial Deposit" %>
            <%= f.input :or_number %>
            <%= f.input :member_id, input_html: { value: @member.id }, as: :hidden %>
              <div class="box-footer">
                <%= f.submit "Open Savings Account", class: "btn btn-primary pull-right" %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
