<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="nav-tabs-custom">
      <div class="box-header">
        
           <h4><center><%= member_avatar(@program_subscription.member, style: 'width:60px;height:60px;', class: 'media-object img-circle') %></center></h4>
           
            <h3><center><%= @program_subscription.member.first_and_last_name %></center></h3>
      </div>
     <div class="box-body">
		<%= simple_form_for [@program_subscription, @payment], url: :teller_department_program_subscription_payments do |f| %>
		  <%= f.error_notification %>
		  <%= f.input :amount, input_html: { value: @program_subscription.program.contribution } %>
		  <%= f.input :reference_number %>
		  <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
		  <%= f.input :program_subscription_id, input_html: { value: @program_subscription.id },as: :hidden %>
		  <%= f.input :recorder_id, input_html: { value: current_user.id },as: :hidden %>
		  <div class="box-footer">
		    <%= f.submit "Save Payment", class: "btn btn-primary pull-right" %>
		  </div>
		<% end %>
