<div class="tab-pane" id="savings">
  Savings 
  <%= link_to 'Open Savings Account', new_teller_department_member_saving_path(@member) %>
  <hr>
  <% @member.savings.each do |saving| %>
    <div class="row">
      <div class="col-md-3">
		    <small> BALANCE </small>
		    <h4><%= number_to_currency saving.balance %></h4>
		    <small class="text-muted"><%=saving.name.upcase %></small>
		  </div>
		  <div class="col-md-2">
		    <%= link_to 'Deposit', new_teller_department_savings_account_deposit_path(saving), class: "btn btn-success" %>
		  </div>
		</div>
  <% end %>
</div>