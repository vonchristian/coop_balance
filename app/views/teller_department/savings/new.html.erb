<%= simple_form_for [@member, @saving], url: :teller_department_member_savings do |f| %>
  <%= f.error_notification %>
  <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
  <%= f.input :saving_product_id,  input_html: {class: 'icheck-me', "data-skin" => 'square', "data-color" => "blue"}, collection: SavingProduct.all.map{ |a| [ a.name.titleize, a.id] }, as: :radio_buttons %>
  <%= f.input :account_number %>
  <%= f.input :amount, label: "Initial Deposit" %>
  <%= f.input :or_number %>
  <%= f.input :member_id, input_html: { value: @member.id }, as: :hidden %>
  <%= f.submit "Open Savings" %>
<% end %>
