<% breadcrumb :share_capitals %>
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-body">
        <%=form_tag share_capitals_path, method: :get, class: "search-form" do %>
          <div class="input-group">
            <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Share Capital... ", id: 'account-search-form' %>
            <span class="input-group-btn">
              <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
                <i class="fa fa-search"></i>
              <% end %>
            </span>
          </div>
        <% end %>
      </div>
    </div>
    <% if current_page? share_capitals_path %>
      <% @share_capitals.each do |share_capital| %>
        <%= render 'share_capitals/partials/header', share_capital: share_capital %>
      <% end %>
      <center><%= will_paginate @share_capitals %> </center>
    <% end %>
    <% if current_page? share_capitals_below_minimum_balances_path %>
      <%= render 'share_capitals/partials/below_minimum_balances' %>
    <% end %>
    <% if current_page? share_capitals_section_dashboards_path %>
      <%= render 'share_capitals/partials/dashboard' %>
    <% end %>
  </div>
</div>
