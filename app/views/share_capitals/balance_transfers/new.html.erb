<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-header no-border">
        <h3 class="card-title">Balance Transfer Transaction </h3>
      </div>
      <div class="card-body">
        <p class="text-muted"> Origin Account </p>
        <div class="row">
          <div class="col-md-2 offset-md-1">
            <%= image_tag(@share_capital.subscriber.avatar, height: 45, width: 45, class: "img-circle") %>
          </div>
          <div class="col-md-5">
            <%= @share_capital.subscriber_name %>
          </div>
          <div class="col-md-4">
            <%= number_to_currency @share_capital.paid_up_balance %>
          </div>
        </div>
        <p class="text-muted"> Destination Account </p>
        <div class="row min-margin">
          <div class="col-md-2 offset-md-1">
            <%= image_tag(@destination_share_capital.subscriber.avatar, height: 45, width: 45, class: "img-circle") %>
          </div>
          <div class="col-md-5">
            <%= @destination_share_capital.subscriber_name %>
          </div>
          <div class="col-md-4">
            <%= number_to_currency @destination_share_capital.paid_up_balance %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-md-10 offset-md-1">
            <%= simple_form_for @balance_transfer, url: :share_capital_balance_transfers, html: { autocomplete: 'off' } do |f| %>
              <%= f.input :amount, as: :currency %>
              <%= f.input :origin_id, input_html: { value: @share_capital.id }, as: :hidden %>
              <%= f.input :destination_id, input_html: { value: @destination_share_capital.id }, as: :hidden %>
              <%= f.input :account_number, input_html: { value: SecureRandom.uuid }, as: :hidden %>
              <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
              <%= f.input :employee_id, input_html: { value: current_user.id }, as: :hidden %>
              <%= f.input :reference_number %>
              <%= f.input :description %>
              <%= f.submit "Proceed", class: "btn btn-danger float-right", data: { disable_with: "Processing..." } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
