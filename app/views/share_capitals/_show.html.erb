<%= render 'share_capitals/partials/header', share_capital: @share_capital %>
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <ul class="nav nav-tabs">
          <li class="nav-item"><%= link_to 'Details', share_capital_path(@share_capital), class: "nav-link #{ 'active' if current_page?(share_capital_path(@share_capital))}" %></li>
          <li class="nav-item"><%= link_to 'Settings', share_capital_settings_path(@share_capital), class: "nav-link #{ 'active' if current_page?(share_capital_settings_path(@share_capital))}" %></li>
        </ul>
      </div>
      <% if current_page? share_capital_path(@share_capital) %>
        <%= render 'share_capitals/partials/info' %>
      <% end %>
      <% if current_page? share_capital_settings_path(@share_capital) %>
        <%= render 'share_capitals/partials/settings' %>
      <% end %>
    </div>
  </div>
</div>
