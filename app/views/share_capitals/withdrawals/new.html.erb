<%= simple_form_for @withdrawal, url: :share_capital_withdrawals do |f| %>
  <%= f.error_notification %>
  <%= f.input :amount, input_html: { value: @share_capital.balance }, readonly: true %>
  <%= f.input :date, as: :string, input_html: { class: 'datepicker' } %>
  <%= f.input :reference_number %>
  <%= f.input :description %>
  <%= f.input :cash_account_id, collection: current_user.cash_accounts.map{|a| [a.name, a.id] }, input_html: { class: 'chosen-select' } %>
  <%= f.input :account_number, input_html: { value: SecureRandom.uuid }, as: :hidden %>
  <%= f.input :employee_id, input_html: { value: current_user.id }, as: :hidden %>
  <%= f.input :share_capital_id, input_html: { value: @share_capital.id }, as: :hidden %>

  <%= f.submit 'Proceed', class: 'btn btn-primary float-right' %>
<% end %>
