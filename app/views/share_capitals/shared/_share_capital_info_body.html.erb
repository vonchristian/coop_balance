<div class="row justify-content-end">
  <div class="col-md-7 col-sm-6 col-auto">
    <small>PAID UP BALANCE</small>
    <h2 class="number"><%= number_to_currency share_capital.balance %></h2>
    <small>Account Hash</small><br>
    <%= share_capital.account_number %>
  </div>
  <div class="col-md-4 col-sm-6 col-auto">
    <small>INACTIVITY</small>
    <h4 class="card-title"><%= share_capital.number_of_days_inactive %> Days</h4>
    <br>
    <small>Last Transaction Date</small><br>
    <i class="fa fa-calendar"></i> &nbsp; <%= share_capital.default_last_transaction_date.strftime("%b %e, %Y") %>
  </div>
</div>
