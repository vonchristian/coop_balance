<div class="row">
  <div class="col-md-12">
    <div class="box box-solid">
      <div class="box-header">
        <h3 class="box-title"> Share Capital Details </h3>
      </div>
      <div class="box-body">
        <div class="row">
          <div class="col-md-6">
          <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-4">
              Share Capital
            </div>
            <div class="col-md-6">
              <b><%= @share_capital.share_capital_product_name.try(:upcase) %></b>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-4">
              Subscriber
            </div>
            <div class="col-md-6">
              <% if @share_capital.subscriber.is_a?(Member) %>
                <%=link_to @share_capital.subscriber_name, member_info_index_path(@share_capital.subscriber) %>
              <% elsif @share_capital.subscriber.is_a?(User) %>
                <%=link_to @share_capital.subscriber_name, employee_path(@share_capital.subscriber) %>
              <% elsif @share_capital.subscriber.is_a?(Organization) %>
                <%=link_to @share_capital.subscriber_name, organization_path(@share_capital.subscriber) %>
              <% end %>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-4">
              Account Number
            </div>
            <div class="col-md-6">
              <%= @share_capital.account_number %>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-4">
              Paid Up Shares
            </div>
            <div class="col-md-6">
              <%= @share_capital.paid_up_shares %>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <small>PAID UP BALANCE</small>
          <h3><%= number_to_currency @share_capital.paid_up_balance %></h3>
          <% if !@share_capital.closed? %>
              <%= link_to 'New Capital Build Up', new_share_capital_capital_build_up_path(@share_capital), class: "btn btn-success" %>
            <% end %>
        </div>
        <div class="col-md-2">
          <small>INACTIVITY</small>
          <h4 class="text-danger"><%= @share_capital.number_of_days_inactive %> Days</h4>
          <small>Last Active Date</small><br>
          <i class="fa fa-calendar"></i> &nbsp; <%= @share_capital.updated_at.strftime("%B %e, %Y") %>
        </div>

      </div>
    <hr />
     <div class="box-body">
         <p class="text-muted">TRANSACTIONS HISTORY</p>
         <div class="table table-responsive">
            <table class="table table-hover table-striped">
              <thead>
                <tr>
                  <th> Date </th>
                  <th>Reference Number</th>
                  <th> Amount </th>
                  <th> Description</th>
                  <th> Employee </th>
                </tr>
              </thead>
              <tbody>
                <% @entries.each do |entry| %>
                  <tr>
                    <td><%= entry.entry_date.strftime("%B %e, %Y") %></td>
                    <td><%= entry.reference_number %></td>
                    <td><%= number_to_currency entry.amount %></td>
                    <td><%= entry.description %></td>


                    <td><% if entry.recorder %>
                      <%=image_tag(entry.recorder.avatar.url(:thumb), class: "img-circle", height: 35, width: 35) %> &nbsp;
                      <%= entry.recorder.try(:name) %>
                      <% end %>
                     </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <center><%= will_paginate @entries %></center>
          </div>
        </div>
      </div>
    </div>
  </div>
