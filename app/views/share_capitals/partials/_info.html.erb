<div class="card-body">
  <div class="row">
    <div class="col-md-6">
      <div class="row justify-content-end">
        <div class="col-md-11">
          <div class="row">
            <div class="col-md-5">
              <label>Share Capital Product</label>
            </div>
            <div class="col-md-6">
              <b><%= @share_capital.share_capital_product_name.try(:upcase) %></b>
            </div>
          </div>
          <hr class="min-margin">
          <div class="row">
            <div class="col-md-5">
              <label>Subscriber</label>
            </div>
            <div class="col-md-6">
              <% if @share_capital.subscriber.is_a?(Member) %>
                <%=link_to @share_capital.subscriber_name, member_info_index_path(@share_capital.subscriber) %>
              <% elsif @share_capital.subscriber.is_a?(User) %>
                <%=link_to @share_capital.subscriber_name, employee_path(@share_capital.subscriber) %>
              <% elsif @share_capital.subscriber.is_a?(Organization) %>
                <%=link_to @share_capital.subscriber_name, organization_path(@share_capital.subscriber) %>
              <% end %>
            </div>
          </div>
          <hr class="min-margin">
          <div class="row">
            <div class="col-md-5">
              <label>Account Number</label>
            </div>
            <div class="col-md-6">
              <%= @share_capital.account_number %>
            </div>
          </div>
          <hr class="min-margin">
          <div class="row">
            <div class="col-md-5">
              <label>Paid Up Shares</label>
            </div>
            <div class="col-md-6">
              <%= number_to_currency @share_capital.paid_up_shares %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <hr class="min-margin set-visibility">
      <div class="row justify-content-end">
        <div class="col-md-7 col-sm-6 col-auto">
          <small>PAID UP BALANCE</small>
          <h3 class="card-title"><%= number_to_currency @share_capital.paid_up_balance %></h3>
          <br>
          <%= link_to 'New Capital Build Up', new_share_capital_capital_build_up_path(@share_capital), class: "btn btn-success" %>
        </div>
        <div class="col-md-4 col-sm-6 col-auto">
          <small>INACTIVITY</small>
          <h4 class="card-title"><%= @share_capital.number_of_days_inactive %> Days</h4>
          <br>
          <small>Last Transaction Date</small><br>
          <i class="fa fa-calendar"></i> &nbsp; <%= @share_capital.default_last_transaction_date.strftime("%b %e, %Y") %>
        </div>
      </div>
    </div>
  </div>
</div>
<hr class="no-margin">
<div class="card-body">
  <p class="text-muted">TRANSACTIONS HISTORY</p>
  <div class="table table-responsive">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th> Date </th>
          <th>Reference Number</th>
          <th> Amount </th>
          <th> Description</th>
          <th> Employee </th>
        </tr>
      </thead>
      <tbody>
        <% @entries.each do |entry| %>
          <%= render 'accounting_module/entries/partials/header', entry: entry %>
        <% end %>
      </tbody>
    </table>
    <center><%= will_paginate @entries %></center>
  </div>
</div>
