
    <div class="row">
      <div class="col-md-1 col-sm-1">
        <% if share_capital.subscriber.avatar.attachment.present? %>
          <%= image_tag(share_capital.subscriber.avatar, style: 'width:40px;height:40px;', class: 'media-object img-circle') %>
        <% end %>
      </div>
      <div class="col-md-4 col-sm-4">
        <%=link_to share_capital_path(share_capital) do %>
          <b><%= share_capital.subscriber_name.try(:upcase) %></b><br>
          <small class="text-muted">
            <i class="fa fa-server"></i> <%= share_capital.share_capital_product_name.try(:upcase) %>
          </small><br>
          <small class="text-muted">
            <i class="fa fa-clock"></i> <%= share_capital.default_last_transaction_date.strftime("%B %e, %Y") %>
          </small>
          <small class="text-muted">
            <i class="fa fa-building"></i> <%= share_capital.office_name%>
          </small>
        <% end %>
      </div>
      <div class="col-md-2 col-sm-2">
        <span class="badge bg-danger">
          <%= share_capital.number_of_days_inactive %> day/s inactive
        </span>
      </div>
      <div class="col-md-2 col-sm-2">
        <h4 class="card-title"><%=number_to_currency share_capital.balance %></h4>
        <small>PAID UP BALANCE</small>
      </div>
      <div class="col-md-3 col-sm-3">
         <% if policy([:share_capitals, :capital_build_up]).new? %>
          <%= link_to new_share_capital_capital_build_up_path(share_capital), data: { turbolinks: false } do %>
            <span class="btn btn-success float-right"><i class="fa fa-arrow-circle-down"></i> Add Capital </span>
          <% end %>
        <% end %>
      </div>
    </div>
