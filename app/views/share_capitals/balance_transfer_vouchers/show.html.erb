<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-header no-border">

        <h3 class="card-title"><i class="fa fa-info-circle"></i> Balance Transfer Transaction </h3>
        <br>
        <%= render 'vouchers/partials/alert_message' %>

        <h3 class="card-title"> Origin Account </h3>
        <div class="row">
          <div class="col-md-2 offset-md-1">
            <%= image_tag(@origin_share_capital.subscriber.avatar, height: 45, width: 45, class: "img-circle") %>
          </div>
          <div class="col-md-5">
            <%= @origin_share_capital.subscriber_name %>
          </div>
          <div class="col-md-4">
            <%= number_to_currency @origin_share_capital.paid_up_balance %>
          </div>
        </div>
        <h3 class="card-title"> Destination Account </h3>
        <div class="row min-margin">
          <div class="col-md-2 offset-md-1">
            <%= image_tag(@destination_share_capital.subscriber.avatar, height: 45, width: 45, class: "img-circle") %>
          </div>
          <div class="col-md-5">
            <%= @destination_share_capital.subscriber_name %>
          </div>
          <div class="col-md-4">
            <%= number_to_currency @destination_share_capital.paid_up_balance %>
          </div>
        </div>
        <hr>
        <div class="row min-margin">
          <div class="col-md-4 offset-md-1">
            Amount
          </div>
          <div class="col-md-4">
            <b><%= number_to_currency @voucher.voucher_amounts.for_account(account: @origin_share_capital.share_capital_product_paid_up_account).first.try(:amount) %></b>
          </div>
        </div>
      </div>
      <div class="card-body">
        <%= render 'vouchers/partials/body', voucher: @voucher %>
        <% if @voucher.accounting_entry.blank? %>
          <%= link_to "Confirm", share_capital_voucher_confirmations_path(share_capital_id: @origin_share_capital.id, voucher_id: @voucher.id), method: :post, class: "btn btn-primary float-right", data: { disable_with: "Processing..." } %>
          <%= link_to "Cancel", share_capital_voucher_path(share_capital_id: @origin_share_capital.id, voucher_id: @voucher.id), method: :delete, class: "btn text-danger float-left" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
