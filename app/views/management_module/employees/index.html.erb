<div class="content">
  <div class="row">
    <% User.all.order(:role).each do |employee| %>
      <%=link_to management_module_employee_path(employee) do %>
        <div class="col-md-4">
          <div class="box box-solid">
            <div class="box-body">
              <center>
                <%=image_tag(employee.avatar.url(:medium), height: 90, width: 90, class: "img-circle") %><br><br/>
                 <h3 class="profile-username text-center"><%= employee.first_and_last_name %> </h3>
                <p class="text-muted"><%= employee.role.titleize %></p>
              </center>
              
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>