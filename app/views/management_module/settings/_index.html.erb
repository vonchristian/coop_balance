
<div class="row">
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <nav class="nav flex-column nav-pills">
          <%= link_to 'General Info', management_module_settings_path, class: "nav-link #{'active' if current_page?(management_module_settings_path)}" %>
          <%= link_to 'Coop Products', management_module_settings_cooperative_products_path, class: "nav-link #{'active' if current_page?(management_module_settings_cooperative_products_path)}" %>
          <%= link_to 'Configurations', management_module_settings_configurations_path, class: "nav-link #{'active' if current_page?(management_module_settings_configurations_path)}" %>
          <%= link_to 'Data Migrations', management_module_settings_data_migrations_path, class: "nav-link #{'active' if current_page?(management_module_settings_data_migrations_path)}" %>
          <%= link_to 'Account Budgets', management_module_settings_account_budgets_path, class: "nav-link #{'active' if current_page?(management_module_settings_account_budgets_path)}" %>
        </nav>
      </div>
    </div>
  </div>
  <div class="col-md-9">
    <% if current_page? management_module_settings_path %>
      <%= render 'management_module/settings/partials/general_infos' %>
    <% end %>
    <% if current_page? management_module_settings_cooperative_products_path %>
      <%= render 'management_module/settings/partials/cooperative_products' %>
    <% end %>
    <% if current_page? management_module_settings_configurations_path %>
      <%= render 'management_module/settings/partials/configurations' %>
    <% end %>
    <% if current_page? management_module_settings_data_migrations_path %>
      <%= render 'management_module/settings/partials/data_migrations' %>
    <% end %>
    <% if current_page? management_module_settings_account_budgets_path %>
      <%= render 'management_module/settings/partials/account_budgets' %>
    <% end %>
  </div>
</div>
