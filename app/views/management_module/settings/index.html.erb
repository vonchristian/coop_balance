<div class="row">
  <div class="col-md-12">
    <div class="box box-danger">
      <div class="box-header">
        <h3 class="box-title">Settings </h3>
      </div>
      <div class="box-body">
        <div class="row">
          <div class="col-md-4">
            <p class="text-purple"> SHARE CAPITAL PRODUCTS </p>
          </div>
          <div class="col-md-4">
          </div>
          <div class="col-md-4">
            <%= link_to  new_management_module_share_capital_product_path do %>
              <span class="btn btn-default pull-right"><i class="fa fa-plus"></i> Add </span>
            <% end %>
          </div>
        </div>
<% @share_capital_products.each do |share_capital_product| %>
  <div class="row">
    <div class="col-md-5">
      &nbsp; &nbsp; <%= share_capital_product.name %>
    </div>
    <div class="col-md-3">
      <%= share_capital_product.cost_per_share %>
    </div>
    <div class="col-md-3">
      <%= link_to 'New Shares', new_management_module_share_capital_product_share_path(share_capital_product), class: "btn btn-warning" %>
    </div>
  </div>
  <br>
<% end %>
<hr>
<%= link_to 'New Time Deposit Product', new_management_module_time_deposit_product_path, class: "btn btn-primary" %>
<%= link_to 'New Program', new_management_module_program_path, class: "btn btn-primary" %>

<% @share_capital_products.each do |product| %>
  <% cache product do %>
    <%= product.name %>
    <%= number_to_currency product.share_capital_product_shares.total_shares, unit: '' %>
    <%#= number_to_currency product.subscribers, unit: '' %>
  <% end %>
<% end %>

