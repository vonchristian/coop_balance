<div class="row">
  <div class="col-md-12">
    <div class="box box-danger">
      <div class="box-header">
        <h3 class="box-title">Settings </h3>
      </div>
      <div class="box-body">
        <div class="row">
          <div class="col-md-4">
            <p class="text-purple"> SHARE CAPITAL PRODUCTS </p>
          </div>
          <div class="col-md-4">
          </div>
          <div class="col-md-4">
            <%= link_to  new_management_module_share_capital_product_path do %>
              <span class="btn btn-default pull-right"><i class="fa fa-plus"></i> Add </span>
            <% end %>
          </div>
        </div>
<% @share_capital_products.each do |share_capital_product| %>
  <div class="row">
    <div class="col-md-5">
      &nbsp; &nbsp; <%= share_capital_product.name %>
    </div>
    <div class="col-md-3">
      <%= share_capital_product.cost_per_share %>
    </div>
    <div class="col-md-3">
      <%= link_to 'New Shares', new_management_module_share_capital_product_share_path(share_capital_product), class: "btn btn-warning" %>
    </div>
  </div>
  <br>
<% end %>
<hr>
<% @time_deposit_products.each do |time_deposit_product| %>
  <%= link_to time_deposit_product.name, management_module_settings_time_deposit_product_path(time_deposit_product) %>
<% end %>
<hr>
<%= link_to 'New Time Deposit Product', new_management_module_settings_time_deposit_product_path, class: "btn btn-primary" %>
<%= link_to 'New Program / Fees', new_management_module_program_path, class: "btn btn-primary" %>



<%= link_to 'Set Grace Period', new_management_module_grace_period_path %>
<%= link_to 'New Employee', new_user_registration_path %>
<%#= link_to "New Committee", new_management_module_committee_path %>
<%= link_to 'Update Cooperative Details', edit_management_module_settings_cooperative_path(@cooperative), class: "btn btn-warning" %>
<%= link_to 'Set Savings Accounts Configuration', new_management_module_settings_savings_account_config_path, class: "btn btn-danger" %>
<%= link_to current_user.cooperative_name, management_module_settings_cooperative_path(current_user.cooperative) %>

<%= simple_form_for @savings_registry, url: :management_module_savings_account_registries do |f| %>
  <%= f.input :spreadsheet %>
  <%= f.input :employee_id, input_html: { value: current_user.id } %>
  <%= f.submit "Upload Savings" %>
<% end %>



<%= simple_form_for Registries::ShareCapitalRegistry.new, url: :management_module_share_capital_registries do |f| %>
  <%= f.input :spreadsheet, label: 'Share Capital Registry' %>
  <%= f.input :employee_id, input_html: { value: current_user.id } %>
  <%= f.submit %>
<% end %>

<%= link_to 'New Store Front', new_management_module_settings_store_front_path %>
<hr>
<% @programs.each do |program| %>
  <%= program.description %>
  <%= program.contribution %>
  <%= program.account.name %>
<% end %>
<hr>
</div>
</div>
</div>

<div class="row">
  <div class="col-md-4">
    <div class="box box-danger">
      <div class="box-header">
        <div class="row">
          <div class="col-md-6">
            <h3 class="box-title"> Savings Products</h3>
          </div>
          <div class="col-md-6">
            <%= link_to new_management_module_saving_product_path do  %>
            <span class="btn btn-danger btn-xs pull-right" data-toggle="tooltip" title="New Savings Product"><i class="fa fa-plus"></i> New </span>
            <% end %>
          </div>
        </div>
      </div>
      <div class="box-body">
      <% CoopServicesModule::SavingProduct.all.each do |saving_product| %>
        <%= saving_product.name %>
      </div>
      <% end %>
    </div>
  </div>
<div class="col-md-4">
  <div class="box box-danger">
    <div class="box-header">
      <div class="row">
        <div class="col-md-6">
          <h3 class="box-title"> Store Fronts</h3>
        </div>
        <div class="col-md-6">
          <%= link_to new_management_module_settings_store_front_path do  %>
          <span class="btn btn-danger btn-xs pull-right" data-toggle="tooltip" title="New Savings Product"><i class="fa fa-plus"></i> New </span>
          <% end %>
        </div>
      </div>
    </div>
    <div class="box-body">
    <% StoreFront.all.each do |store_front| %>
      <%= store_front.name %>
    </div>
    <% end %>
  </div>
</div>
</div>
<hr>
<%= simple_form_for Registries::LoanRegistry.new, url: :management_module_loan_registries do |f| %>
  <%= f.input :spreadsheet %>
  <%= f.input :employee_id, input_html: { value: current_user.id } %>
  <%= f.submit %>
<% end %>
