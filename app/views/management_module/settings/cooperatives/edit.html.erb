<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Edit Cooperative Details </h3>
      </div>
      <div class="card-body">
        <center>
          <% if @cooperative.logo.attachment.present? %>
            <%= image_tag(@cooperative.logo, width: 200, height: 200) %>
          <% end %>
        </center>
        <%= simple_form_for @cooperative, url: :management_module_settings_cooperative do |f| %>
          <%= f.input :logo %>
          <%= f.input :name %>
          <%= f.input :abbreviated_name %>

          <%= f.input :registration_number %>
          <%= f.input :address %>
          <%= f.input :contact_number %>
          <hr>
          <%= f.submit "Save Cooperative Details", class: "btn btn-primary float-right", data: { disable_with: "Processing..." } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
