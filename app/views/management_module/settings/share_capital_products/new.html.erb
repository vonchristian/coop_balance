<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-purple">
      <div class="box-header">
        <h3 class="box-title">New Share Capital Product Details </h3>
      </div>
      <div class="box-body">
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <%= simple_form_for @share_capital_product, url: :management_module_share_capital_products do |f| %>
              <%= f.error_notification %>
              <%= f.input :name %>
              <%= f.input :minimum_number_of_subscribed_share %>
              <%= f.input :minimum_number_of_paid_share %>
              <%= f.input :cost_per_share %>
              <%= f.input :default_product %>
              <%= f.input :paid_up_account_id, collection: AccountingModule::Account.all.map{|a| [a.name.titleize, a.id] } %>
               <%= f.input :subscription_account_id, collection: AccountingModule::Account.all.map{|a| [a.name.titleize, a.id] } %>
              <div class="box-footer">
                <%= f.submit "Create Share Capital Product", class: "btn btn-primary pull-right" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $("#coop_services_module_share_capital_product_paid_up_account_id").select2({
      theme: "bootstrap"
    });
     $("#coop_services_module_share_capital_product_subscription_account_id").select2({
      theme: "bootstrap"
    });
  });
</script>

