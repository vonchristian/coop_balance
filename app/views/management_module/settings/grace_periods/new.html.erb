<div class="modal-header">
  <h4 class="modal-title card-title" id="mainModalLabel">
    New Grace Period
  </h4>
  <button type="button" class="close float-right" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
</div>
<%= simple_form_for @grace_period, html: { autocomplete: "off", data: { modal: true } }, remote: request.xhr?, url: :management_module_grace_periods do |f| %>
	<div class="modal-body">
		<%= f.error_notification %>
	  <%= f.input :number_of_days %>
	</div>
	<div class="modal-footer">
	  <%= f.submit "Save Grace Period", class: "btn btn-danger float-right", data: { disable_with: "Processing..." } %>
	</div>
<% end %>