<%= simple_form_for @program, url: :management_module_programs do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :contribution, label: "Amount" %>
  <%= f.input :default_program %>
  <%= f.input :payment_schedule_type, collection: CoopServicesModule::Program.payment_schedule_types.keys.to_a.map{|a| [a.titleize, a] }, as: :radio_buttons %>
  <%= f.input :account_id, collection: AccountingModule::Account.all.map{|a| [a.name, a.id] }, input_html: { id: 'programAccountSelect' } %>
  <%= f.submit "Create Program", class: "btn btn-primary" %>
<% end %>

<script type="text/javascript">
  $(document).ready(function() {
    $("#programAccountSelect").select2({
      theme: "bootstrap"
    });
  });
</script>
