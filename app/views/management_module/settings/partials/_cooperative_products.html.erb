<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-md-9">
            <h3 class="card-title"> Share Capital Products </h3>
          </div>
          <div class="col-md-3">
            <%= link_to  new_management_module_share_capital_product_path do %>
              <span class="btn btn-outline-danger btn-sm float-right"><i class="fa fa-plus-circle"></i> New </span>
            <% end %>
          </div>
        </div>
      </div>
      <div class="card-body">
        <table class="table">
          <tbody>
            <% @share_capital_products.each do |share_capital_product| %>
              <tr>
                <td>Name</td>
                <td><%= share_capital_product.name %></td>
              </tr>
              <tr>
                <td><p>Cost Per Share</p></td>
                <td><%= number_to_currency share_capital_product.cost_per_share %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
            <!-- <div class="col-md-3"> -->
              <%#= link_to 'New Shares', new_management_module_share_capital_product_share_path(share_capital_product), class: "btn btn-warning btn-sm" %>
            <!-- </div> -->
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-md-9">
            <h3 class="card-title"> Time Deposit Products </h3>
          </div>
          <div class="col-md-3">
            <%= link_to new_management_module_settings_time_deposit_product_path do %>
              <span class="btn btn-outline-danger btn-sm float-right" title="New Time Deposit Product" data-toggle="tooltip">
                <i class="fa fa-plus-circle"></i> New
              </span>
            <% end %>
          </div>
        </div>
      </div>
      <div class="card-body">
        <% @time_deposit_products.each do |time_deposit_product| %>
          <%= link_to time_deposit_product.name, management_module_settings_time_deposit_product_path(time_deposit_product) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-md-6">
            <h3 class="card-title">Loan Products</h3>
          </div>
          <div class="col-md-6">
            <%= link_to new_management_module_settings_loan_product_path do  %>
              <span class="btn btn-outline-danger btn-sm float-right" data-toggle="tooltip" title="New Loan Product"><i class="fa fa-plus-circle"></i> New </span>
            <% end %>
          </div>
        </div>
      </div>
      <div class="card-body">
        
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-md-6">
            <h3 class="card-title"> Savings Products</h3>
          </div>
          <div class="col-md-6">
            <%= link_to new_management_module_saving_product_path do  %>
              <span class="btn btn-outline-danger btn-sm float-right" data-toggle="tooltip" title="New Savings Product"><i class="fa fa-plus-circle"></i> New </span>
            <% end %>
          </div>
        </div>
      </div>
      <div class="card-body">
        <% CoopServicesModule::SavingProduct.all.each do |saving_product| %>
          <%= saving_product.name %>
        <% end %>
      </div>
    </div>
  </div>
</div>