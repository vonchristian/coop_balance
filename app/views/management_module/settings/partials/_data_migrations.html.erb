<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"> Savings Accounts </h3>
        <p class="text-muted"> Migrate Savings Accounts from your Excel spreadsheet </p>
      </div>
      <div class="card-body">
        <%= simple_form_for @savings_registry, url: :management_module_savings_account_registries do |f| %>
          <div class="row">
            <div class="col-md-9">
              <%= f.input :spreadsheet, label: false %>
              <%= f.input :employee_id, input_html: { value: current_user.id }, as: :hidden %>
            </div>
            <div class="col-md-3">
              <%= button_tag(class: "btn btn-sm btn-outline-danger float-right", id:"s-upload") do %>
                <span><i class="fa fa-arrow-alt-circle-up"></i> Upload</span>
