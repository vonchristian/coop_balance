<div class="card">
  <div class="card-header">
    <h3 class="card-title"> New Interest Configuration Details </h3>
  </div>
  <div class="card-body">
    <%= simple_form_for [@loan_product, @interest_configuration], url: :management_module_settings_loan_product_interest_configurations do |f| %>
      <%= f.input :rate %>
      <%= f.input :interest_revenue_account_id, collection: AccountingModule::Revenue.all.map{|a| [a.name, a.id] } %>
      <%= f.input :unearned_interest_income_account_id, collection: AccountingModule::Asset.all.map{|a| [a.name, a.id] } %>
      <%= f.input :calculation_type, collection: LoansModule::LoanProducts::InterestConfig.calculation_types.keys.to_a.map{ |a| [a.titleize, a] }, as: :radio_buttons %>
      <%= f.input :prededuction_type, collection: LoansModule::LoanProducts::InterestConfig.prededuction_types.keys.to_a.map{ |a| [a.titleize, a] }, as: :radio_buttons %>
      <%= f. input :prededucted_rate %>


      <%= f.submit "Save Interest Configuration" %>
    <% end %>
  </div>
</div>
