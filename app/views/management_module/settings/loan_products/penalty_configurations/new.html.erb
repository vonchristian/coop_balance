<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"> New Penalty Rate Details </h3>
      </div>
      <div class="card-body">
        <%= simple_form_for [@loan, @penalty_config], url: :management_module_settings_loan_product_penalty_configurations do |f| %>
          <%= f.input :rate %>

          <%= f.input :penalty_revenue_account_id, collection: AccountingModule::Account.all.map{|a| [a.name, a.id] } %>
          <hr>
          <%= link_to "Cancel", management_module_settings_cooperative_products_path, class: 'btn btn-default' %>
          <%= f.submit "Save Penalty Rate", class: "btn btn-primary float-right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
     $("#loans_module_loan_products_penalty_config_penalty_revenue_account_id").select2({
      theme: "bootstrap"
    });
  });
</script>
