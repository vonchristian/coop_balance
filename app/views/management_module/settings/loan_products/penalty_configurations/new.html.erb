<div class="modal-header">
  <h4 class="modal-title card-title" id="mainModalLabel">
    Penalty Rate - <span class="text-muted"><%= @loan_product.name %></span>
  </h4>
  <button type="button" class="close float-right" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
</div>
<%= simple_form_for [@loan, @penalty_config], html: { autocomplete: "off", data: { modal: true } }, remote: request.xhr?, url: :management_module_settings_loan_product_penalty_configurations do |f| %>
  <div class="modal-body">
    <%= f.input :rate %>
    <%= f.input :penalty_revenue_account_id, collection: AccountingModule::Account.all.map{|a| [a.name, a.id] } %>
  </div>
  <div class="modal-footer">
    <%= f.submit "Save Penalty Rate", class: "btn btn-danger float-right" %>
  </div>
<% end %>
<script type="text/javascript">
  $(document).ready(function() {
     $("#loans_module_loan_products_penalty_config_penalty_revenue_account_id").select2({
      theme: "bootstrap"
    });
  });
</script>
