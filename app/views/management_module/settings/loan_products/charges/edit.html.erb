<div class="card">
  <div class="card-header">
    <h3 class="card-title"> New Interest Configuration Details </h3>
  </div>
  <div class="card-body">
    <%= simple_form_for [@loan_product, @charge], url: :management_module_settings_loan_product_charge do |f| %>
      <%= f.input :percent %>
      <%= f.input :amount %>
      <%= f.input :account_id %>
      <%= f.submit "Update Charge", class: "btn btn-danger float-right" %>
    <% end %>
