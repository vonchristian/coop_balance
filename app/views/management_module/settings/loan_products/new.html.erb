<div class="card card-outline card-danger">
  <div class="card-header">
    <h3 class="card-title"> Loan Product Details </h3>
  </div>
  <div class="card-body">
<%= simple_form_for @loan_product, html: { autocomplete: "off", data: { modal: true } }, remote: request.xhr?, url: :management_module_settings_loan_products do |f| %>
  <div class="modal-body">
    <%= f.error_notification %>
    <%= f.input :cooperative_id, input_html: { value: current_user.cooperative.id }, as: :hidden %>
    <%= f.input :name %>
    <%= f.input :description, as: :text %>
    <%= f.input :maximum_loanable_amount,  as: :currency, input_html: { style: "width:100%" } %>
    <%= f.input :grace_period %>

    <%= f.input :current_account_id, label: "Select Loans Receivable (Current) Account", collection: current_cooperative.accounts.assets.active.all.map{|a| [a.name.titleize, a.id] }, input_html: { id: 'loanAccountSelect'} %>
    <%= f.input :past_due_account_id, label: "Select Loans Receivable (Past Due) Account", collection: current_cooperative.accounts.assets.active.all.map{|a| [a.name.titleize, a.id] } %>
    <h4 class="card-title">Interest Configuration</h4>
    <div class="min-margin"></div>
    <%= f.input :interest_rate, label: "Annual Interest Rate (APR):" %>
    <%= f.input :unearned_interest_income_account_id,  collection: current_cooperative.accounts.assets.active.all.map{|a| [a.name, a.id] } %>
    <%= f.input :interest_revenue_account_id,  collection: current_cooperative.accounts.revenues.active.all.map{|a| [a.name, a.id] } %>
    <%= f.input :interest_calculation_type, collection: LoansModule::LoanProducts::InterestConfig.calculation_types.keys.to_a.map{|a| [a.titleize, a] } %>
    <h4>Penalty Configuration</h4>
    <%= f.input :penalty_rate %>
    <%= f.input :penalty_revenue_account_id,  collection: current_cooperative.accounts.revenues.active.all.map{|a| [a.name, a.id] } %>
    <%= f.input :loan_protection_plan_provider_id,  collection: current_cooperative.loan_protection_plan_providers.all.map{|a| [a.business_name, a.id] } %>
    <%= f.input :amortization_type_id,  collection: LoansModule::AmortizationType.all.map{|a| [a.calculation_type, a.id] } %>

  </div>
  <div class="modal-footer">
    <%= f.submit "Create Loan Product", class: "btn btn-danger float-right", data: { disable_with: "Processing..." } %>
  </div>
<% end %>
