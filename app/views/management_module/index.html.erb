  <div class="row">
    <div class="col-md-5">
      <div class="box box-solid">
        <div class="box-header">
          <h3 class="box-title">Cash on Hand </h3>
        </div>
        <div class="box-body">
          <% User.with_cash_on_hands.each do |employee| %>
            <div class="row">
              <div class="col-md-2">
                <%= image_tag(employee.avatar.url(:medium), class: "img-circle", height: 45, width: 45) %>
              </div>
              <div class="col-md-6">
                <h4 class="condensed-text"><%= employee.first_and_last_name %></h4>
                <%= employee.role %>
              </div>
              <div class="col-md-3">
                <%= number_to_currency employee.cash_on_hand_account.balance(recorder_id: employee.id) %>
              </div>
            </div>
            <br>
        <% end %>
        <hr />
        <div class="row">
          <div class="col-md-2">
          </div>
          <div class="col-md-6">
            <%= AccountingModule::Account.find_by(name: "Cash on Hand (Vault)").name %>
          </div>
          <div class="col-md-3">
            <%= number_to_currency AccountingModule::Account.find_by(name: "Cash on Hand (Vault)").balance %>
          </div>
        </div>
        <hr />
        <div class="row">
          <div class="col-md-2">
          </div>
          <div class="col-md-6">
            <%= AccountingModule::Account.find_by(name: "Cash in Bank").name %>
          </div>
          <div class="col-md-3">
            <%= number_to_currency AccountingModule::Account.find_by(name: "Cash in Bank").balance %>
          </div>
        </div>
      </div>
    </div>
  </div>
<div class="col-md-4">
  <div class="box box-success">
    <div class="box-header">
      <h3 class="box-title">Income </h3>
      <h3><%= number_to_currency AccountingModule::Revenue.balance %></h3>
    </div>
    <div class="box-header">
      <h3 class="box-title">Expenses </h3>
      <h3><%= number_to_currency AccountingModule::Expense.balance %></h3>
    </div>
  </div>