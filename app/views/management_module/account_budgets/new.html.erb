<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"> Budget Details </h3>
      </div>
      <div class="card-body">
        <%=form_tag new_management_module_account_budget_path, class: "sidebar-form", method: :get do %>
          <div class="input-group">
            <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Account Name", id: 'account-search-form' %>
            <span class="input-group-btn">
              <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
                <i class="fa fa-search"></i>
              <% end %>
            </span>
          </div>
        <% end %>
      </div>
      <hr class="no-margin">
      <% @accounts.each do |account| %>
        <div class="card-body">
          <%= simple_form_for @account_budget, url: :management_module_account_budgets do |f| %>
            <%= f.input :account_id, input_html: { value: account.id }, as: :hidden %>
            <div class="row">
              <div class="col-md-4">
                <%= account.name %>
              </div>
              <div class="col-md-2">
                <%= f.input :year, label: false, placeholder: "Year" %>
              </div>
              <div class="col-md-4">
                <%= f.input :proposed_amount, label: false, placeholder: "Proposed Amount", as: :currency %>
              </div>
              <div class="col-md-2">
                <%= f.submit "Set Budget", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
        <hr class="no-margin">
      <% end %>
      <center><%= will_paginate @accounts %></center>
    </div>
  </div>
</div>
