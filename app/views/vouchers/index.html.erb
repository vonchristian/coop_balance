<div class="row">
  <div class="col-md-12">
    <div class="box box-default">
      <div class="box-header">
        <h3 class="box-title"> Vouchers </h3>
      </div>
      <div class="box-body">
        <div class="table table-responsive">
          <table class="table table-hover table-striped">
            <thead>
              <tr>
                <th>Date</th>
                <th>#</th>
                <th>Amount</th>
                <th>Type</th>
                <th> Payee</th>
              </tr>
            </thead>
            <tbody>
              <% @vouchers.each do |voucher| %>
                <tr>
                  <td></td>
                  <td><%= voucher.number %></td>
                  <td><%=number_to_currency voucher.amount %></td>
                  <td><%= voucher.voucherable_type %></td>
                  <td><%= voucher.payee.try(:name) %></td>
                  <td><%= link_to 'Disburse', new_voucher_disbursement_path(voucher), class: "btn btn-primary btn-sm" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>