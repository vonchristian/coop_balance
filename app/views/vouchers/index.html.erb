<div class="row">
  <div class="col-md-12">
    <div class="box box-default">
      <div class="box-header">
        <div class="row">
          <div class="col-md-3">
            <h3 class="box-title"> Vouchers </h3>
          </div>
          <div class="col-md-6">
            <%=form_tag vouchers_path, method: :get do %>
              <div class="input-group">
                <%= text_field_tag :search, params[:search],  autofocus: true, class: "form-control", placeholder: "Search for Number, Description", id: 'account-search-form' %>
                <span class="input-group-btn">
                  <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
                    <i class="fa fa-search"></i>
                  <% end %>
                </span>
              </div>
            <% end %>
          </div>
        </div>

      </div>
      <div class="box-body">
        <div class="table table-responsive">
          <table class="table table-hover table-striped">
            <thead>
              <tr>
                <th>Date</th>
                <th>Amount</th>
                <th>Description</th>
                <th> Payee</th>
              </tr>
            </thead>
            <tbody>
              <% @vouchers.each do |voucher| %>
                <tr>
                  <td><%= voucher.date.strftime("%B %e, %Y") %></td>
                  <td>
                    <% if voucher.for_employee? %>
                      <%= number_to_currency voucher.voucher_amounts.sum(&:amount) %>
                    <% else %>
                      <%= number_to_currency voucher.payable_amount %>
                    <% end %>
                  </td>
                  <td><%=link_to voucher.description, voucher %></td>
                  <td><%= voucher.payee.try(:name) %></td>
                  <td>
                    <% if !voucher.disbursed? %>
                      <%= link_to 'Disburse', new_voucher_disbursement_path(voucher), class: "btn btn-primary btn-sm" %>
                    <% else %>
                      <span class="label bg-green"> Disbursed </span>
                    <% end %>
                    
                      </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>