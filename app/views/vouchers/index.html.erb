
<div class="card">
  <div class="card-header">
    <div class="row">
      <div class="col-md-3">
        <h3 class="card-title"> Vouchers </h3>
      </div>
      <div class="col-md-6">
        <%=form_tag vouchers_path, method: :get do %>
          <div class="input-group">
            <%= text_field_tag :search, params[:search],  autofocus: true, class: "form-control", placeholder: "Search for Number, Description", id: 'account-search-form' %>
            <span class="input-group-btn">
              <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
                <i class="fa fa-search"></i>
              <% end %>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% @vouchers.each do |voucher| %>
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-md-1 col-sm-1">
        </div>
        <div class="col-md-3 col-sm-3">
          <%= link_to voucher_path(voucher) do %>
            <%= voucher.payee.try(:name) %><br>
            <small class="text-muted">
              <i class="fa fa-clock"></i> <%= voucher.date.strftime("%B %e, %Y") %>
            </small>
          <% end %>
        </div>
        <div class="col-md-5 col-sm-5">
          <%= link_to voucher_path(voucher) do %>
            <p><%= voucher.description %></p>
            <p class="text-muted">#<%= voucher.reference_number %></p>
          <% end %>
        </div>
        <div class="col-md-3 col-sm-3">
          <% if !voucher.disbursed? %>
            <%= link_to 'Disburse', voucher_path(voucher), class: "btn btn-primary btn-sm" %>
            <%= link_to "Cancel", voucher_path(voucher), method: :delete, class: "btn text-danger" %>
          <% else %>
            <span class="badge bg-success"><i class="fa fa-check-circle"></i> Disbursed </span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
<center><%= will_paginate @vouchers %> </center>
