 <div class="row">
  <div class="col-md-6 col-md-offset-3">
<div class="box box-solid">
  <div class="box-header bg-gray">
    <div class="row">
      <div class="col-md-3">
         <%= image_tag(@voucher.voucherable.borrower.avatar.url(:thumb), style: 'width:60px;height:60px;', class: 'media-object img-circle') %>

      </div>
      <div class="col-md-9">
        <p><%= @voucher.voucherable.borrower_name.upcase %></p>
            <%=link_to 'Print(PDF)', voucher_path(@voucher, format: "pdf"), class: "btn btn-default btn-sm btn-flat active" %>
      </div>
    </div>
    </div>
    <div class="box-body">
    <div class="row">
    <div class="col-md-6">
      &nbsp; &nbsp; Loan Amount 
    </div>
    <div class="col-md-5">
      <span class="pull-right"> <%#= number_to_currency @voucher.voucherable.loan_amount %></span>
    </div>
  </div>
  <br>
  <p class="text-danger">LOAN CHARGES </p>
  <% @voucher.voucher_amounts.each do |amount| %>
    <div class="row">
      <div class="col-md-6">
        &nbsp; &nbsp; <%= amount.description %>
      </div>
      <div class="col-md-5">
          <span class="pull-right"> <%= number_to_currency amount.amount %></span>
      </div>
     
     
     </div>
     <br>
  <% end %>
  <hr>
  <div class="row">
    <div class="col-md-6">
      &nbsp; &nbsp; Net Proceed
    </div>
    <div class="col-md-5">
      <span class='pull-right'> <%= number_to_currency @voucher.payable_amount %></span>
    </div>
  </div>
  <br>