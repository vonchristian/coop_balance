<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-solid">
      <div class="box-header">
      </div>
      <div class="box-body">
        <div class="row">
          <div class="col-md-3">
            <%= image_tag(@voucher.voucherable.borrower.avatar.url(:medium), style: 'width:60px;height:60px;', class: 'media-object img-circle') %>
          </div>
          <div class="col-md-9">
            <p><%= @voucher.voucherable.borrower.name.upcase %></p>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-md-6">
            &nbsp; &nbsp; Loan Amount 
          </div>
          <div class="col-md-5">
            <span class="pull-right"> <%= number_to_currency @voucher.voucherable.loan_amount %></span>
          </div>
        </div>
        <br>
        <p class="text-danger">LOAN CHARGES </p>
        <% @voucher.voucherable.loan_charges.each do |loan_charge| %>
          <div class="row">
            <div class="col-md-6">
              &nbsp; &nbsp; <%= loan_charge.chargeable.name %>
            </div>
            <div class="col-md-5">
                <span class="pull-right"> <%= number_to_currency loan_charge.charge_amount_with_adjustment %></span>
            </div>
          </div>
          <br>
        <% end %>
        <hr>
        <div class="row">
          <div class="col-md-6">
            &nbsp; &nbsp; Net Proceed
          </div>
          <div class="col-md-5">
            <span class='pull-right'> <%= number_to_currency @voucher.payable_amount %></span>
          </div>
        </div>
        <br>
        <%= simple_form_for [@voucher, @disbursement], url: :voucher_disbursements do |f| %>
        <%= f.error_notification %>
        <%= f.input :voucher_id, input_html: { value: @voucher.id }, as: :hidden %>
        <%= f.input :voucherable_id, input_html: { value: @voucher.voucherable_id }, as: :hidden %>
        <%= f.input :amount, input_html: { value: @voucher.payable_amount }, as: :hidden %>
        <%= f.input :reference_number %>
        <%= f.input :date, label: "Date Disbursed", as: :string, input_html: { class: "datepicker" } %>
        <%= f.input :recorder_id, input_html: { value: current_user.id }, as: :hidden %>
        <div class="box-footer">
          <%= link_to 'Back', voucher_path(@voucher), class: "btn btn-default pull-left" %>
          <%= f.submit "Disburse Loan", class: "btn btn-primary pull-right" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
