<div class="card">
  <div class="card-header">
    <div class="row">
      <div class="col-md-6">
        <h3 class="card-title">Loans <%= @loan_aging_group.title %></h3>
       <%= link_to 'CSV', loans_module_loan_aging_group_loans_path(@loan_aging_group, format: 'csv', to_date: Date.current) %>
      </div>
      
    </div>
  </div>
</div>
<div class='card'>
  <div class='card-body'>
<div class='table table-responsive'>
  <table class='table table-hover'>
    <thead>
      <tr>
        <th> Loan Product </th>
        <th> Purpose </th>
        <th> Disbursement Date </th>
        <th> Maturity Date </th>
        <th> Disbursement # </th>
        <th> No. of Days Past Due </th>
        <th> Principal Balance </th>
      </tr>
    </thead>
    <tbody>
      <% @loans.each do |loan| %>
        <tr>
          <td><%= link_to loan.loan_product_name, loan_path(loan) %>
          <% if loan.paid? %>
            <span class='badge bg-success'> PAID </span>
          <% end %>
          </td>
          <td><%= loan.purpose %></td>
          <td><%= loan.disbursement_date.try(:strftime, ('%b. %e, %Y')) %></td>
          <td><%= loan.maturity_date.try(:strftime, ('%b. %e, %Y')) %></td>
          <td><%= loan.disbursement_voucher_reference_number %></td>
          <td><%= loan.number_of_days_past_due %></td>
          <td><%= number_to_currency loan.principal_balance %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<center><%==pagy_bootstrap_nav(@pagy) %></center>
