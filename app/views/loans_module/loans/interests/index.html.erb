<%= render 'loans/partials/header', loan: @loan %>
<div class="card">
  <div class="card-body">
    <p>INTEREST ON LOAN DETAILS </p>
    <div class="row">
      <div class="col-md-3">
        <small>INTERESTS</small>
        <h3 class="card-title number"><%= number_to_currency @loan.total_loan_interests %></h3><br>
        <%=link_to 'New Interest', new_loans_module_loan_interest_posting_path(@loan), class: "btn btn-sm btn-outline-danger", data: { modal: true } %>

      </div>
      <div class="col-md-3">
        <small>DISCOUNTS</small>
        <h3 class="card-title number"><%= number_to_currency @loan.total_interest_discounts %></h3>
        <p></p>
        <%=link_to 'New Discount', new_loans_module_loan_loan_interest_discount_path(@loan), class: "btn btn-outline-warning btn-sm", data: { modal: true } %>

      </div>
      <div class="col-md-3">
        <small>PAYMENTS</small>
        <h3 class="card-title number"><%= number_to_currency @loan.total_interest_payments %></h3>
      </div>
      <div class="col-md-3">
        <small>BALANCE</small>
        <h3 class="card-title number"><%= number_to_currency @loan.loan_interests_balance %></h3>
      </div>
    </div>
    <hr>
    <p class="text-muted">Computations History </p>
      <div class="table table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Date</th>
              <th>Description </th>
              <th> Employee </th>
              <th> Amount </th>
            </tr>
          </thead>
          <tbody>
            <% @loan.loan_interests.each do |interest| %>
              <tr>
                <td><%= interest.date.strftime("%B %e, %Y") %></td>
                <td><%= interest.description %></td>
                <td><%= interest.employee_name %></td>
                <td><%= number_to_currency interest.amount %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
