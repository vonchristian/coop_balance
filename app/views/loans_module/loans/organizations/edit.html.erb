<div class="modal-header">
  <h4 class="modal-title card-title" id="mainModalLabel">
    Set Organization
  </h4>
  <button type="button" class="close float-right" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
</div>
<%= simple_form_for @loan, html: { autocomplete: "off", data: { modal: true } }, remote: request.xhr?, url: :loans_module_loan_organization do |f| %>
	<div class="modal-body">
  	<%= f.input :organization_id, collection: Organization.all.map{|a| [a.name, a.id] } %>
  </div>
  <div class="modal-footer">
  	<%= f.submit "Save Organization", class: "btn btn-danger" %>
  </div>
<% end %>
