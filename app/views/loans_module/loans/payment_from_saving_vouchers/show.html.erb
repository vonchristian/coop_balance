<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-header bg-light">
        <div class="row">
          <div class="col-md-6">
            <h3 class="card-title"> Payment from Savings Details </h3>
          </div>
          <div class="col-md-6">
            <%=link_to 'View (PDF)', voucher_path(@voucher, format: "pdf"), class: "btn btn-default float-right" %>
          </div>
        </div>
      </div>
        <div class="card-body">

        <%= render 'vouchers/partials/alert_message', voucher: @voucher %>
      <%= render 'vouchers/partials/body', voucher: @voucher %>
      <% if !@voucher.disbursed?%>
          <%= button_to "Confirm Transaction", loans_module_loan_payment_confirmations_path(voucher_id: @voucher.id, loan_id: @loan.id), method: :post, class: "btn btn-primary float-right", data: { disable_with: "Processing..." } %>
          <%= button_to "Cancel", loans_module_loan_payment_voucher_path(id: @voucher.id, loan_id: @loan.id), method: :delete, class: "btn text-danger float-left" %>
        </div>
      <% else %>
        <%= render 'vouchers/partials/status', voucher: @voucher %>
      <% end %>
    </div>
  </div>
</div>
