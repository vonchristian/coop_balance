<div class="tab-pane" id="loan-disbursement">
  Loan Disbursement

  <% if @loan.cash_disbursement_voucher.present? %>
                <%= link_to 'Print CDV', loans_module_loan_disbursement_voucher_path(@loan, format: 'pdf') %>
              <% else %>
                <%= link_to "Disbursement Voucher", new_loans_module_loan_disbursement_voucher_path(@loan), class: "btn btn-primary btn-xs" %>
              <% end %>
              <% if !@loan.disbursed? %>
                Disbursement
                <%= link_to "Disburse", new_loans_module_loan_disbursement_path(@loan), class: "btn btn-primary btn-xs" %>
              <% end %>
             <hr>
 <% @loan.loan_charges.each do |loan_charge| %>
				  <div class="row">
				    <div class="col-md-3">
					    <%= loan_charge.chargeable.name %>
					  </div>
					  <div class="col-md-3">
					    <% if loan_charge.charge_adjustment %>
					    <strike class="text-danger"><%= number_to_currency loan_charge.charge_amount %></strike><br>
					    <%= number_to_currency loan_charge.charge_adjustment.charge_amount %>
					    <span class="text-danger"><%= number_to_currency loan_charge.balance %></span>
					    <% else %>
					      <%= number_to_currency loan_charge.charge_amount %>

					    <% end %>
					  </div>
					  <div class="col-md-3">
					    <%= loan_charge.credit_account_name %>
					  </div>
					  <div class="col-md-3">
					    <%= link_to 'Adjust', new_loans_module_loan_charge_adjustment_path(loan_charge), class: "btn btn-default btn-xs" %>
					  </div>
					 </div>
					 <br>
  
				<% end %>

</div>