<%= simple_form_for [@loan, @term_extension], url: :loans_module_loan_term_extensions do |f| %>
  <%= f.input :number_of_months %>
  <%= f.input :loan_id, input_html: { value: @loan.id } %>
  <%= f.input :employee_id, input_html: { value: current_user.id } %>
  <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
  <%= f.submit "Save Term Extension" %>
<% end %>
