<% content_for(:html_title) { "#{@loan.borrower_name} | New Term Extension" } %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"> New Term Extension Details </h3>
        <center>
          <%= image_tag(@loan.borrower.avatar, style: 'width:60px;height:60px;', class: 'media-object img-circle') %>
          <h3><%= @loan.borrower_name %></h3>
        </center>
      </div>
      <div class="card-body">
        <%= simple_form_for [@loan, @term_extension], url: :loans_module_loan_terms do |f| %>
          <%= f.input :term, label: "Number of Months:" %>
          <%= f.input :loan_id, input_html: { value: @loan.id }, as: :hidden %>
          <%= f.input :employee_id, input_html: { value: current_user.id }, as: :hidden %>
          <%= f.input :effectivity_date, as: :string, input_html: { class: "datepicker" } %>
          <div class="box-footer">
            <%= f.submit "Save Term Extension", class: "btn btn-danger pull-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
