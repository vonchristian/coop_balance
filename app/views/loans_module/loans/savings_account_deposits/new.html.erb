<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="card">
    <div class="card-header">
      <div class="row">
        <div class="col-md-3">
          <center><%= image_tag(@loan.borrower.avatar, style: 'width:80px;height:80px;', class: 'media-object img-circle') %></center>
        </div>
        <div class="col-md-9">
          <br>
          <h3 class="box-title"><%= @loan.borrower_name.upcase %></h3><br>
           <i class="fa fa-map-marker"></i> Address: <%= @loan.borrower.try(:current_address) %>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <h4><%= number_to_currency @savings_account.balance %></h4>
          <small class="text-muted"> <%= @savings_account.saving_product_name %> </small>
          <hr>
          <%= simple_form_for [@savings_account, @deposit], url: :loans_module_loan_savings_account_deposits do |f| %>
            <%= f.error_notification %>
            <%= f.input :amount %>
            <%= f.input :savings_account_id, input_html: { value: @savings_account.id } %>
            <%= f.input :loan_id, input_html: { value: @loan.id } %>

            <div class="box-footer">
              <%= f.submit "Add Deposit", class: "btn btn-primary float-right" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $("#charge_account_id").select2({
      theme: "bootstrap"
    });
  });
</script>
