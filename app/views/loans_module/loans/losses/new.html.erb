<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-danger">
      <div class="box-header">
        <h3 class="box-title"> Loan Loss Details </h3>
      </div>
      <div class="box-body">
        <center>
          <%= image_tag(@loan.borrower.avatar.url(:medium), class: "img-circle", height: 60, width: 60) %>
          <h4><%= @loan.borrower_name %></h4>
          <hr>
        </center>
        Date Disbursed: <%= @loan.disbursement_date %>
        Last Update: <%= @loan.updated_at.strftime("%B %e, %Y") %>
        Balance: <%= @loan.balance %>
        <%= simple_form_for [@loan, @loss], url: :loans_module_loan_losses do |f| %>
          <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
          <%= f.input :description, as: :text %>
          <%= f.input :reference_number %>
          <div class="box-footer">
            <%= f.submit "Set Loan as Loss", class: "btn btn-danger pull-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
