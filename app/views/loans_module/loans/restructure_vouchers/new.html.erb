Principal Balance <%= @loan.principal_balance %>
Interests <%= @loan.loan_interests_balance %>
Penalties <%= @loan.loan_penalties_balance %>
<%= simple_form_for [@loan, @restructuring], url: :loans_module_loan_restructure_vouchers do |f| %>
  <%= f.input :loan_amount %>
  <%= f.input :date_restructured, as: :string, input_html: { class: "datepicker" } %>
  <%= f.input :notes %>
  <%= f.submit "Restructure Loan", class: "btn btn-danger" %>
<% end %>
