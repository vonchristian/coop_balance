<div class="row">
  <div class="col-md-12">
    <div class="box box-solid">
      <div class="box-header">
        <%=link_to 'Back to Loan', loans_module_loan_application_path(@loan_charge.loan) %>
      </div>
      <div class="box-body">
        <%= @loan_charge.name %>
        <%= number_to_currency @loan_charge.amount %>
        <%= number_to_currency @loan_charge.charge_amount_with_adjustment %>
        <%#= link_to 'Equal Amortization', equal_amortization_loans_module_loan_charge_path(@loan_charge) %>
        <div class="row">
          <div class="col-md-6 col-md-offset-1">
            <div class="table table-responsive">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>Date</th>
                    <th>Amount</th>
                  </tr>
                </thead>
                <tbody>
                  <% @loan_charge.loan_charge_payment_schedules.each do |schedule| %>
                    <tr>
                      <% if schedule.date.present? %>
                      <td><%= schedule.date.strftime("%B %e, %Y") %></td>
                      <td><%= schedule.amount %></td>
                      <% end %>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
          <div class="col-md-3">
            <%= simple_form_for [@loan_charge, @payment_schedule], url: :loans_module_loan_charge_payment_schedules do |f| %>
              <%= f.input :date, as: :string, input_html: { class: 'datepicker' } %>
              <%= f.input :amount %>
              <%= f.input :loan_charge_id, input_html: { value: @loan_charge.id }, as: :hidden %>
              <%= f.input :loan_id, input_html: { value: @loan_charge.loan.id } %>
              <%= f.submit "Create" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
