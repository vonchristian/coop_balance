<div class='container'>
  <div class='card'>
    <div class='card-body'>
      <h3 class='title-up'> Loan Aging Portfolio </h3>
      <div class='table table-responsive'>
        <table class='table table-hover'>
          <thead>
          </thead>
          <tbody>
            <% @loan_aging_groups.each do |loan_aging_group| %>
              <tr>
                <td><%= loan_aging_group.title %></td>
                <td><%= loan_aging_group.loans.size %></td>
                <td><%#= number_to_currency loan_aging_group.total_balance %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>