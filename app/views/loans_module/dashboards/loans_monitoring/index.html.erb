<%=form_tag loans_module_dashboards_loans_monitoring_index_path, method: :get do %>
  <div class="input-group">
    <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Borrower name", id: 'sidebar-form' %>
    <span class="input-group-btn">
      <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-default btn-flat") do %>
        <i class="fa fa-search"></i> Search Loan
      <% end %>
    </span>
  </div>
<% end %>
<br>
<h3 class="card-title"> Loans Nearing Maturity </h3>
  next week
  next month
  this week
<div class="row">
  <div class="col-md-3">
    <div class="card">
      <div class="card-header">
        <small>CURRENT </small>
        <span class="badge bg-primary float-right"><%= current_office.loans.current_loan.count %> Loans</span>
        <h3 class="card-title">           <%= number_to_currency current_office.loans.current_loan.total_balance %></h3>
        <br>
        <span class="total number">
        </span>
      </div>
    </div>
    <% @loans.current_loan.each do |loan| %>
      <%= link_to loan_path(loan) do %>
      <span class="text-muted">
        <div class="card card-outline-left card-primary">
          <div class="card-body">
            <%= render 'loans/partials/headers/current_loan', loan: loan, cached: true %>
          </div>
        </div>
      </span>
      <% end %>
    <% end %>
  </div>
  <div class="col-md-3">
    <div class="card">
      <div class="card-header">
        <small>PAST DUE </small>
        <span class="badge bg-primary float-right"><%= current_office.loans.past_due.count %> Loans</span>
        <h3 class="card-title"><%= number_to_currency current_office.loans.past_due.total_balance %></h3>
        <br>
        <span class="total number">
        </span>
      </div>
    </div>
    <% @loans.past_due.each do |loan| %>
      <div class="card card-outline-left card-danger">
        <div class="card-body">
          <%= render 'loans/partials/headers/past_due', loan: loan, cached: true %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-md-3">
    <div class="card">
      <div class="card-header">
        <small>RESTRUCTURED </small>
        <span class="badge bg-primary float-right"><%= current_office.loans.restructured.count %> Loans</span>
        <h3 class="card-title"><%= number_to_currency current_office.loans.restructured.total_balance %></h3>
        <br>
        <span class="total number">
        </span>
      </div>
    </div>
    <% @loans.restructured.each do |loan| %>
      <div class="card card-outline-left card-warning">
        <div class="card-body">
          <%= render 'loans/partials/headers/restructured', loan: loan, cached: true %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-3">
    <div class="card">
      <div class="card-header">
        <small>IN LITIGATION </small>
        <span class="badge bg-secondary float-right"><%= current_office.loans.in_litigation.count %> Loans</span>
        <h3 class="card-title"><%= number_to_currency current_office.loans.in_litigation.total_balance %></h3>
        <br>
        <span class="total number">
        </span>
      </div>
    </div>
    <% @loans.in_litigation.each do |loan| %>
      <div class="card card-outline-left card-secondary">
        <div class="card-body">
          <%= render 'loans/partials/headers/in_litigation', loan: loan, cached: true %>
        </div>
      </div>
    <% end %>
  </div>
