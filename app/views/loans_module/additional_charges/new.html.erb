<%= simple_form_for [@loan, @additional_charge], url: :loans_module_loan_additional_charges do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :amount %>
  <%= f.input :account_id, collection: AccountingModule::Account.all.map{|a| [a.name.titleize, a.id] } %>
  <%= f.submit %>
<% end %>
