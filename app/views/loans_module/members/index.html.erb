
<div class="row">
  <div class="col-md-8">
    <div class="box box-solid">
      <div class="box-header">
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <%=form_tag loans_module_members_path, method: :get, class: "search-form" do %>
                <div class="input-group">
                  <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search First Name, Last Name ", id: 'account-search-form' %>
                  <span class="input-group-btn">
                    <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
                      <i class="fa fa-search"></i>
                    <% end %>
                  </span>
                </div>
              <% end %>
            </div>
          </div>
        <br>
      </div>
      <div class="box-body">
        
        <% @members.each do |member| %>
          <% cache member do %>
            <%= link_to loans_module_member_path(member) do %>
              <div class="row">
                <div class="col-md-2 col-md-offset-1">
                  <%= image_tag member.avatar_url, class: 'media-object img-circle', style: 'width:64px;height:64px;' %>
                </div>
                <div class="col-md-6">
                  <b><%= member.full_name.upcase %></b><br><br>
                  <span class="text-muted"> <i class="fa fa-phone"></i> <%= member.contact_number || 'None' %> &nbsp;</span>
                  <span class="text-muted"> <i class="fa fa-map-marker"></i> <%=member.current_address || 'Not Set' %></span>
              </div>
              </div>
              <hr>
            <% end %>
          <% end %>
        <% end %>


