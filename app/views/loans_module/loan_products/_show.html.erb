<div class="row">
  <div class="col-md-12">
    <div class="card">
    <div class="card-header">
      <h3 class="card-title"><%= @loan_product.name %></h3>
      <p class="text-muted"><%= @loan_product.description %></p>
      <%= link_to "Add Charges", new_loans_module_loan_product_loan_product_charge_path(@loan_product), class: "btn btn-outline-danger" %>
      <%= link_to "Interest Configuration", new_loans_module_loan_product_interest_configuration_path(@loan_product),class: "btn btn-outline-danger" %>
      <%= link_to "Penalty Configuration", new_loans_module_loan_product_penalty_configuration_path(@loan_product),class: "btn btn-outline-danger" %>
      <hr>
      <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item" <%= 'active' if current_page?(loans_module_loan_product_path(@loan_product))%>"><%= link_to 'Info', loans_module_loan_product_path(@loan_product), class: "nav-link" %></li>
             <li class="nav-item <%= 'active' if current_page?(loans_module_loan_product_loans_path(@loan_product))%>"><%= link_to 'Loans', loans_module_loan_product_loans_path(@loan_product), class: "nav-link" %></li>
          </ul>
    </div>
    <div class="card-body">


            <% if current_page? loans_module_loan_product_loans_path(@loan_product) %>
              <%= render 'loans_module/loan_products/partials/loans' %>
            <% end %>
            <% if current_page? loans_module_loan_product_path(@loan_product) %>
              <%= render 'loans_module/loan_products/partials/info' %>
            <% end %>


      </div>
    </div>
  </div>
</div>

