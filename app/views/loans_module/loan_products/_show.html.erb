<div class="row">
  <div class="col-md-12">
    <div class="card">
    <div class="card-header">
      <h3 class="card-title"><%= @loan_product.name %></h3>
      <p class="text-muted"><%= @loan_product.description %></p>

      <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item"><%= link_to 'Info', loans_module_loan_product_path(@loan_product), class: "nav-link #{'active' if current_page?(loans_module_loan_product_path(@loan_product))}" %></li>
             <li class="nav-item"><%= link_to 'Loans', loans_module_loan_product_loans_path(@loan_product), class: "nav-link #{'active' if current_page?(loans_module_loan_product_loans_path(@loan_product))}" %></li>
          </ul>
    </div>
    <div class="card-body">
            <% if current_page? loans_module_loan_product_loans_path(@loan_product) %>
              <%= render 'loans_module/loan_products/partials/loans' %>
            <% end %>
            <% if current_page? loans_module_loan_product_path(@loan_product) %>
              <%= render 'loans_module/loan_products/partials/info' %>
            <% end %>


      </div>
    </div>
  </div>
</div>

