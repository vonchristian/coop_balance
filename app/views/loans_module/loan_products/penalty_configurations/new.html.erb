<%= simple_form_for [@loan, @penalty_config], url: :loans_module_loan_product_penalty_configurations do |f| %>
  <%= f.input :rate %>
  <%= f.input :penalty_receivable_account_id, collection: AccountingModule::Account.all.map{|a| [a.name, a.id] } %>
  <%= f.input :penalty_revenue_account_id, collection: AccountingModule::Account.all.map{|a| [a.name, a.id] } %>
  <%= f.submit "Save" %>
<% end %>
