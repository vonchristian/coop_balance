<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-md-6">
            <h3 class="card-title">Loan Products </h3>
          </div>
          <div class="col-md-6">
            <span><%= link_to 'New Loan Product', new_loans_module_loan_product_path, class: "btn btn-primary pull-right" %></span>
          </div>
        </div>
      </div>
      <div class="card-body">
        <% @loan_products.each do |loan_product| %>
          <%= link_to loans_module_loan_product_path(loan_product) do %>
            <div class="row">
              <div class="col-md-6">
                <%= loan_product.name.try(:upcase) %>
              </div>
            </div>
            <br>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
