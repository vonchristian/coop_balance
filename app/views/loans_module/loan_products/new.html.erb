<%= simple_form_for @loan_product, url: :loans_module_loan_products do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :max_loanable_amount %>
  <%= f.input :interest_rate, label: "Interest Rate (in decimal)" %>
  
  <%= f.submit "Create Loan Product", class: "btn btn-primary btn-flat" %>
<% end %>
