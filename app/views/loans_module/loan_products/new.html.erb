<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-default">
      <div class="box-header">
        <h3 class="box-title">New Loan Product Details </h3>
      </div>
      <div class="box-body">
        <%= simple_form_for @loan_product, url: :loans_module_loan_products do |f| %>
          <%= f.error_notification %>
          <%= f.input :name %>
          <%= f.input :description, as: :text %>
          <%= f.input :maximum_loanable_amount,  as: :currency %>

          <%= f.input :loans_receivable_current_account_id, label: "Select Loans Receivable (Current) Account", collection: AccountingModule::Asset.all.map{|a| [a.name.titleize, a.id] }, input_html: { id: 'loanAccountSelect'} %>
          <%= f.input :loans_receivable_past_due_account_id, label: "Select Loans Receivable (Past Due) Account", collection: AccountingModule::Asset.all.map{|a| [a.name.titleize, a.id] }, input_html: { id: 'loanAccountSelect'} %>
          <h4>Interest Configuration</h4>
          <%= f.input :interest_rate %>
          <%= f.input :unearned_interest_income_account_id,  collection: AccountingModule::Asset.all.map{|a| [a.name, a.id] } %>
          <%= f.input :interest_revenue_account_id,  collection: AccountingModule::Revenue.all.map{|a| [a.name, a.id] } %>
          <%= f.input :interest_receivable_account_id,  collection: AccountingModule::Asset.all.map{|a| [a.name, a.id] } %>

          <h4>Penalty Configuration</h4>
          <%= f.input :penalty_rate %>
          <%= f.input :penalty_revenue_account_id,  collection: AccountingModule::Revenue.all.map{|a| [a.name, a.id] } %>
          <%= f.input :penalty_receivable_account_id,  collection: AccountingModule::Asset.all.map{|a| [a.name, a.id] } %>
          <%= f.input :penalty_discount_account_id,  collection: AccountingModule::Revenue.all.map{|a| [a.name, a.id] } %>







          <div class="box-footer">
            <%= f.submit "Create Loan Product", class: "btn btn-primary btn-flat" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $("#loanAccountSelect").select2({
      theme: "bootstrap"
    });
  });
  $(document).ready(function() {
    $("#loanInterestAccountSelect").select2({
      theme: "bootstrap"
    });
  });
  $(document).ready(function() {
    $("#loanPenaltyAccountSelect").select2({
      theme: "bootstrap"
    });
  });
</script>
