<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="box box-default">
      <div class="box-header">
        <h3 class="box-title">New Loan Product Details </h3>
      </div>
      <div class="box-body">
        <%= simple_form_for @loan_product, url: :loans_module_loan_products do |f| %>
          <%= f.error_notification %>
          <%= f.input :name %>
          <%= f.input :description, as: :text %>
          <%= f.input :max_loanable_amount, label: "Maximum Loanable Amount", as: :currency %>

          <%= f.input :account_id, label: "Select Loan Account", collection: AccountingModule::Asset.all.map{|a| [a.name.titleize, a.id] }, input_html: { id: 'loanAccountSelect'} %>
          <%= f.simple_fields_for :loan_product_interest do |ff| %>
            <%= ff.input :rate, label: "Interest Rate:", placeholder: 'e.g. 12' %>
            <%= ff.input :account_id, label: "Select Interest Account", collection: AccountingModule::Revenue.all.map{|a| [a.name.titleize, a.id] }, input_html: { id: 'loanProductInterestAccountSelect'} %>
          <% end %>
          <div class="box-footer">
            <%= f.submit "Create Loan Product", class: "btn btn-primary btn-flat" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $("#loanAccountSelect").select2({
      theme: "bootstrap"
    });
  });
  $(document).ready(function() {
    $("#loanProductInterestAccountSelect").select2({
      theme: "bootstrap"
    });
  });
</script>
