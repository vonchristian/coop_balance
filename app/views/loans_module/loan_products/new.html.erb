<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="box box-default">
      <div class="box-header">
        <h3 class="box-title">New Loan Product Details </h3>
      </div>
      <div class="box-body">
        <%= simple_form_for @loan_product, url: :loans_module_loan_products do |f| %>
          <%= f.error_notification %>
          <%= f.input :name %>
          <%= f.input :description, as: :text %>
          <%= f.input :max_loanable_amount, label: "Maximum Loanable Amount", as: :currency %>
          <%= f.input :interest_rate, label: "Interest Rate (Percent)" %>
          <%= f.input :account_id, collection: AccountingModule::Asset.all.map{|a| [a.name.titleize, a.id] } %>
          <div class="box-footer">
            <%= f.submit "Create Loan Product", class: "btn btn-primary btn-flat" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
