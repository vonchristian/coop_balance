 <hr>
      <div class="row">
        <div class="col-md-6">
          <h3 class="card-title"> Charges </h3>
        </div>
        <div class="col-md-6">
          <%= link_to "Add Charges", new_loans_module_loan_product_loan_product_charge_path(@loan_product), class: "btn btn-outline-danger btn-sm" %>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-md-6">
          <h3 class="card-title"> Interest Configuration </h3>
        </div>
        <div class="col-md-6">
          <%= link_to "Set Interest", new_loans_module_loan_product_interest_configuration_path(@loan_product),class: "btn btn-outline-danger btn-sm" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-md-6">
          Interest Rate
        </div>
        <div class="col-md-5">
          <%= @loan_product.current_interest_config_rate %>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-md-6">
          <h3 class="card-title"> Penalty Configuration </h3>
        </div>
        <div class="col-md-6">
          <%= link_to "Set Penalty", new_loans_module_loan_product_penalty_configuration_path(@loan_product),class: "btn btn-outline-danger" %>
        </div>
      </div>
      <hr>
<div class="row">
        <div class="col-md-6">

          <%= @loan_product.maximum_loanable_amount %>
          <p class="text-muted">LOAN CHARGES </p>
          <% @loan_product.charges.each do |charge| %>
            <div class="row">
              <div class="col-md-5 col-md-offset-1">
                <%= charge.name %><br>
                <%= charge.minimum_loan_amount %> -
                <%= charge.maximum_loan_amount %>
              </div>
              <div class="col-md-3">
                <%= number_to_currency charge.amount %>
                <% if charge.percent_type? %>
                  <%= charge.percent %> %
                <% end %>

                <% if charge.depends_on_loan_amount? %>
                  <span class="text-muted"> Depends on Loan Amount </span>
                <% end %>
              </div>
              <div class="col-md-2">

              </div>
            </div>
            <br />
          <% end %>
        </div>

