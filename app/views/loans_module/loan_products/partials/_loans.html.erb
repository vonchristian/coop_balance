<div class="tab-pane <%= 'active' if current_page?(loans_module_loan_product_loans_path(@loan_product)) %>" id="loan-product-loans">
  Loans
  <div class="table table-responsive">
    <div class="table table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Borrower</th>
                <th>Loan Amount</th>
                <th>Net Proceed</th>
                <th>Type</th>
                <th>Application Date</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% @loans.each do |loan| %>
                <tr data-link="<%=loan_path(loan)%>" class="myClass">
                  <td>
                    <% if loan.borrower.present? %>
                    <%= image_tag(loan.borrower.avatar.url(:thumb), class: "img-circle", height: 35, width: 35) %> &nbsp; <b><%=loan.borrower_name %></b>
                    <% end %>

                    </td>
                  <td><%= number_to_currency loan.loan_amount %></td>
                  <td><%= number_to_currency loan.net_proceed %></td>
                  <td><%= loan.loan_product_name %></td>
                  <td>
                    <%= loan.application_date.strftime("%B %e, %Y") %>

                    </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <center><%=will_paginate @loans %></center>
        </div>
      </div>
    </div>
</div>
<script type="text/javascript">
  $("tr").click(function() {
  window.location = $(this).data("link")
});
  $('.myClass').css('cursor', 'pointer');
</script>
<script type="text/javascript">
  $('.slider').slider()
</script>
