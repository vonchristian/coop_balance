<div class="tab-pane <%= 'active' if current_page?(loans_module_loan_product_loans_path(@loan_product)) %>" id="loan-product-loans">
  Loans
  <div class="table table-responsive">
    <div class="table table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Borrower</th>
                <th>Loan Amount</th>
                <th>Net Proceed</th>
                <th>Type</th>
                <th>Application Date</th>
              </tr>
            </thead>
            <tbody>
              <% @loans.each do |loan| %>
                <%= render 'loans/partials/header', loan: loan %>
              <% end %>
            </tbody>
          </table>
          <center><%=will_paginate @loans %></center>
        </div>
      </div>
    </div>
</div>
<script type="text/javascript">
  $("tr").click(function() {
  window.location = $(this).data("link")
});
  $('.myClass').css('cursor', 'pointer');
</script>
<script type="text/javascript">
  $('.slider').slider()
</script>
