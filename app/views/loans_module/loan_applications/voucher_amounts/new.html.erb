<% content_for :title, "New Charge Details" %>
<div class="modal-header">
  <center>
    <%= image_tag(@loan_application.avatar.variant(resize: '60x60'), class: "img-circle") if @loan_application.avatar.attached? %>
    <h5 class="modal-title"><%= @loan_application.borrower_name %></h5>
  </center>
</div>

<div class="modal-body">
  <%= simple_form_for [@loan_application, @charge], url: :loans_module_loan_application_voucher_amounts, html: { autocomplete: 'off' } do |f| %>
    <%= f.input :description %>
    <%= f.input :amount, as: :currency %>
    <%= f.input :account_id, collection: AccountingModule::Account.all.map{ |a| [a.name, a.id] } %>
    <%= f.input :loan_application_id, input_html: { value: @loan_application.id }, as: :hidden %>
    <hr>
    <%= f.submit "Add Charge", class: "btn btn-primary float-right" %>
  <% end %>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $("#loans_module_loan_applications_voucher_amount_processing_account_id").select2({
      theme: "bootstrap"
    });
  });
</script>
