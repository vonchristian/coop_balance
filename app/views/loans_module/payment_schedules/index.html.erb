<div class="row">
  <div class="col-md-12">
    <div class="box box-solid">
      <div class="box-header with-border">
        <h3 class="box-title"> Payment Schedules </h3>
      </div>
      <div class="box-body">
        <div class="table table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th> Date</th>
                <th> Loan</th>
                <th>Borrower </th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @payment_schedules.each do |schedule| %>
                <tr>
                  <td><%= schedule.date.strftime("%B %e, %Y") %></td>
                  <td><%= schedule.amortizeable.try(:name) %></td>
                  <td><%= schedule.amortizeable.try(:borrower_full_name) %></td>
                  <td><%= link_to "View (PDF)", loans_module_payment_schedule_path(schedule, format: 'pdf'), class: "btn btn-default" %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>