<% content_for(:html_title) { "Sign In" } %>
<div class="container">
  <br>
  <div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%=render 'layouts/shared/flash_messages' %>
    <div class="panel panel-default">
      <div class="panel-body">
      <br>
      <%= simple_form_for(resource, as: resource_name, :url => cooperator_session_path(resource_name),
        wrapper_mappings: {boolean: :vertical_boolean }) do |f| %>
        <%=image_tag("default.png", height: 140, width: 140, class: 'img-square img-responsive center-block') %>
        <br>
        <br>
        <%= f.input :email, placeholder: "Email", input_html:{class: "form-control input-lg"}, label: false %>
        <%= f.input :password, placeholder: "Password",  input_html:{class: "form-control input-lg"}, label: false  %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        <hr>
        <%= f.submit "Sign in", class: "btn btn-success btn-flat btn-block btn-lg", data: {disable_with: "Signing in..."} %>
      <% end %>
      <br>
    </div>
  </div>
</div>
