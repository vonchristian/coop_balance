<div class="row">
  <div class="col-md-9">
    <h3 class="card-title">Income Statement </h3>
    <p class="text-muted"> <%= @from_date.strftime("%B %e, %Y") %> - <%= @to_date.strftime("%B %e, %Y") %></p>
  </div>
  <div class="col-md-3">
    <%= link_to 'View (PDF)', cooperative_service_income_statements_path(@cooperative_service, from_date: @from_date, to_date: @to_date, format: 'pdf'), class: "btn btn-default" %>
  </div>
</div>

<%= form_tag({:action => "index", controller: "cooperative_services/income_statements"}, {:method => :get, :class => 'form-inline'}) do%>
<div class="form-group">
  <%= label_tag :from_date, nil, class: 'sr-only'%>
  <%= text_field_tag :from_date, @from_date.strftime("%B %e, %Y"), :class => 'datepicker form-control' %>
</div>
  <div class="form-group">
    <%= label_tag :to_date, nil, class: 'sr-only'%>
    <%= text_field_tag :to_date, @to_date.strftime("%B %e, %Y"), :class => 'datepicker form-control' %>
  </div>
  <button type="submit" class="btn btn-default">Generate Report</button>
<% end %>
<br>
  <%= render 'cooperative_services/partials/accounts', accounts: @accounts.expenses, name: "Expenses" %>
  <%= render 'cooperative_services/partials/accounts', accounts: @accounts.revenues, name: "Revenues" %>
  <hr>
  <div class="row">
    <div class="col-md-9">
      <h3 class="card-title"> Net Surplus </h3>
    </div>
    <div class="col-md-3">
      <%= number_to_currency @cooperative_service.accounts.net_surplus(cooperative_service_id: @cooperative_service.id, to_date: @to_date) %>
