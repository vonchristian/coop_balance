<%= form_tag({:action => "index", controller: "cooperative_services/balance_sheets"}, {:method => :get, :class => 'form-inline'}) do%>
  <div class="form-group">
    <%= label_tag :to_date, nil, class: 'sr-only'%>
    <%= text_field_tag :to_date, @to_date.strftime("%B %e, %Y"), :class => 'datepicker form-control' %>
  </div>
  <button type="submit" class="btn btn-default">Generate Report</button>
<% end %>
<%= link_to 'View (PDF)', cooperative_service_balance_sheets_path(format: "pdf", to_date: @to_date), class: "btn btn-default" %>
  <%= render 'cooperative_services/partials/accounts', :name => "Assets", :accounts => @accounts.assets %>
  <%= render 'cooperative_services/partials/accounts', :name => "Liabilities", :accounts => @accounts.liabilities %>
  <%= render 'cooperative_services/partials/accounts', :name => "Equity", :accounts => @accounts.equities %>
  <div class="row">
    <div class="col-md-4">
      <h3 class="card-title"> Total Liabilities and Equity </h3>
    </div>
    <div class="col-md-3">
      <span class="float-right">
        <%= number_to_currency @cooperative_service.accounts.total_equity_and_liabilities(cooperative_service_id: @cooperative_service.id, to_date: @to_date) %>
      </span>
    </div>
  </div>
  </div>
