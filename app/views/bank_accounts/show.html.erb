<div class="row">
  <div class="col-md-12">
    <div class="box box-solid">
      <div class="box-header">
        <h3 class="box-title"> Bank Account Details </h3>
      </div>
      <div class="box-body">
        <div class="row">
          <div class="col-md-6">
          <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-3">
              Bank
            </div>
            <div class="col-md-8">
              <b><%= @bank_account.bank_name.try(:upcase) %></b>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-3">
              Bank Address
            </div>
            <div class="col-md-8">
              <%= @bank_account.bank_address %>
            </div>
          </div>
          <br>
           <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-3">
              Account Number
            </div>
            <div class="col-md-8">
              <%= @bank_account.account_number %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <small>BALANCE</small>
          <h3><%= number_to_currency @bank_account.balance %></h3>
        </div>
      </div>
    <hr />
    <div class="row">
      <div class="col-md-6">
        <p class="text-muted">TRANSACTIONS HISTORY </p>
      </div>
      <div class="col-md-6">
        <div class="dropdown">
          <button class="btn btn-primary dropdown-toggle pull-right" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            New Entry
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
            <li><%= link_to 'New Deposit', new_bank_account_deposit_path(@bank_account)%></li>
            <li><%= link_to 'New Withdraw', new_bank_account_withdrawal_path(@bank_account)%></li>
              <li role="separator" class="divider"></li>
            <li><%= link_to 'New Bank Charge', new_bank_account_bank_charge_path(@bank_account)%></li>
            <li><%= link_to 'New Earned Interest', new_bank_account_bank_earned_interest_path(@bank_account)%></li>

            <li role="separator" class="divider"></li>
          </ul>
        </div>
      </div>
      <div class="table table-responsive content">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Date</th>
              <th>Description</th>
              <th>Reference Number</th>
              <th>Amount</th>
              <th>Employee</th>
            </tr>
          </thead>
          <tbody>
            <% @entries.each do |entry| %>
              <% cache entry do %>
                <tr>
                  <td><%=entry.entry_date.strftime("%B %e, %Y") %></td>
                  <td><%= entry.description %></td>
                  <td><%= entry.reference_number %></td>
                  <td><%= number_to_currency entry.debit_amounts.sum(&:amount) %></td>
                  <td><%= entry.recorder.try(:first_and_last_name) %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
    </div>
    </div>
    </div>
  </div>
</div>
