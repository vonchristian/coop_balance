<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"> Bank Account Details </h3>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-6">
          <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-3">
              Bank
            </div>
            <div class="col-md-8">
              <b><%= @bank_account.bank_name.try(:upcase) %></b>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-3">
              Bank Address
            </div>
            <div class="col-md-8">
              <%= @bank_account.bank_address %>
            </div>
          </div>
          <br>
           <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-3">
              Account Number
            </div>
            <div class="col-md-8">
              <%= @bank_account.account_number %>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <small>BALANCE</small>
          <h3><%= number_to_currency @bank_account.balance %></h3>
          <br>
          <%= link_to 'New Deposit', new_bank_account_deposit_path(@bank_account), class: "btn btn-success"%> &nbsp; &nbsp;
          <%= link_to 'New Withdraw', new_bank_account_withdrawal_path(@bank_account), class: "btn btn-danger" %>

        </div>
        <div class="col-md-2">
           <small class="text-muted">EARNED INTEREST</small><br>
          <small><%= number_to_currency @bank_account.earned_interests %></small>
        </div>
      </div>
    <hr />

    <div class="row">
      <p class="text-muted">TRANSACTIONS HISTORY </p>
      <div class="table table-responsive content">
        <table class="table table-hover table-striped">
          <thead>
            <tr>
              <th>Date</th>
              <th>Description</th>
              <th>Reference Number</th>
              <th>Amount</th>
              <th>Employee</th>
            </tr>
          </thead>
          <tbody>
            <% @entries.each do |entry| %>
              <% cache entry do %>
                <tr>
                  <td><%=entry.entry_date.strftime("%B %e, %Y") %></td>
                  <td><%= entry.description %></td>
                  <td><%= entry.reference_number %></td>
                  <td><%= number_to_currency entry.debit_amounts.sum(&:amount) %></td>
                  <td><%= entry.recorder.try(:first_and_last_name) %></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>
</div>
