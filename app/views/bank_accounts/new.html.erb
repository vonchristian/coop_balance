<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="box box-solid">
      <div class="box-header">
        <h3 class="box-title">
          Bank Account Details
        </h3>
      </div>
      <div class="box-body">
        <%= simple_form_for @bank_account, url: :bank_accounts do |f| %>
          <%= f.error_notification %>
          <%= f.input :bank_name %>
          <%= f.input :bank_address %>
          <%= f.input :account_number %>
          <%= f.input :account_id, collection: AccountingModule::Account.all.map{|a| [a.name, a.id] } %>
          <p>Deposit Details</p>
          <%= f.input :date, input_html: { class: "datepicker" } %>
          <%= f.input :amount %>
          <%= f.input :reference_number %>
          <%= f.input :recorder_id, input_html: { value: current_user.id } %>
          <%= f.input :description %>
          <div class="box-footer">
            <%= f.submit "Save Bank Account", class: "btn btn-flat btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
