<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="nav-tabs-custom">
      <div class="box-header">
          <h3 class="box-title"> New Entry Details </h3> <br><br>
            <b> <%= @bank_account.bank_name %></b><br>
            <small><%= @bank_account.account_number %></small><br>
            <small><%= @bank_account.bank_address %></small>
            <hr />
      </div>
     <div class="box-body">
    <%= simple_form_for [@bank_account, @entry], url: :bank_account_withdrawals do |f| %>
      <%= f.error_notification %>
      <%= f.input :amount %>
      <%= f.input :or_number %>
      <%= f.input :description %>
      <%= f.input :entry_type, input_html: { value: 'bank_withdrawal' } %>
      <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
      <%= f.input :bank_account_id, input_html: { value: @bank_account.id },as: :hidden %>
      <%= f.input :recorder_id, input_html: { value: current_user.id },as: :hidden %>
      <%= f.input :credit_account_id, input_html: { value: AccountingModule::Account.find_by(name: "Cash in Bank").id } %>
      <%= f.input :debit_account_id, input_html: { value: AccountingModule::Account.find_by(name: current_user.cash_on_hand_account.name).id } %>

      <div class="box-footer">
        <%= f.submit "Save Deposit", class: "btn btn-primary pull-right" %>
      </div>
    <% end %>
