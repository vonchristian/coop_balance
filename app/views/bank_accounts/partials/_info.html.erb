<div class="card-body">
  <div class="row">
    <div class="col-md-6">
      <div class="row justify-content-end">
        <div class="col-md-11">
          <div class="row">
            <div class="col-md-5">
              <label>Bank</label>
            </div>
            <div class="col-md-6">
              <b><%= @bank_account.bank_name.try(:upcase) %></b>
            </div>
          </div>
          <hr class="min-margin">
          <div class="row">
            <div class="col-md-5">
              <label>Bank Address</label>
            </div>
            <div class="col-md-6">
              <b><%= @bank_account.bank_address %></b>
            </div>
          </div>
          <hr class="min-margin">
          <div class="row">
            <div class="col-md-5">
              <label>Account Number</label>
            </div>
            <div class="col-md-6">
              <b><%= @bank_account.account_number %></b>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <hr class="min-margin set-visibility">
      <div class="row justify-content-end">
        <div class="col-md-7 col-sm-6 col-auto">
          <small>BALANCE</small>
          <h3><%= number_to_currency @bank_account.balance %></h3>
          <br>

        </div>
        <div class="col-md-4 col-sm-6 col-auto">
          <small class="text-muted">EARNED INTEREST</small><br>
          <small><%= number_to_currency @bank_account.earned_interests %></small>
        </div>
      </div>
    </div>
  </div>
</div>
</div>


      <h3 class="card-title">Transactions History </h3>

  <% @entries.each do |entry| %>
    <%= render 'accounting_module/entries/partials/header', entry: entry %>
  <% end %>
