<div id="qr">

<style type="text/css">
#qr table {
  border-width: 0;
  border-style: none;
  border-color: #0000ff;
  border-collapse: collapse;
}

#qr td {
  border-left: solid 4px #000;
  padding: 0; 
  margin: 0; 
  width: 0px; 
  height: 4px; 
}

#qr td.black { border-color: #000; }
#qr td.white { border-color: #fff; }
</style>

<%= raw @qr.as_html %>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-success">
    <div class="box-header">
      <div class="row">
        <div class="col-md-5 col-md-offset-1">
           DEPOSITOR
        </div>
        <div class="col-md-6">
          <%= image_tag(@time_deposit.depositor.avatar.url(:thumb), class: "img-circle", height: 50, width: 50) %>

          <%= @time_deposit.depositor_first_and_last_name %>
        </div>
      </div>
    </div>
    <div class="box-body">
        <div class="row">
          <div class="col-md-5 col-md-offset-1">
            AMOUNT DEPOSITED
          </div>
          <div class="col-md-5">
            <%= number_to_currency @time_deposit.amount_deposited %>
          </div>
        </div>
        <hr>
<p>TRANSACTIONS HISTORY</p>
<% @time_deposit.deposits.each do |entry| %>
   <div class="row">
    <div class="col-md-5 col-md-offset-1">
      <%=entry.entry_date.strftime("%B %e, %Y") %>
    </div>
    <div class="col-md-5">
      <h4><%= number_to_currency entry.debit_amounts.distinct.map{|a| a.amount }.sum %></h4>
      <span class="text-muted"><%= entry.description %></span><br>
      <span class="label bg-green"><%= entry.entry_type %>
    </div>
  </div>
  <br>

<% end %>