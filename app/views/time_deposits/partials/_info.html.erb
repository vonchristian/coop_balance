<div class="tab-pane <%= 'active' if current_page?(time_deposit_path(@time_deposit)) %>">
        <div class="row">
          <div class="col-md-6">
          <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-4">
              Time Deposit Product
            </div>
            <div class="col-md-6">
              <b><%= @time_deposit.time_deposit_product_name.try(:upcase) %></b>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-4">
              Depositor
            </div>
            <div class="col-md-6">
              <%= @time_deposit.depositor_name %>
            </div>
          </div>
          <br>
          <div class="row">
            <div class="col-md-1">
            </div>
              <div class="col-md-4">
                Date Deposited
              </div>
              <div class="col-md-6">
                <span class="pull-left">
                  <%= @time_deposit.current_term_effectivity_date.strftime("%B %e, %Y") %>
                </span>
              </div>
            </div>
            <br />
            <div class="row">
              <div class="col-md-1">
              </div>
              <div class="col-md-4">
                Maturity Date
              </div>
              <div class="col-md-6">
                <span class="pull-left">
                  <%= @time_deposit.current_term_maturity_date.strftime("%B %e, %Y")  %>
                </span>
              </div>
            </div>
            <br>
           <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-4">
              Account Number
            </div>
            <div class="col-md-6">
              <%= @time_deposit.account_number %>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <small>BALANCE</small>
          <h3><%= number_to_currency @time_deposit.balance %></h3>
        </div>

      </div>
    <hr />
    <% if @time_deposit.withdrawn? %>
      <span class="text-danger"> Withdrawn last <%= @time_deposit.withdrawal_date.strftime("%B %e, %Y") %></span>
    <% end %>
    <br>


    <p class="text-muted">TRANSACTIONS HISTORY </p>
    <div class="table table-responsive">
                <table class="table table-hover table-striped">
                  <thead>
                    <tr>
                      <th> Date </th>
                      <th>Reference Number</th>
                      <th> Amount </th>
                      <th> Type </th>
                      <th> Employee </th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @time_deposit.entries.each do |entry| %>
                      <tr>
                        <td><%= entry.entry_date.strftime("%B %e, %Y") %></td>
                        <td><%= entry.reference_number %></td>
                        <td><%= number_to_currency entry.credit_amounts.sum(:amount) %></td>

                        <td><%= entry.description %> / <%= entry.payment_type %></td>
                        <td><% if entry.recorder %>
                          <%=image_tag(entry.recorder.avatar.url(:thumb), class: "img-circle", height: 35, width: 35) %> &nbsp;
                          <%= entry.recorder_first_and_last_name %>
                          <% end %>
                         </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
      </div>
