<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"> Time Deposits </h3>
      </div>
      <div class="card-body">
        <div class="col-md-12">
          <%=form_tag time_deposits_path, class: "sidebar-form", method: :get do %>
                <div class="input-group">
                  <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Depositor, Account Number", id: 'account-search-form' %>
                  <span class="input-group-btn">
                    <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
                      <i class="fa fa-search"></i>
                    <% end %>
                  </span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>

          <% @time_deposits.each do |time_deposit| %>
            <div class="card">
              <div class="card-body">
                <%= link_to time_deposit_path(time_deposit) do %>
                  <div class="row">
                    <div class="col-md-1">
                      <%= image_tag(time_deposit.depositor.avatar, class: "img-circle", height: 45, width: 45) %>
                    </div>
                    <div class="col-md-4">
                      <b><%= time_deposit.depositor_name.try(:upcase) %></b><br>
                      <% if time_deposit.withdrawn? %>
                        <span class="text-danger"> Withdrawn last <%= time_deposit.withdrawal_date.strftime("%B %e, %Y") %></span>
                      <% end %>
                    </div>
                    <div class="col-md-4">
                        <h4 class="card-title"><%= number_to_currency time_deposit.balance %></h4>
                      <small class="text-muted">AMOUNT DEPOSITED</small>

                    </div>
                    <div class="col-md-3">
                      <small>MATURITY DATE</small><br>
                      <% if time_deposit.current_term.present? %>
                        <i class="fa fa-calendar"></i> <%= time_deposit.current_term_maturity_date.strftime("%B %e, %Y") %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="col-md-6">

        </div>
      </div>
    </div>
  </div>
</div>
