<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header no-border">
        <nav class="nav nav-pills nav-pills-underline">
          <li class="nav-item">
            <%= link_to time_deposit_path(@time_deposit), class: "nav-link #{'active' if current_page?(time_deposit_path(@time_deposit))}" do %>
              <i class="fa fa-user-circle"></i> Account
            <% end %>
          </li>

          <li class="nav-item">
            <%= link_to time_deposit_settings_path(@time_deposit), class: "nav-link #{'active' if current_page?(time_deposit_settings_path(@time_deposit))}" do %>
              <i class="fa fa-sliders-h"></i> Settings
            <% end %>
          </li>

           <li class="nav-item">
            <%= link_to time_deposit_accounting_index_path(@time_deposit), class: "nav-link #{'active' if current_page?(time_deposit_accounting_index_path(@time_deposit))}" do %>
              <i class="fa fa-coins"></i> Accounting
            <% end %>
          </li>
        </nav>
      </div>
    </div>
  </div>
</div>
<div class="card">
  <% if current_page? time_deposit_path(@time_deposit) %>
    <%= render 'time_deposits/partials/info' %>
  <% end %>
 
  <% if current_page? time_deposit_settings_path(@time_deposit) %>
    <%= render 'time_deposits/partials/settings' %>
  <% end %>
   <% if current_page? time_deposit_accounting_index_path(@time_deposit) %>
    <%= render 'time_deposits/partials/accounting' %>
  <% end %>
</div>