<div class="row">
  <div class="col-md-5 col-md-offset-3">
    <div class="card">
      <div class="card-header">
        <h4><center><%= image_tag(@time_deposit.depositor, style: 'width:80px;height:80px;', class: 'media-object img-circle') %></center></h4>
        <center>
          <h3 class="card-title"><center><%= @time_deposit.depositor.first_and_last_name %></h3>
        </center>
      </div>
      <div class="card-body">
        <center>
          <h4><%= number_to_currency @time_deposit.balance %>
          </h4>
          <small>BALANCE</small>
        </center>
        <hr>
        <%= simple_form_for [@time_deposit, @withdrawal], url: :time_deposit_withdrawals do |f| %>
          <%= f.error_notification %>
          <%= f.input :amount, as: :currency %>
          <%= f.input :or_number %>
          <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
          <%= f.input :time_deposit_id, input_html: { value: @time_deposit.id },as: :hidden %>
          <%= f.input :recorder_id, input_html: { value: current_user.id },as: :hidden %>
          <%= f.input :cash_account_id, collection: current_user.cash_accounts.map{|a| [a.name, a.id] } %>

          <div class="footer">
            <%= f.submit "Save Withdrawal", class: "btn btn-primary pull-right", data: {disable_with: "Processing..." } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
