<div class="row">
  <div class="col-md-12">
    <div class="box box-primary">
      <div class="box-header">
        <h3 class="box-title"> Employees </h3>
        <%=link_to new_hr_module_employee_path do %>
          <span class="btn btn-primary btn-flat"><i class="fa fa-user-plus"></i> New Employee </span>
        <% end %>
      </div>
      <div class="box-body">
        <div class="table table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Job Position</th>
                <th>Department</th>
                <th>Last Login</th>
                <th>Salary</th>
              </tr>
            </thead>
            <tbody>
              <% @employees.each do |employee| %>
                <tr data-link="<%=hr_module_employee_path(employee)%>" class="myClass">
                  <td><%=image_tag(employee.avatar.url(:medium), class: "img-circle", height: 40, width: 40) %>&nbsp; &nbsp; <b><%=employee.first_and_last_name%></b></td>
                  <td><%= employee.role.titleize %></td>
                  <td><%= employee.department_name %></td>
                  <td>
                    <% if employee.last_sign_in_at.present? %>
                      <%= employee.last_sign_in_at.strftime("%B %e, %Y %I:%M %p") %>
                    <% end %>
                  </td>
                  <td><%= employee.salary_grade_name %><br>
                      <%= number_to_currency employee.salary_grade_amount %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $("tr").click(function() {
  window.location = $(this).data("link")
});
  $('.myClass').css('cursor', 'pointer');
</script>