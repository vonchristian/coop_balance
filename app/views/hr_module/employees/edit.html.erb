<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-solid">
      <div class="box-header with-border">
        <center>
           <%=image_tag(@employee.avatar.url(:large), class: "img-circle user-profile-img", height: 80, width: 80) %><br><br>
          <h3 class="box-title"> <%= @employee.first_and_last_name.try(:upcase) %></h3><br>
          <small class="text-muted"><%= @employee.role.titleize %></small>
        </center>
      </div>
      <div class="box-body">
        <%= simple_form_for @employee, url: :hr_module_employee do |f| %>
          <%= f.error_notification %>
          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <%= f.input :first_name %>
              <%= f.input :last_name %>
              <%= f.input :date_of_birth, as: :string, input_html: { class: "datepicker" } %>
              <%= f.input :email %>
              <%= f.input :contact_number %>
              <div class="box-footer">
                <%= f.submit "Save Employee", class: "btn btn-primary btn-flat pull-right" %>
              </div>
            </div>
        <% end %>