<%= simple_form_for @bank_account, url: :bank_account_applications, html: { autocomplete: 'off' } do |f| %>
  <%= f.input :bank_name %>
  <%= f.input :bank_address %>
  <%= f.input :account_number %>
  <%= f.input :cash_account_id, collection: current_user.cash_accounts.map{|a| [a.name, a.id] }, input_html: { class: 'chosen-select' } %>
  <%= f.input :interest_revenue_account_id, collection: current_office.accounts.revenues.map{|a| [a.name, a.id] }, input_html: { class: 'chosen-select' } %>
      
  <%= f.input :cooperative_id, input_html: { value: current_cooperative.id }, as: :hidden %>
  <%= f.input :office_id, input_html: { value: current_office.id }, as: :hidden %>

  <%= f.submit "Proceed", data: { disable_with: "Processing..." } %>
<% end %>
