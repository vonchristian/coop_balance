<%= simple_form_for @time_deposit_product, url: :office_time_deposit_products do |f| %>
  <%= f.error_notification %>
  <%= f.input :time_deposit_product_id, collection: current_cooperative.time_deposit_products.map{|a| [a.name, a.id] }, input_html: { class: 'chosen-select' } %>
  <%= f.input :liability_ledger_id, collection: current_office.ledgers.liability.map{|a| [a.title, a.id] }, input_html: { class: 'chosen-select' } %>
  <%= f.input :interest_expense_ledger_id, collection: current_office.ledgers.expense.map{|a| [a.title, a.id] }, input_html: { class: 'chosen-select' } %>
  <%= f.input :break_contract_ledger_id, collection: current_office.ledgers.revenue.map{|a| [a.title, a.id] }, input_html: { class: 'chosen-select' } %>
  <%= f.input :forwarding_account_id, collection: current_office.accounts.liability.map{|a| [a.name, a.id] }, input_html: { class: 'chosen-select' } %>
  <%= f.submit "Save Time Deposit Product", class: 'btn btn-danger float-right' %>
<% end %>
