<%= simple_form_for @member, url: :member_registrations do |f| %>
  <%= f.error_notification %>
  <%= f.input :first_name %>
  <%= f.input :middle_name %>
  <%= f.input :last_name %>
  <%= f.input :sex, collection: Member.sexes.keys.to_a.map{|a| [a.titleize, a] }, as: :radio_buttons %>
  <%= f.input :date_of_birth %>
  <%= f.input :tin_number %>
  <%= f.submit "Create Member" %>
<% end %>
