
<div class="row">
  <div class="col-md-12">
    <div class="box box-default">
      <div class="box-header">
          <div class="row">
            <div class="col-md-3">
              <h3 class="box-title"> Customers </h3>
            </div>
            <div class="col-md-6">
              <%=form_tag customers_path, method: :get, class: "sidebar-form" do %>
                <div class="input-group">
                  <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search First Name, Last Name ", id: 'account-search-form' %>
                  <span class="input-group-btn">
                    <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
                      <i class="fa fa-search"></i>
                    <% end %>
                  </span>
                </div>
              <% end %>
            </div>
          </div>

        <br>
      </div>
      <div class="box-body">

        <% @customers.each do |customer| %>
          <% cache customer do %>
            <%= link_to customer_path(customer) do %>
              <div class="row">
                <div class="col-md-3">
                  <center><%= image_tag(customer.avatar.url(:medium), class: "img-circle", height: 80, width: 80) %></center>
                </div>
                <div class="col-md-6">
                  <b><%= customer.full_name.upcase %></b><br><br>
                  <span class="text-muted"> <i class="fa fa-phone"></i> <%= customer.contact_number || 'Not Set' %> &nbsp;</span>
                  <span class="text-muted"> <i class="fa fa-map-marker"></i> <%=customer.current_address || 'Not Set' %></span>
              </div>
              </div>
              <hr>
            <% end %>
          <% end %>
        <% end %>
        <center><%= will_paginate @customers %> </center>


