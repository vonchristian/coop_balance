<%= simple_form_for [@employee, @membership], url: :employee_membership do |f| %>
  <%= f.error_notification %>
  <%= f.input :membership_type, collection: Membership.membership_types.keys.to_a.map{|a| [a.titleize, a] }, as: :radio_buttons %>
  <%= f.input :account_number, input_html: { AccountNumberGenerator.generate_for(@employee) } %>
  <%= f.submit "Save Membership" %>
<% end %>
