<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="card">
      <div class="card-header">
        <center>
          <h3 class="card-title"><%= @employee.name %></h3>
        </center>
      </div>
      <div class="card-body">
        <%= simple_form_for @share_capital, url: :employee_share_capitals do |f| %>
          <%= f.input :subscriber_id, input_html: { value: @employee.id }, as: :hidden %>
          <%= f.input :share_capital_product_id, collection: CoopServicesModule::ShareCapitalProduct.all.map{|a| [a.name, a.id] } %>
          <%= f.input :reference_number %>
          <%= f.input :amount %>
          <%= f.input :employee_id, input_html: { value: current_user.id }, as: :hidden %>
          <%= f.input :description, input_html: { value: "Payment of share capital" } %>
          <%= f.input :account_number, input_html: { value: SecureRandom.uuid }, as: :hidden %>
          <%= f.submit "Save Share Capital", class: "btn btn-primary float-right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
