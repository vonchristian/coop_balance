<%= simple_form_for [@employee, @time_deposit], url: :employee_time_deposits do |f| %>
  <%= f.error_notification %>
  <%= f.input :amount %>
  <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
  <%= f.input :reference_number %>
  <%= f.input :number_of_days %>
  <%= f.input :recorder_id, input_html: { value: current_user.id } %>
  <%= f.input :depositor_id, input_html: { value: @employee.id } %>
  <%= f.input :depositor_type, input_html: { value: @employee.class } %>
  <%= f.input :account_number, input_html: { value: AccountNumberGenerator.generate_account_number(@time_deposit) } %>

  <%= f.submit "Save Time Deposit" %>
<% end %>
