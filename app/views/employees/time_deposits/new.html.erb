<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-default">
      <div class="box-header">
        <center>
          <%= image_tag(@employee.avatar.url(:medium), height: 60, width: 60, class: "img-circle") %>
          <h3 class="box-title"><%= @employee.name %></h3>
        </center>
      </div>
      <div class="box-body">
        <%= simple_form_for [@employee, @time_deposit], url: :employee_time_deposits do |f| %>
          <%= f.error_notification %>
          <%= f.input :amount %>
          <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
          <%= f.input :reference_number %>
          <%= f.input :number_of_days %>
          <%= f.input :employee_id, input_html: { value: current_user.id }, as: :hidden %>
          <%= f.input :depositor_id, input_html: { value: @employee.id }, as: :hidden %>
          <%= f.input :time_deposit_product_id, collection: CoopServicesModule::TimeDepositProduct.all.map{|a| [a.amount_range_and_days, a.id] } %>
          <%= f.input :account_number, input_html: { value: SecureRandom.uuid }, as: :hidden %>
          <div class="box-footer">
            <%= f.submit "Save Time Deposit", class: "btn btn-primary pull-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
