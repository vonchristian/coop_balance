<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-md-3">
            <center></center>
          </div>
          <div class="col-md-8">
            <br>
            <h3 class="card-title"><%= @employee.first_and_last_name.try(:upcase) %></h3><br>
            <small><%= @employee.role.titleize %></small>
          </div>
        </div>
      </div>
      <div class="card-body">
        <%= simple_form_for [@employee, @savings_account], url: :employee_savings_accounts do |f| %>
          <%= f.error_notification %>
          <%= f.input :date, label: "Date Opened", as: :string, input_html: { class: "datepicker" } %>
          <%= f.input :saving_product_id, label: "Savings Account Type", collection: CoopServicesModule::SavingProduct.all.map{ |a| [ a.name.titleize, a.id] }, as: :radio_buttons %>
          <%= f.input :amount, label: "Initial Deposit" %>
          <%= f.input :or_number %>
          <%= f.input :depositor_id, input_html: { value: @employee.id }, as: :hidden %>
          <%= f.input :depositor_type, input_html: { value: @employee.class }, as: :hidden %>
          <%= f.input :employee_id, input_html: { value: current_user.id }, as: :hidden %>
          <%=link_to "Cancel", employee_savings_accounts_path(@employee), class: "btn btn-outline float-left" %>
           <%= f.submit "Open Savings Account", class: "btn btn-primary float-right" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

