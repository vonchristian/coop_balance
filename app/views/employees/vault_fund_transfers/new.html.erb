<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-default">
      <div class="box-header bg-gray">
        <center>
          <%= image_tag(@employee.avatar.url(:medium), class: "img-circle", height: 60, width: 60) %><br>
          <h3 class="box-title"><%= @employee.name %></h3>
        </center>
      </div>
      <div class="box-body">
        <%=simple_form_for @entry, url: :employee_vault_fund_transfers do |f| %>
          <%= f.error_notification %>
          <%= f.input :employee_id, input_html: { value: @employee.id }, as: :hidden %>
          <%= f.input :entry_date, as: :string, input_html: { class: "datepicker" } %>
          <%= f.input :reference_number %>
          <%= f.input :description, as: :text %>
          <%= f.input :amount %>
          <div class="box-footer">
            <%= f.submit "Save Fund Transfer", class: "btn btn-primary pull-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $("#accounting_module_entry_form_credit_account_id").select2({
      theme: "bootstrap"
    });
     $("#accounting_module_entry_form_debit_account_id").select2({
      theme: "bootstrap"
    });
      $("#accounting_module_entry_form_entry_type").select2({
      theme: "bootstrap"
    });
  });
</script>
