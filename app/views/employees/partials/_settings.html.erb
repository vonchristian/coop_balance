<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-md-9">
        <h3 class="card-title">Cash Accounts</h3>
        <p class="text-muted"> Set cash accounts for this employee. </p>
      </div>
      <div class="col-md-3">
        <%= link_to 'New Account', new_employee_cash_account_path(@employee), class: "btn btn-outline-danger" %>
      </div>
    </div>
    <% @employee.employee_cash_accounts.each do |account| %>
      <%= account.name %>
      <%= link_to 'Remove', employee_cash_account_path(id: account.id, employee_id: @employee.id), method: :delete %>
    <% end %>
  </div>
</div>
