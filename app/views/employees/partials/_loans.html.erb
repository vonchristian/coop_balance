<div class="tab-pane <%= 'active' if current_page?(employee_loans_path(@employee))%>">
   <small>ACCOUNTS RECEIVABLE (STORE)</small>
  <h3 class="box-title"><%=number_to_currency @employee.account_receivable_store_balance %></h3>
  <hr>
  <h4 class="condensed-text">LOANS </h4>
  <% if policy([:members, :loan]).new? %>
    <%= link_to 'New Loan Application', new_employee_loan_path(@employee), class: "btn btn-primary" %>
  <% end %>
  <% @employee.loans.each do |loan| %>
    <%=link_to loan_path(loan) do %>
      <%=loan.loan_product_name %>
    <% end %>
    <hr>
  <% end %>
</div>
