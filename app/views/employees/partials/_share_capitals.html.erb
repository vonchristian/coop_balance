<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <% if policy([:employees, :share_capital]).new? %>
          <%= link_to 'New Share Capital', new_share_capital_path(subscriber_id: @employee.id, subscriber_type: @employee.class.to_s), class: "btn btn-primary float-right" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% if @employee.share_capitals.present? %>
  <% @employee.share_capitals.each do |share_capital| %>
    <%= render 'share_capitals/partials/header', share_capital: share_capital %>
  <% end %>
<% end %>
