<div class="tab-pane <%='active' if current_page?(employee_orders_path(@employee))%>">
  <small>ACCOUNTS RECEIVABLE</small>
  <h3 class="box-title"><%=number_to_currency @employee.accounts_receivable_gen_merchandise_total %></h3>
  <hr>
  <div class="table table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Date</th>
          <th>Items</th>
          <th>Total Cost</th>
          <th>Payment Type</th>
        </tr>
      </thead>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.date.strftime("%B %e, %Y") %></td>
            <td>
              <% order.line_items.each do |line_item| %>
                <div class="row">
                  <div class="col-md-8">
                    <%= line_item.product_stock.try(:name) %>
                  </div>
                  <div class="col-md-4">
                    <%= line_item.unit_cost %>
                  </div>
                </div>
                <br>
              <% end %>
            </td>
            <td><%= order.total_cost %></td>
            <td><span class="badge bg-<%=order.badge_color %>"><%= order.payment_type %></span></td>
          </tr>
        <% end %>
</div>