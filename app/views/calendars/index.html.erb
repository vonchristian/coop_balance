 <div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"> Members Birthdays </h3>
      </div>
      <div class="card-body">
      <%= month_calendar do |date| %>
        <%=link_to calendar_path(date) do %>
            <p><%=date.day %></p>
          <% Member.has_birth_month_on(birth_month: date.month).has_birth_day_on(birth_day: date.day).each do |member| %>
            <%= image_tag(member.avatar, class: "img-circle", height: 30, width: 30) %> <%= member.first_name %><br>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
