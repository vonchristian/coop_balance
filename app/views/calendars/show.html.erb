<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Birthday Celebrants for <%= params[:id].to_date.strftime("%B %e, %Y") %></h3>
      </div>
      <div class="box-body">
        <% @members.each do |member| %>

          <div class="row">
            <div class="col-md-3">
              <center><%=image_tag(member.avatar.url(:medium), class: "img-circle", height: 60, width: 60) %></center>
            </div>
            <div class="col-md-5">
              <b><%= member.full_name %></b><br>
               <i class="fa fa-map-marker"></i> <%= member.current_address %><br>
              <i class="fa fa-phone"></i> <%= member.current_contact_number %>
            </div>
            <div class="col-md-3">
              <%=member.date_of_birth.strftime("%B %e, %Y") %><br>
              <%= member.age %> Years Old
            </div>

          </div>
          <br>
        <% end %>
      </div>
    </div>
  </div>
</div>
