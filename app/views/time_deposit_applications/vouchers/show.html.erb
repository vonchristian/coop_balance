<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-header bg-light">
        <div class="row">
          <div class="col-md-6">
            <h3 class="card-title"> Voucher Details </h3>
          </div>
          <div class="col-md-6">
            <%= link_to 'View (PDF)', voucher_path(@voucher, format: "pdf"), class: "btn btn-default float-right" %>
          </div>
        </div>
      </div>
      <%= render 'vouchers/partials/alert_message', voucher: @voucher %>
      <%= render 'vouchers/partials/body', voucher: @voucher %>
      <% if !@voucher.disbursed?%>
        <div class="card-body">
          <%= button_to "Confirm Transaction", time_deposit_application_voucher_confirmations_path(voucher_id: @voucher.id, time_deposit_application_id: @time_deposit_application.id), method: :post, class: "btn btn-primary float-right", data: { disable_with: "Processing..." } %>
          <%= button_to "Cancel", time_deposit_application_voucher_path(id: @voucher.id, time_deposit_application_id: @time_deposit_application.id), method: :delete, class: "btn text-danger float-left" %>
        </div>
      <% else %>
        <%= render 'vouchers/partials/status' %>
      <% end %>
    </div>
  </div>
</div>
