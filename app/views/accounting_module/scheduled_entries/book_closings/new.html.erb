<%= simple_form_for @book_closing, url: :accounting_module_scheduled_entries_book_closings do |f| %>
  <%= f.input :date, as: :string, input_html: { class: 'datepicker'} %>
  <%= f.input :account_number, input_html: { value: SecureRandom.uuid } %>
  <%= f.input :employee_id, input_html: { value: current_user.id } %>
  <%= f.submit "Create Voucher" %>
<% end %>