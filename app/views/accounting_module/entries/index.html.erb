<div class="row">
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <%=link_to 'Yesterday', accounting_module_entries_path(from_date: Time.zone.now.yesterday.beginning_of_day, to_date: Time.zone.now.yesterday.end_of_day ), class: "btn btn-default btn-sm"  %>
        <%=link_to 'This Day', accounting_module_entries_path(from_date: Time.zone.now.beginning_of_day, to_date: Time.zone.now.end_of_day ), class: "btn btn-default btn-sm"  %>
        <%=link_to 'This Week', accounting_module_entries_path(from_date: Time.zone.now.beginning_of_week.beginning_of_day, to_date: Time.zone.now.end_of_week.end_of_day ), class: "btn btn-default btn-sm"  %>
        <%=link_to 'This Month', accounting_module_entries_path(from_date: Time.zone.now.beginning_of_week.beginning_of_day, to_date: Time.zone.now.end_of_week.end_of_day ), class: "btn btn-default btn-sm"  %>
        <%= form_tag({:action => "index", controller: "accounting_module/entries"}, {:method => :get})  do %>
              <div class="form-group">
                <%= text_field_tag :from_date, @from_date, :class => 'datepicker form-control border-input', :placeholder => "From " %>
              </div>

              <div class="form-group">
                <%= text_field_tag :to_date, @to_date, :class => 'form-control border-input datepicker', :placeholder => "To " %>
              </div>

              <button type="submit" class="btn btn-default"> Go</button>
            </div>
        <% end %>
        <hr>
        <% current_cooperative.users.each do |user| %>
          <%= link_to accounting_module_entries_path(recorder: user) do %>
            <span data-toggle="tooltip" title="<%= user.first_and_last_name %>">
              <%= image_tag(user.avatar, class: "img-circle", height: 45, width: 45) %> &nbsp;
            </span>
          <% end %>
        <% end %>
      </div>


  </div>
  <div class="col-md-9">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-md-9">
            <h3 class="card-title"> Journal Entries </h3>
            <% if @from_date && @to_date %>
              <p class="text-muted"> <%= @from_date.strftime("%B %e, %Y") %> - <%= @to_date.strftime("%B %e, %Y") %></p>
            <% end %>
          </div>
          <div class="col-md-3">
            <%= link_to "New Entry", new_accounting_module_entry_line_item_path, class: "btn btn-primary float-right" %>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-8">
            <%=form_tag accounting_module_entries_path, method: :get, class: "sidebar-form" do %>
              <div class="input-group">
                <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Entry...", id: 'taxpayer-search-form' %>
                <span class="input-group-btn">
                  <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
                    <i class="fa fa-search"></i>
                  <% end %>
                </span>
              </div>
            <% end %>
          </div>
          <div class="col-md-4">
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-md-5">
            <%=link_to 'Yesterday', accounting_module_entries_path(from_date: Time.zone.now.yesterday.beginning_of_day, to_date: Time.zone.now.yesterday.end_of_day ), class: "btn btn-default btn-sm"  %>

            <%=link_to 'This Day', accounting_module_entries_path(from_date: Time.zone.now.beginning_of_day, to_date: Time.zone.now.end_of_day ), class: "btn btn-default btn-sm"  %>
            <%=link_to 'This Week', accounting_module_entries_path(from_date: Time.zone.now.beginning_of_week.beginning_of_day, to_date: Time.zone.now.end_of_week.end_of_day ), class: "btn btn-default btn-sm"  %>
            <%=link_to 'This Month', accounting_module_entries_path(from_date: Time.zone.now.beginning_of_week.beginning_of_day, to_date: Time.zone.now.end_of_week.end_of_day ), class: "btn btn-default btn-sm"  %>
          </div>
          <div class="col-md-7">
            <%= form_tag({:action => "index", controller: "accounting_module/entries"}, {:method => :get})  do %>
              <div class="row">
                <div class="col-md-5">
                  <div class="form-group">
                    <%= text_field_tag :from_date, @from_date, :class => 'datepicker form-control border-input', :placeholder => "From " %>
                  </div>
                </div>
                <div class="col-md-5">
                  <div class="form-group">
                    <%= text_field_tag :to_date, @to_date, :class => 'form-control border-input datepicker', :placeholder => "To " %>
                  </div>
                </div>
                <div class="col-md-2">
                  <button type="submit" class="btn btn-default"> Go</button>
                </div>
              </div>
            <% end %>
          </div>
          <hr>
        </div>
      </div>
    </div>
    <% @entries.each do |entry| %>
      <%= render 'accounting_module/entries/partials/header', entry: entry %>
    <% end %>
    <% if @entries.exists? %>
      <center><%= will_paginate @entries %></center>
    <% end %>
  </div>
</div>
