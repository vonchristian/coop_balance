<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"> Entry Details </h3>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <div class="row">
              <div class="col-md-5">
                Member/Payee
              </div>
              <div class="col-md-5">
                <%#= image_tag(@entry.commercial_document.depositor.avatar.url(:thumb), class: "img-circle", height: 35, width: 35)%> &nbsp; <%= @entry.commercial_document.try(:name) %>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-5">
                Date
              </div>
              <div class="col-md-5">
                <%=@entry.entry_date.strftime("%B %e, %Y") %>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-5">
                Description
              </div>
              <div class="col-md-6">
                <%=@entry.description %>
              </div>
            </div>
            <br>


            <div class="row">
              <div class="col-md-5">
                Reference Number
              </div>
              <div class="col-md-5">
               #<%= @entry.reference_number %>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-5">
                Employee
              </div>
              <div class="col-md-5">
               <%= @entry.recorder.try(:first_and_last_name) %>
              </div>
            </div>
            <br />
            <div class="row">
              <div class="col-md-5">
                Origin
              </div>
              <div class="col-md-5">
                <%= @entry.office_name %>
              </div>
            </div>
          </div>
        </div>
        <hr />
        <h3 class="card-title">Debits</h3>
        <br>
        <% @entry.debit_amounts.each do |debit| %>
          <div class="row">
            <div class="col-md-5 col-md-offset-1">
              <%= debit.account.try(:name) %><br>
              <span class="badge bg-gray"><%= debit.account.try(:normalized_type) %></span>
            </div>
            <div class="col-md-4">
              <span class="float-right">
                <%= number_to_currency debit.amount %>
              </span>
            </div>
            <div class="col-md-2">
              <% if current_user.bookkeeper? || current_user.accountant? || current_user == @entry.recorder %>
                <% if !@entry.cleared? %>
                  <%=link_to "Edit", edit_accounting_module_debit_amount_path(debit), class: "btn btn-outline-warning btn-sm" %>
                <% end %>
              <% end %>
            </div>
          </div>
          <br>
        <% end %>
        <hr>
        <h3 class="card-title"> Credits </h3>
        <br>
        <% @entry.credit_amounts.each do |credit| %>
          <div class="row">
            <div class="col-md-5 col-md-offset-1">
              <%= credit.account.try(:name) %><br>
              <span class="badge bg-gray"><%= credit.account.try(:normalized_type) %></span>

            </div>
            <div class="col-md-4">
              <span class="float-right">
                <%= number_to_currency credit.amount %>
              </span>
            </div>
            <div class="col-md-2">
              <% if current_user.bookkeeper? || current_user.accountant? || current_user == @entry.recorder %>
                <% if !@entry.cleared? %>
                  <%=link_to "Edit", edit_accounting_module_credit_amount_path(credit), class: "btn btn-outline-warning btn-sm" %>
                <% end %>
              <% end %>
            </div>
          </div>
          <br>
        <% end %>
          <hr>
          <% if current_user.bookkeeper? || current_user.accountant? || @entry.recorder==current_user %>
            <% if !@entry.cleared? %>
              <%= link_to "Edit Entry", edit_accounting_module_entry_path(@entry), class: "btn btn-warning float-right" %>
            <% end %>
          <% end %>

          <% if current_user.bookkeeper? || current_user.accountant? || current_user == @entry.recorder %>

            <% if !@entry.cleared? %>
              <%= link_to "Delete Entry", accounting_module_entry_path(@entry), method: :delete, data: { confirm: "Are you sure you want to delete this entry?"}, class: "btn btn-danger" %>
            <% end %>
          <% end %>
          <% if current_user.bookkeeper? || current_user.accountant? %>
          <hr>
            <% if @entry.cleared? %>
          <h4 class="box-details">Clearance Details </h4>

              <div class="row">
                <div class="col-md-6">
                  <b>Status</b>
                </div>
                <div class="col-md-6">
                  <span class="label bg-green">Cleared</span>
                </div>
              </div>
              <br>
              <div class="row">
                <div class="col-md-6">
                  <b>Clearance Date</b>
                </div>
                <div class="col-md-6">
                  <%= @entry.cleared_at.strftime("%B %e, %Y") %>
                </div>
              </div>
              <br>
              <div class="row">
                <div class="col-md-6">
                  <b>Cleared By</b>
                </div>
                <div class="col-md-6">
                  <%= @entry.cleared_by.try(:full_name) %>
                </div>
              </div>
            <% else %>
              <span class="text-danger "> <i class="fa fa-info-circle"></i> Please double check this entry before clearing. Once an entry is cleared it cannot be deleted. </span>
              <br>
              <br>
              <%= link_to 'Clear this Entry', accounting_module_entry_clearances_path(@entry), method: :create, class: "btn btn-success btn-block", data: { confirm: "Are you sure you want to clear this entry?"} %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
