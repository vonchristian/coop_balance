<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"> Entry Details </h3>
      </div>
      <div class="card-body">
        <%= render "accounting_module/amounts_update_header" %>
      </div>
      <hr class="no-margin">
      <div class="card-body">
        <table class="table">
          <thead>
            <tr>
              <th>Debit</th>
              <th>Account</th>
              <th>Credit</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @entry.amounts.each do |amount| %>
              <tr>
                <td>
                  <% if amount.is_a?(AccountingModule::DebitAmount) %>
                    <span class="float-right">
                      <%= number_to_currency amount.amount %>
                    </span>
                  <% end %>
                </td>
                <td><%= amount.account_name %></td>
                <td>
                  <% if amount.is_a?(AccountingModule::CreditAmount) %>
                    <span class="float-right">
                      <%= number_to_currency amount.amount %>
                    </span>
                  <% end %>
                </td>
                <td>
                  <% if current_user.bookkeeper? || current_user.accountant? || current_user == @entry.recorder %>
                    <% if !@entry.cancelled? %>
                      <%=link_to "Update", amount.is_a?(AccountingModule::DebitAmount) ?edit_accounting_module_debit_amount_path(amount) : edit_accounting_module_credit_amount_path(amount), class: "btn btn-outline-warning btn-xs" %>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
            <tr>
              <td><%= number_to_currency @entry.debit_amounts.sum(:amount) %></td>
              <td></td>
              <td><%= number_to_currency @entry.credit_amounts.sum(:amount) %></td>
              <td></td>
            </tr>
          </tbody>
        </table>
          <hr>
          <% if current_user.bookkeeper? || current_user.accountant? || @entry.recorder==current_user %>
            <% if !@entry.cancelled? %>
              <%= link_to "Edit Entry", edit_accounting_module_entry_path(@entry), class: "btn btn-warning float-right" %>
            <% end %>
          <% end %>

          <% if current_user.bookkeeper? || current_user.accountant? || current_user == @entry.recorder %>

            <% if !@entry.cancelled? %>
              <%= link_to "Delete Entry", accounting_module_entry_path(@entry), method: :delete, data: { confirm: "Are you sure you want to delete this entry?"}, class: "btn btn-danger" %>
            <% end %>
          <% end %>
          <% if current_user.bookkeeper? || current_user.accountant? %>
          <hr>
            <% if @entry.cancelled? %>
          <h4 class="box-details">Cancellation Details </h4>

              <div class="row">
                <div class="col-md-6">
                  <b>Status</b>
                </div>
                <div class="col-md-6">
                  <span class="badge bg-danger">Cancelled</span>
                </div>
              </div>
              <br>
              <div class="row">
                <div class="col-md-6">
                  <b>Cancelled Date</b>
                </div>
                <div class="col-md-6">
                  <%= @entry.cancelled_at.strftime("%B %e, %Y") %>
                </div>
              </div>
              <br>
              <div class="row">
                <div class="col-md-6">
                  <b>Cancelled By</b>
                </div>
                <div class="col-md-6">
                  <%= @entry.cancelled_by.try(:full_name) %>
                </div>
              </div>
            <% else %>
              <span class="text-danger "> <i class="fa fa-info-circle"></i> Please double check this entry before cancelling. Once an entry is cancelled it cannot be undone. </span>
              <br>
              <br>
              <%= link_to 'Cancel this Entry', accounting_module_entry_cancellations_path(@entry), method: :create, class: "btn btn-success btn-block", data: { confirm: "Are you sure you want to cancel this entry?"} %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
