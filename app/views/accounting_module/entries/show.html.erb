<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-default">

      <div class="box-body">
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <div class="row">
              <div class="col-md-5">
                Member/Payee
              </div>
              <div class="col-md-5">
                <%#= image_tag(@entry.commercial_document.depositor.avatar.url(:thumb), class: "img-circle", height: 35, width: 35)%> &nbsp; <%= @entry.commercial_document.try(:name) %>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-5">
                Date
              </div>
              <div class="col-md-5">
                <%=@entry.entry_date.strftime("%B %e, %Y") %>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-5">
                Description
              </div>
              <div class="col-md-6">
                <%=@entry.description %>
              </div>
            </div>
            <br>


            <div class="row">
              <div class="col-md-5">
                Reference Number
              </div>
              <div class="col-md-5">
               #<%= @entry.reference_number %>
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-5">
                Employee
              </div>
              <div class="col-md-5">
                <%= image_tag(@entry.recorder.avatar.url(:thumb), class: "img-circle", height: 35, width: 35)%> &nbsp; <%= @entry.recorder.try(:first_and_last_name) %>
              </div>
            </div>
            <br />
            <div class="row">
              <div class="col-md-5">
                Origin
              </div>
              <div class="col-md-5">
                <%= @entry.origin_name %>
              </div>
            </div>
          </div>
        </div>
        <hr />
        <p><b>&nbsp; &nbsp; Debits</b></p>
        <% @entry.debit_amounts.each do |debit| %>
          <div class="row">
            <div class="col-md-5 col-md-offset-1">
              <%= debit.account.try(:name) %><br>
            </div>
            <div class="col-md-4">
              <%= number_to_currency debit.amount %>
            </div>
            <div class="col-md-2">
              <% if current_user.bookkeeper? || current_user.accountant? %>
                <% if !@entry.cleared? %>
                  <%=link_to "Edit", edit_accounting_module_debit_amount_path(debit), class: "btn btn-warning btn-xs" %>
                <% end %>
              <% end %>
            </div>
          </div>
          <br>
        <% end %>
        <hr>
        <p><b>&nbsp; &nbsp; Credits</b></p>
        <% @entry.credit_amounts.each do |credit| %>
          <div class="row">
            <div class="col-md-5 col-md-offset-1">
              <%= credit.account.try(:name) %>
            </div>
            <div class="col-md-4">
              <%= number_to_currency credit.amount %>
            </div>
            <div class="col-md-2">
              <% if current_user.bookkeeper? || current_user.accountant? %>
                <% if !@entry.cleared? %>
                  <%=link_to "Edit", edit_accounting_module_credit_amount_path(credit), class: "btn btn-warning btn-xs" %>
                <% end %>
              <% end %>
            </div>
          </div>
          <br>
        <% end %>
        <div class="box-footer">
          <% if current_user.bookkeeper? || current_user.accountant? || @entry.recorder==current_user %>
            <% if !@entry.cleared? %>
              <%= link_to "Edit", edit_accounting_module_entry_path(@entry), class: "btn btn-warning pull-right" %>
            <% end %>
          <% end %>
          <% if current_user.bookkeeper? || current_user.accountant? %>
            <% if !@entry.cleared? %>
              <%= link_to "Delete", accounting_module_entry_path(@entry), method: :delete, data: { confirm: "Are you sure you want to delete this entry?"}, class: "btn btn-danger" %>
            <% end %>
          <% end %>
          <hr>
          <% if current_user.bookkeeper? || current_user.accountant? %>
            <% if @entry.cleared? %>
              <span class="label bg-green">Cleared</span>
              <%= @entry.cleared_at.strftime("%B %e, %Y") %>
            <% else %>
              <%= link_to 'Clear', accounting_module_entry_clearances_path(@entry), method: :create, class: "btn btn-success", data: { confirm_with: "Are you sure you want to clear this entry?"} %>
            <% end %>
          <% end %>

        </div>
