<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"> Entry Details </h3>
      </div>
      <div class="card-body">
        <%=simple_form_for @entry, url: :accounting_module_entries do |f| %>
          <%= f.error_notification %>
          <%= f.input :entry_date, as: :string, input_html: { class: "datepicker" } %>
          <%= f.input :reference_number %>
          <%= f.input :description %>
          <%= f.input :amount %>
          <%= f.input :credit_account_id, label: "Credit Account:", collection: AccountingModule::Account.all.map{ |a| [a.name, a.id] } %>
          <%= f.input :debit_account_id, label: "Debit Account:", collection: AccountingModule::Account.all.map{ |a| [a.name, a.id] } %>
          <%= f.input :recorder_id, input_html: { value: current_user.id }, as: :hidden %>
          <div class="box-footer">
            <%= f.submit "Save Entry", class: "btn btn-primary float-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $("#accounting_module_entry_form_credit_account_id").select2({
      theme: "bootstrap"
    });
     $("#accounting_module_entry_form_debit_account_id").select2({
      theme: "bootstrap"
    });
      $("#accounting_module_entry_form_entry_type").select2({
      theme: "bootstrap"
    });
  });
</script>
