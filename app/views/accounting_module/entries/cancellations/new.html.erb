<div class="row">
  <div class="col-md-6 offset-md-3">
    <div class="card">
      <div class="card-header bg-danger">
        <h3 class="card-title"> Cancellation Details </h3>
      </div>
      <div class="card-body">
        <%= simple_form_for [@entry, @cancellation], url: :accounting_module_entry_cancellations, html: { autocomplete: 'off' } do |f| %>
          <%= f.error_notification %>
          <%= f.input :cancelled_at, as: :string, label: "Cancellation Date", input_html: { class: "datepicker" } %>
          <%= f.input :cancellation_description, as: :text %>
          <%= f.input :cancelled_by_id, input_html: { value: current_user.id }, as: :hidden %>
          <%= f.input :entry_id, input_html: { value: @entry.id }, as: :hidden %>
          <%= f.submit "Cancel Entry", class: "btn btn-danger float-right", data: { disable_with: "Processing..." } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
