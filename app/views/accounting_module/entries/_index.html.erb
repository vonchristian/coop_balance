  <div class="col-md-9">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-md-8">
            <%=form_tag accounting_module_entries_path, method: :get do %>
              <div class="input-group">
                <%= text_field_tag :search, params[:search],  autofocus: true, class: "form-control", placeholder: "Search for Reference Number, Description", id: 'account-search-form' %>
                <%= select_tag :organization_id, options_for_select(current_cooperative.organizations.map {|o| [o.abbreviated_name, o.id]}, params[:organization_id]), class: ' form-control border-input', prompt: "--- Organization ---" %>
                <span class="input-group-btn">
                  <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
                    <i class="fa fa-search"></i>
                  <% end %>
                </span>
              </div>
            <% end %>
          </div>
          <div class="col-md-4">
            <% if params[:from_date].present? || params[:to_date].present? || params[:search].present? %>
              <center>
                <div class="row">
                  <div class="col-md-8">
                    <h4 class="card-title"><%=number_to_currency @ordered_entries.where(cancelled: false).sum {|e| Money.new(e.debit_amounts.sum(:amount_cents)).amount} %></h4>
                    <small class="text-muted">TOTAL AMOUNT</small>
                  </div>
                  <div class="col-md-4">
                    <h4 class="card-title"><%= @ordered_entries.count %></h4>
                    <small class="text-muted">ENTRIES</small>
                  </div>
                </div>
              </center>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <hr>
    <% entries.each do |entry| %>
      <%= render 'accounting_module/entries/partials/header', entry: entry %>
    <% end %>
    <% if entries.any? %>
      <center><%= will_paginate entries %></center>
    <% end %>
  </div>

<script type="text/javascript">
  $(document).ready(function() {
    $("#organization_id").select2({
      theme: "bootstrap"
    });
  });
</script>