<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-body">
          <div class='row'>
            <div class="col-md-2">
              <%=image_tag(@share_capital.avatar, height: 45, width: 45, class: "img-circle")%>
            </div>
            <div class="col-md-6">
              <b><%= @share_capital.account_owner_name.upcase %></b><br>
              <small class="text-muted"><%= @share_capital.share_capital_product_name %></small>
            </div>
            <div class="col-md-4">
              <h4 class="title-up"><%= number_to_currency @share_capital.balance %></h4>
            </div>
          </div>
          <%= simple_form_for @ioc_payment, url: :accounting_module_ioc_distributions_share_capital_processings do |f| %>
            <%= f.input :share_capital_id, input_html: { value: @share_capital.id }, as: :hidden %>
            <%= f.input :cart_id, input_html: { value: current_cart.id }, as: :hidden %>
            <%= f.input :employee_id, input_html: { value: current_user.id }, as: :hidden %>

            <%= f.input :amount %>
            <%= f.submit "Add Amount", class: "btn btn-primary float-right" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>