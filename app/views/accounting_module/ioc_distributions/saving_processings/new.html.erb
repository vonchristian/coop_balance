<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-2">
              <%= image_tag(@saving.avatar, height: 45, width: 45, class: "img-circle") %>
            </div>
            <div class="col-md-6">
              <%= @saving.account_owner_name.upcase %><br>
              <small class="text-muted"><%= @saving.saving_product_name%></small>
            </div>
            <div class="col-md-4">
              <h4 class="title-up"><%= number_to_currency @saving.balance %></h4>
            </div>
          </div>   
          <%= simple_form_for @ioc_payment, url: :accounting_module_ioc_distributions_saving_processings do |f| %>
            <%= f.input :saving_id, input_html: { value: @saving.id }, as: :hidden %>
            <%= f.input :cart_id, input_html: { value: current_cart.id }, as: :hidden %>
            <%= f.input :employee_id, input_html: { value: current_user.id }, as: :hidden %>

            <%= f.input :amount %>
            <%= f.submit "Add Amount", class: "btn btn-primary float-right" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>