<%= simple_form_for @ioc_payment, url: :accounting_module_ioc_distributions_saving_processings do |f| %>
  <%= f.input :saving_id, input_html: { value: @saving.id }, as: :hidden %>
  <%= f.input :cart_id, input_html: { value: current_cart.id }, as: :hidden %>
  <%= f.input :employee_id, input_html: { value: current_user.id }, as: :hidden %>

  <%= f.input :amount %>
  <%= f.submit "Add Amount" %>
<% end %>