
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"> <%= @account.name %> </h3>
      </div>
      <div class="card-body">
        <ul class="nav nav-tabs">
          <li class="<%= 'active' if current_page?(accounting_module_account_entries_path(@account))%>"><%= link_to 'Entries', accounting_module_account_entries_path(@account) %></li>
          <li class="<%= 'active' if current_page?(accounting_module_account_reports_path(@account))%>"><%= link_to 'Reports', accounting_module_account_reports_path(@account) %></li>
          <li class="<%= 'active' if current_page?(accounting_module_account_settings_path(@account))%>"><%= link_to 'Settings', accounting_module_account_settings_path(@account) %></li>

        </ul>
          <% if current_page? accounting_module_account_path(@account) %>
            <%= render 'accounting_module/accounts/partials/info' %>
          <% end %>
          <% if current_page? accounting_module_account_entries_path(@account) %>
            <%= render 'accounting_module/accounts/partials/entries' %>
          <% end %>
          <% if current_page? accounting_module_account_reports_path(@account) %>
            <%= render 'accounting_module/accounts/partials/reports' %>
          <% end %>
          <% if current_page? accounting_module_account_settings_path(@account) %>
            <%= render 'accounting_module/accounts/partials/settings' %>
          <% end %>

      </div>
    </div>
  </div>
</div>
