<% content_for(:html_title) { "#{@savings_account.depositor_name} | #{@savings_account.saving_product_name}" } %>
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <nav class="nav nav-pills flex-column flex-md-row">
          <%= link_to 'Savings Details', savings_account_path(@savings_account), class: "text-sm-center nav-link #{'active' if current_page?(savings_account_path(@savings_account))}" %>
          <%= link_to 'Settings', savings_account_settings_path(@savings_account), class: "text-sm-center nav-link #{'active' if current_page?(savings_account_settings_path(@savings_account))}" %>
        </nav>
      </div>
      <% if current_page? savings_account_path(@savings_account) %>
        <%= render 'savings_accounts/partials/info' %>
      <% end %>
      <% if current_page? savings_account_settings_path(@savings_account) %>
        <%= render 'savings_accounts/partials/settings' %>
      <% end %>
    </div>
  </div>
</div>

