<% content_for(:html_title) { "#{@savings_account.depositor_name} | #{@savings_account.saving_product_name}" } %>
<div class="row">
    <div class="card">
      <div class="card-body">
        <ul class="nav nav-tabs">
          <li class="nav-item"><%= link_to 'Info', savings_account_path(@savings_account), class: "nav-link #{'active' if current_page?(savings_account_path(@savings_account))}" %></li>
          <li class="nav-item"><%= link_to 'Settings', savings_account_settings_path(@savings_account), class: "nav-link #{'active' if current_page?(savings_account_settings_path(@savings_account))}" %></li>
        </ul>
        <br>
        <% if current_page? savings_account_path(@savings_account) %>
          <%= render 'savings_accounts/partials/info' %>
        <% end %>
        <% if current_page? savings_account_settings_path(@savings_account) %>
          <%= render 'savings_accounts/partials/settings' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

