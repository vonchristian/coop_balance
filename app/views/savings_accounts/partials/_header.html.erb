<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-md-1">
       <%=image_tag(savings_account.avatar, height: 45, width: 45, class: "img-circle")%>
      </div>
      <div class="col-md-4">
    <%=link_to savings_account_path(savings_account) do %>
          <b><%= savings_account.depositor.name.try(:upcase) %></b><br>
      <div class="row">
        <div class="col-md-5">
          <small class="text-muted"><i class="fa fa-server"></i> <%= savings_account.saving_product_name %></small>
        </div>
        <div class="col-md-6">
          <small class="text-muted"><i class="fa fa-clock" data-toggle="tooltip" title="Last Transaction Date"></i> <%= savings_account.default_last_transaction_date.strftime("%b %e, %Y") %></small>
        </div>
      </div>
    <% end %>
      </div>
      <div class="col-md-3">
        <h4 class="card-title"><%=number_to_currency savings_account.balance %></h4>
        <small class="text-muted"> BALANCE </small>
      </div>
      <div class="col-md-4">
        <% if policy([:savings_accounts, :deposit]).new? %>
          <%= link_to 'Deposit', new_savings_account_deposit_path(savings_account), class: "btn btn-success btn-sm" %>
        <% end %>

        <% if policy([:savings_accounts, :withdrawal]).new? %>
          <%= link_to 'Withdraw', new_savings_account_withdrawal_path(savings_account), class: "btn btn-warning btn-sm" %>
        <% end %>
        <div class="btn-group">
          <button type="button" class="btn btn-light btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            More
          </button>
          <div class="dropdown-menu">
            <a class="dropdown-item" href="#">Action</a>
            <a class="dropdown-item" href="#">Another action</a>
            <a class="dropdown-item" href="#">Something else here</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">Close Account</a>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>

