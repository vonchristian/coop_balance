 <div class="tab-pane <%= 'active' if current_page? savings_account_settings_path(@savings_account) %>">
   <%=link_to "New Adjusting Entry", new_savings_account_adjusting_entry_path(@savings_account) %>
   <hr>
   <h4>Merge Account</h4>
   <%= link_to 'Merge Account', new_savings_account_account_merging_path(@savings_account), class: "btn btn-danger" %>
  <h4>Set Barangay</h4>
  <%= @savings_account.barangay_name %>
    <%= link_to 'Set Barangay', edit_savings_account_barangay_setting_path(id: @savings_account), class: "btn btn-danger" %>
</div>
<% if policy([:savings_accounts, :account_closing]).new? && !@savings_account.closed? %>
  <%= link_to 'Close Account', new_savings_account_account_closing_path(@savings_account), class: "btn btn-danger btn-xs" %>
<% end %>
