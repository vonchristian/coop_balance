<div class="row">
  <div class="col-md-3">
  </div>
  <div class="col-md-5">
    <div class="card">
      <div class="card-header bg-danger">
      </div>
      <div class="card-body">
        <center><h3 class="card-title"><%= @savings_account.depositor_name %></h3></center>
        <hr>
        <small>BALANCE</small>
        <h3 class="condensed-text"><%= number_to_currency @savings_account.balance %></h3>
        <hr>
        <%= simple_form_for [@savings_account, @withdrawal], html: { autocomplete: 'off' }, url: :savings_account_withdrawals do |f| %>
         <%= f.error_notification %>
          <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
          <%= f.input :amount, as: :currency %>
          <%= f.input :payment_type, label: 'Payment Type', collection: AccountingModule::Entry.payment_types.keys.to_a.map{|a| [a.titleize, a] }, selected: AccountingModule::Entry.payment_types.keys.first %>
          <%= f.input :or_number, label: 'OR number' %>
          <%= f.input :saving_id, input_html: { value: @savings_account.id },as: :hidden %>
          <%= f.input :employee_id, input_html: { value: current_user.id },as: :hidden %>
          <%= f.input :cash_account_id, collection: current_user.cash_accounts.map{|a| [a.name, a.id] } %>
          <%= f.submit "Save Withdrawal", class: "btn btn-primary float-right", data: { disable_with: 'Processing...' } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $("#memberships_savings_accounts_withdrawal_processing_payment_type").select2({
      theme: "bootstrap"
    });
  });
</script>
