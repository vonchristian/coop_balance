<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="nav-tabs-custom">
      <div class="box-header">
          <h3 class="box-title"> New Deposit Details </h3>
           <h4><center><%= image_tag(@savings_account.depositor.avatar.url(:medium), style: 'width:60px;height:60px;', class: 'media-object img-circle') %></center></h4>

            <h3><center><%= @savings_account.depositor_name %></center></h3>
      </div>
     <div class="box-body">
    <%= simple_form_for [@saving, @deposit], validate: true, url: :savings_account_deposits do |f| %>
      <%= f.error_notification %>
      <%= f.input :amount, as: :currency %>
      <%= f.input :or_number %>
      <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
      <%= f.input :saving_id, input_html: { value: @savings_account.id },as: :hidden %>
      <%= f.input :recorder_id, input_html: { value: current_user.id },as: :hidden %>
      <div class="box-footer">
        <%= f.submit "Save Deposit", class: "btn btn-primary pull-right" %>
      </div>
    <% end %>
