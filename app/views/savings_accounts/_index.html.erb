<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <%= render 'savings_accounts/partials/navbar_links' %>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-8">
            <%=form_tag savings_accounts_path, method: :get, class: "search-form" do %>
              <div class="input-group">
                <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Savings Account ", id: 'account-search-form' %>
                <span class="input-group-btn">
                  <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
                    <i class="fa fa-search"></i>
                  <% end %>
                </span>
              </div>
            <% end %>
          </div>
          <div class="col-md-4">
            <%= link_to 'New Account', new_treasury_module_savings_account_path, class: "btn btn-primary pull-right" %>
          </div>
        </div>
      </div>
    </div>
    <% savings_accounts.each do |savings_account| %>
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-md-1">
             <%=image_tag(savings_account.avatar.variant(resize: "45x45"), class: "img-circle") if savings_account.avatar.attached? %>
            </div>
            <div class="col-md-4">
              <%=link_to savings_account_path(savings_account) do %>
                    <b><%= savings_account.depositor.name.try(:upcase) %></b><br>
                <div class="row">
                  <div class="col-md-5">
                    <small class="text-muted"><i class="fa fa-server"></i> <%= savings_account.saving_product_name %></small>
                  </div>
                  <div class="col-md-6">
                    <small class="text-muted"><i class="fa fa-clock" data-toggle="tooltip" title="Last Transaction Date"></i> <%= savings_account.default_last_transaction_date.strftime("%b %e, %Y") %></small>
                  </div>
                </div>
              <% end %>
            </div>
            <div class="col-md-3">
              <h4 class="card-title"><%=number_to_currency savings_account.balance %></h4>
              <small class="text-muted"> BALANCE </small>
            </div>
            <div class="col-md-4">
              <% if policy([:savings_accounts, :deposit]).new? %>
                <%= link_to 'Deposit', new_savings_account_deposit_path(savings_account), class: "btn btn-success btn-sm" %>
              <% end %>

              <% if policy([:savings_accounts, :withdrawal]).new? %>
                <%= link_to 'Withdraw', new_savings_account_withdrawal_path(savings_account), class: "btn btn-danger btn-sm" %>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
