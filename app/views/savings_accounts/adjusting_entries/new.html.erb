<%= simple_form_for @entry, url: :savings_account_adjusting_entries do |f| %>
  <%= f.error_notification %>
  <%= f.input :entry_date, as: :string, input_html: { class: "datepicker" } %>
  <%= f.input :reference_number %>
  <%= f.input :description %>
  <%= f.input :amount %>
  <%= f.input :debit_account_id, collection: AccountingModule::Account.all.map{|a| [a.name, a.id] } %>
  <%= f.input :credit_account_id, collection: AccountingModule::Account.all.map{|a| [a.name, a.id] } %>
  <%= f.input :commercial_document_type, input_html: { value: @savings_account.class.to_s } %>
  <%= f.input :commercial_document_id, input_html: { value: @savings_account.id } %>
  <%= f.input :employee_id, input_html: { value: current_user.id } %>
  <%= f.submit "Save Adjusting Entry", class: "btn btn-danger" %>
<% end %>


