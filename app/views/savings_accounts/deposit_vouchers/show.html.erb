<div class="col-md-8 offset-md-2">
    <div class='card'>
      <div class="card-body pt-5">
        <%= render 'savings_accounts/partials/transaction_header', savings_account: @savings_account %>
        <%= render 'vouchers/partials/alert_message', voucher: @voucher %>
        <%= render 'vouchers/partials/body', voucher: @voucher %>
        <hr>
        <% if @voucher.accounting_entry.blank? %>
          <%= button_to "Confirm Transaction", savings_account_voucher_confirmations_path(savings_account_id: @savings_account.id, voucher_id: @voucher.id), method: :post, class: "btn btn-primary float-right", data: { disable_with: "Processing Transaction..." } %>
          <%= button_to "Cancel", savings_account_deposit_voucher_path(savings_account_id: @savings_account.id, voucher_id: @voucher.id), method: :delete, class: "btn text-danger float-left" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
