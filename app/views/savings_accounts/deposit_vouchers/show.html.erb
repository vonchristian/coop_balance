<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Savings Deposit Details </h3>
        <div class="row min-margin">
          <div class="col-md-4 offset-md-1">
            Amount
          </div>
          <div class="col-md-4">
            <b><%= number_to_currency @voucher.voucher_amounts.for_account(account: @savings_account.saving_product_account).sum(:amount) %></b>
          </div>
        </div>
      </div>
      <div class="card-body">
        <%= render 'vouchers/partials/body', voucher: @voucher %>
        <hr>
        <% if @voucher.accounting_entry.blank? %>
          <%= link_to "Confirm", savings_account_voucher_confirmations_path(savings_account_id: @savings_account.id, voucher_id: @voucher.id), method: :post, class: "btn btn-primary float-right", data: { disable_with: "Processing..." } %>
          <%= link_to "Cancel", savings_account_deposit_voucher_path(savings_account_id: @savings_account.id, voucher_id: @voucher.id), method: :delete, class: "btn text-danger float-left" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
