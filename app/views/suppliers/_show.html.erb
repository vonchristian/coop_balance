<div class="row">
    <div class="col-md-3">
      <%= render 'suppliers/partials/sidebar' %>
    </div>
    <div class="col-md-9">
      <div class="box box-solid">

      <div class="tab-content box-body">
        <div class="nav-tabs-navigation">
        <ul id="tabs" class="nav nav-tabs" data-tabs="tabs">
          <li class="<%= 'active' if current_page?(supplier_path(@supplier))%>"><%= link_to 'Info', supplier_path(@supplier) %></li>
          <li class="<%= 'active' if current_page?(supplier_purchases_path(@supplier))%>"><%= link_to 'Stocks Deliveries', supplier_purchases_path(@supplier) %></li>
          <li class="<%= 'active' if current_page?(supplier_vouchers_path(@supplier))%>"><%= link_to 'Vouchers', supplier_vouchers_path(@supplier) %></li>
        </ul>
      </div>
        <% if current_page?(supplier_path(@supplier)) %>
          <%=render 'suppliers/partials/supplier_info' %>
        <% end %>
         <% if current_page?(supplier_vouchers_path(@supplier)) %>
          <%=render 'suppliers/partials/vouchers' %>
        <% end %>
          <% if current_page?(supplier_purchases_path(@supplier)) %>
            <%= render 'suppliers/partials/purchases'%>
          <% end %>
      </div>
    </div>
  </div>
</div>
