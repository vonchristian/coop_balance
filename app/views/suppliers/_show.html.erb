<div class="row">
    <div class="col-md-3">
      <%= render 'suppliers/partials/sidebar' %>
    </div>
    <div class="col-md-9">
      <div class="box box-solid">
        <div class="box-header">
        <ul class="nav nav-tabs">
          <li class="<%= 'active' if current_page?(supplier_path(@supplier))%>"><%= link_to 'Info', supplier_path(@supplier) %></li>
          <li class="<%= 'active' if current_page?(supplier_deliveries_path(@supplier))%>"><%= link_to 'Deliveries', supplier_deliveries_path(@supplier) %></li>
        </ul>
      </div>
      <div class="tab-content box-body">
        <% if current_page?(supplier_path(@supplier)) %>
          <%=render 'suppliers/partials/supplier_info' %>
        <% end %>
          <% if current_page?(supplier_deliveries_path(@supplier)) %>
            <%= render 'suppliers/partials/deliveries'%>
          <% end %>
      </div>
    </div>
  </div>
</div>