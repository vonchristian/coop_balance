<div class="tab-pane <%= 'active' if current_page?(supplier_purchases_path(@supplier))%>">
            <%= link_to 'New Purchase', new_supplier_purchase_path(@supplier), class: "btn btn-primary btn-flat pull-right" %>
            <%= link_to 'New Purchase Return', new_supplier_purchase_return_path(@supplier), class: "btn btn-primary btn-flat pull-right" %>

        <div class="table table-responsive">
          <table class="table table-hover table-striped">
            <thead>
              <tr>
                <th>Date</th>
                <th>Voucher #</th>
                <th>Amount</th>
              </tr>
            </thead>
            <tbody>
              <% @purchase_orders.each do|order| %>
                <tr>
                  <td><%= order.created_at %></td>
                  <td><%= order.voucher_number %> </td>
                  <td><%= order.purchase_order_line_items.count %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

