<div class="tab-pane <%= 'active' if current_page?(supplier_vouchers_path(@supplier))%>" id="supplier-vouchers">
  <%= link_to "New Voucher", new_supplier_voucher_path(@supplier), class: "btn btn-primary" %>
  <div class="table table-responsive">
    <table class="table table-hover table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Description</th>
          <th>Amount</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @supplier.vouchers.each do |voucher| %>
          <tr>
            <td><%= voucher.date.strftime("%B %e, %Y") %></td>
            <td><%=link_to voucher.description, voucher_path(voucher) %></td>
            <td><span class="pull-right"><%= number_to_currency voucher.voucher_amounts.sum(:amount) %></span></td>
            <td>
              <% if voucher.disbursed? %>
                <span class="label bg-green"> Disbursed </span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
