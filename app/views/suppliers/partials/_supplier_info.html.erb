<div class="tab-pane <%='active' if current_page?(supplier_path(@supplier)) %>" id="supplier-info">
  <p class="text-muted">ACCOUNT DETAILS </p>
  <div class="row">
    <div class="col-md-4">
      <small>DELIVERIES</small>
      <h3><%= number_to_currency @supplier.deliveries_total %></h3>
    </div>
    <div class="col-md-4">
      <small>PAYMENTS</small>
      <h3><%= number_to_currency @supplier.payments_total %></h3>
    </div>
     <div class="col-md-4">
      <small>BALANCE</small>
      <h3><%= number_to_currency @supplier.balance %></h3>
    </div>
  </div>
  <hr />


</div>