
<%= link_to 'New Raw Product', new_warehouse_department_raw_material_path %>

<div class="row">
  <div class="col-md-8">
    <div class="box box-danger">
      <div class="box-header">
        <h3 class="box-title">Raw Materials </h3>
      </div>
      <div class="box-body">
        <div class="row">
          <div class="col-md-6">
            Raw Material
          </div>
          <div class="col-md-2">
            Purchases
          </div>
          <div class="col-md-2">
            WIP
          </div>
          <div class="col-md-2">
            Finished
          </div>
        </div>
        <hr>
<% @raw_materials.each do |raw_material| %>
  <div class="row">
    <div class="col-md-6">
      <b><%= raw_material.name %></b>
      <br>
      <br>
      <%= link_to 'New Purchase', new_warehouse_department_raw_material_purchase_path(raw_material), class: "btn btn-default" %>

      <%= link_to 'New WIP', new_warehouse_department_raw_material_work_in_progress_material_path(raw_material), class: "btn btn-default" %>
      <%= link_to 'New Finished Goods', new_warehouse_department_raw_material_finished_goods_material_path(raw_material), class: "btn btn-success" %>

    </div>
    <div class="col-md-2">
      <%= raw_material.raw_material_stocks.total %> <%= raw_material.unit %>
    </div>
    <div class="col-md-2">
      <%= raw_material.work_in_process_materials.total %> <%= raw_material.unit %>
    </div>
    <div class="col-md-2">
      <%= raw_material.finished_good_materials.total %> <%= raw_material.unit %>
    </div>
  </div>
  <hr>


<% end %>
