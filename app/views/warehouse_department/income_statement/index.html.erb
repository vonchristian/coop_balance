<div class="row">
  <div class="col-md-8">
    <div class="box box-default">
      <div class="box-header with-border">
        <div class="row">
          <div class="col-md-3">
            <h3 class="box-title">Income Statement</h3>
          </div>
          <div class="col-md-9">
            <%= form_tag({:action => 'index'}, {:method => :get, :class => 'form-inline'}) do%>
              <div class="form-group">
              <%= label_tag :from_date, nil, class: 'sr-only'%>
              <%= text_field_tag :from_date, @from_date, :class => 'datepicker form-control', :placeholder => "Date" %>
              </div>
              <div class="form-group">
              <%= label_tag :to_date, nil, class: 'sr-only'%>
              <%= text_field_tag :to_date, @to_date, :class => 'datepicker form-control', :placeholder => "Date" %>
              </div>
              <button type="submit" class="btn btn-default">Get Report</button>
            <% end %>
          </div>
        </div>
      </div>
      <div class="box-body">
      <%= render 'warehouse_department/balance_sheet/account', :name => "Revenues", :accounts => @revenues %>
      <%= render 'warehouse_department/balance_sheet/account', :name => "Expenses", :accounts => @expenses %>
    </div>
  </div>
</div>
