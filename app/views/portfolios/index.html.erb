
<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-md-12">
        <h4 class="card-title">Savings Portfolio</h4>
        <div class="card-sub-title">Generate report on savings deposit balances of members.</div>
      </div>
    </div>
    <hr>
    <label class="no-margin-bottom">As of</label>
    <%= form_tag({format: 'xlsx', :action => 'index', controller: "portfolios/savings"}, {:method => :get, :class => 'form-inline'}) do %>
      <div class="form-group">
        <%= text_field_tag :to_date, @to_date, :class => 'datepicker form-control' %>

        <%= select_tag :office_id, options_for_select(current_cooperative.offices.map {|m| [m.name, m.id]}, params[:office_id]), class: ' form-control border-input', prompt: false %>

      </div>
      <button type="submit" class="btn btn-default">Get Report (Excel)</button>
    <% end %>
  </div>
