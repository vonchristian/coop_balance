<!-- Sidebar -->
<div class="sidebar">
  <!-- Sidebar user panel (optional) -->
  <div class="user-panel mt-3 pb-3 mb-3 d-flex">
    <div class="image">
      <% if current_user.avatar.attachment.present? %>
        <%= image_tag(current_user.avatar) %>
      <% else %>
        <%= image_tag("default_avatar.png", class: "img-circle") %>
      <% end %>
    </div>
    <div class="info">
      <a href="#" class="d-block"><%= current_user.first_and_last_name %></a>
      <small><%= current_user.designation %></small>
    </div>
  </div>

