     <li class="nav-item"<%= 'active' if current_page?(matured_loans_path) %> ><a href="/matured_loans" class="nav-link"><i class="nav-icon fa fa-eye"></i> <span>Loans Maturity </span></a></li>
     <li class="nav-item"<%= 'active' if current_page?(loans_module_schedules_path) %> ><a href="/loans_module/schedules" class="nav-link"><i class="nav-icon fa fa-calendar"></i> <span> Amortization Schedules</span></a></li>
