<!-- Sidebar -->
<div class="sidebar">
  <!-- Sidebar user panel (optional) -->
  <div class="user-panel mt-3 pb-3 mb-3 d-flex">
    <div class="image">
      <% if current_user.avatar.attachment.present? %>
        <%= image_tag(current_user.avatar) %>
      <% else %>
        <%= image_tag("default_avatar.png", class: "img-circle") %>
      <% end %>
    </div>
    <div class="info">
      <a href="#" class="d-block"><%= current_user.first_and_last_name %></a>
      <small><%= current_user.designation %></small>
    </div>
  </div>

  <!-- Sidebar Menu -->
  <nav class="mt-2">
    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
      <!-- Add icons to the links using the .nav-icon class
           with font-awesome or any other icon font library -->
      <% if current_user.loan_officer? %>
        <%=render 'layouts/shared/sidebar_links/loans_department' %>
      <% end %>
      <% if current_user.teller? %>
        <%=render 'layouts/shared/sidebar_links/treasury_department' %>
      <% end %>
    </ul>
  </nav>
  <!-- /.sidebar-menu -->
</div>
<!-- /.sidebar -->
