

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title><%= content_for?(:html_title) ? yield(:html_title) : "COOP LEDGER" %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= stylesheet_link_tag "application" %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
  </head>
  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <div id="modal-holder"></div>
      <!-- Navbar -->
      <%= render 'layouts/shared/navbar', cached: true %>
      <!-- Main Sidebar Container -->
      <aside class="main-sidebar sidebar-collapse sidebar-dark-primary elevation-6">
        <%= render 'layouts/shared/brand', cached: true %>
        <%= render 'layouts/shared/sidebar', cached: true %>
      </aside>
      <div class="content-wrapper">
        <div class="content">
          <div class="content-header">
            <small><%= breadcrumbs pretext: "You are here:", separator: " &rsaquo;", style: :bootstrap %></small>
          </div>
          <div class="container">
            <div class="container-fluid">

              <%= render 'layouts/shared/flash_messages' %>
            </div>
          </div>

            <%= yield %>


        </div>
      </div>
      <%= render 'layouts/shared/footer' %>
    </div>
</html>
