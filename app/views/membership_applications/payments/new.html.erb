<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-solid">
      <div class="box-header">

           <h4><center><%= image_tag(@member.avatar.url(:medium), style: 'width:60px;height:60px;', class: 'media-object img-circle') %></center></h4>

            <h3><center><%= @member.name %></center></h3>
      </div>
      <div class="box-body">
        <p class="text-muted">Member Contributions </p>
        <% @member.voucher_amounts.each do |amount| %>
          <div class="row">
            <div class="col-md-5 col-md-offset-1">
              <%= amount.description %>
            </div>
            <div class="col-md-3">
              <span class="pull-right">
                <%= number_to_currency amount.amount %>
              </span>
            </div>
          </div>
          <br />
        <% end %>
        <hr>
<div class="row">
  <div class="col-md-5 col-md-offset-1">
    <h4>TOTAL</h4>
  </div>
  <div class="col-md-3">
    <h4><span class="pull-right"><%= number_to_currency @member.voucher_amounts.total %></span></h4>
  </div>
</div>

<%= simple_form_for @entry, url: :membership_application_payments do |f| %>
  <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
  <%= f.input :description, input_html: { value: "Payment of membership fee, share capital and MAS Contribution"} %>
  <%= f.input :reference_number %>
  <%= f.input :member_id, input_html: { value: @member.id }, as: :hidden %>
  <%= f.input :recorder_id, input_html: { value: current_user.id }, as: :hidden %>
  <div class="box-footer">
    <%= f.submit "Save Payment", class: "btn btn-primary"%>
  </div>
<% end %>
