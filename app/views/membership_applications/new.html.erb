<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-solid">
      <div class="box-header">
        <h3 class="box-title">New Membership Application Details </h3>
      </div>
      <div class="box-body">
        <%= simple_form_for @membership, multipart: true, url: :membership_applications do |f| %>
          <%= f.error_notification %>
          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <center>
                <%= f.input :avatar %>
              </center>
          <%= f.input :account_number, input_html: { value: Membership.generate_account_number } %>
          <%= f.input :membership_type, collection: Membership.membership_types.keys.to_a.map{ |a| [a.titleize, a] }, as: :radio_buttons %>
          <%= f.input :first_name %>
          <%= f.input :middle_name %>
          <%= f.input :last_name %>
          <%= f.input :civil_status, collection: Member.civil_statuses.keys.to_a.map{|a| [a.titleize, a] }, as: :radio_buttons %>
          <%= f.input :sex, collection: Member.sexes.keys.to_a.map{|a| [a.titleize, a] }, as: :radio_buttons %>

          <%= f.input :date_of_birth, as: :string, input_html: { class: "datepicker" } %>
          <%= f.input :place_of_birth %>
          <%= f.input :contact_number %>
          <%= f.input :email %>
          <p> Father's Information</p>
          <%= f.input :father_first_name, label: "First Name" %>
          <%= f.input :father_middle_name, label: "Middle name" %>
          <%= f.input :father_last_name, label: "Last Name" %>
          <%= f.input :father_occupation, label: "Occupation" %>
          <%= f.input :father_address, label: "Address" %>

          <hr>
          <p>Mother's Information</p>
          <%= f.input :mother_first_name, label: "First Name" %>
          <%= f.input :mother_middle_name, label: "Middle Name" %>
          <%= f.input :mother_maiden_name, label: "Mother's Maiden Name" %>
          <%= f.input :mother_occupation, label: "Occupation" %>
          <% CoopServicesModule::Program.all.each do |program| %>
            <%= program.name %>
            <%= program.contribution %>
          <% end %>
          <hr>
          <p>Share Capital</p>
          <%= f.input :share_capital_product_id, input_html: { value: CoopServicesModule::ShareCapitalProduct.default_product.id }, as: :hidden %>
          <hr>
          <%= f.input :office_id, collection: CoopConfigurationsModule::Office.all.map{|a| [a.name, a.id] }, as: :radio_buttons %>
          <div class="box-footer">
            <%= f.submit "Save Membership Application",  class: "btn btn-primary pull-right" %>
          </div>
        <% end %>
