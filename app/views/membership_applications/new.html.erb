<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-solid">
      <div class="box-header">
        <h3 class="box-title">New Membership Application Details </h3>
      </div>
      <div class="box-body">
        <%= simple_form_for @membership, multipart: true, url: :membership_applications do |f| %>
          <%= f.error_notification %>
          <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <center>
                <center><%=image_tag("default.png", class: "img-circle", height: 60, width: 60) %></center>
                <%= f.input :avatar, as: :file, label: "Profile Photo" %>
              </center>
          <%= f.input :account_number, input_html: { value: SecureRandom.uuid }, as: :hidden %>
          <%= f.input :membership_type, collection: Membership.membership_types.keys.to_a.map{ |a| [a.titleize, a] }, as: :radio_buttons %>
          <%= f.input :first_name %>
          <%= f.input :middle_name %>
          <%= f.input :last_name %>
          <%= f.input :civil_status, collection: Member.civil_statuses.keys.to_a.map{|a| [a.titleize, a] }, as: :radio_buttons %>
          <%= f.input :sex, collection: Member.sexes.keys.to_a.map{|a| [a.titleize, a] }, as: :radio_buttons %>

          <%= f.input :date_of_birth, as: :string, input_html: { class: "datepicker" } %>

          <%= f.input :contact_number %>
          <%= f.input :email %>
          <%= f.input :tin_number %>

          <%= f.input :office_id, input_html: { value: current_user.office_id }, as: :hidden %>
          <%= f.input :cooperative_id, input_html: { value: current_user.cooperative_id }, as: :hidden %>
          <div class="box-footer">
            <%= f.submit "Save Membership Application",  class: "btn btn-primary pull-right" %>
          </div>
        <% end %>
