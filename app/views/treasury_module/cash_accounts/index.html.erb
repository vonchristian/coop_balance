<% content_for(:html_title) { "Cash Accounts" } %>
<div class='container'>
  <div class='card'>
    <div class='card-body'>
      <h3 class='title-up'> Cash Books </h3>
      <div class='table table-responsive'>
        <table class='table table-hover'>
          <thead>
            <tr>
              <th> Cash Account </th>
              <th> Balance </th>
            </tr>
          </thead>
          <tbody>
            <% @cash_accounts.each do |cash_account| %>
              <tr>
                <td><%= link_to cash_account.name, treasury_module_cash_account_path(cash_account) %></td>
                <td><%= number_to_currency cash_account.balance %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
