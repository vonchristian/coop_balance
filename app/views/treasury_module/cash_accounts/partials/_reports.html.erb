<div class="row">
  <div class="col-md-9">
    <h4 class="card-title">Transactions Report</h4>
    <p class="text-muted"> Generate transactions report </p>
    <%=link_to 'This Day', treasury_module_cash_account_path(cash_account, format: 'pdf', from_date: Time.zone.now.beginning_of_day, to_date: Time.zone.now.end_of_day), class: "btn btn-sm btn-default"  %> &nbsp;
    <br>
    <small class="text-muted">OR select date </small>
    <%= form_tag({:action => "index", format: 'pdf', from_date: params[:from_date], to_date: params[:to_date]}, {:method => :get})  do %>
      <div class="row">
        <div class="col-md-3">
          <div class="form-group">
            <%= text_field_tag :from_date, @from_date, :class => 'datepicker form-control border-input', :placeholder => "From " %>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
            <%= text_field_tag :to_date, @to_date, :class => 'form-control border-input datepicker', :placeholder => "To " %>
          </div>
        </div>
        <div class="col-md-1">
          <button type="submit" class="btn btn-default"> Go</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
