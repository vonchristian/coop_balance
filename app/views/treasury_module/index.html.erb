<div class="row">
  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title"> Cash On Hand </h4>
        <div class="row">
          <div class="col-md-7">
            <p>Beginning Balance </p>
          </div>
          <div class="col-md-4">
            <span class="float-right">
              <%= number_to_currency current_user.cash_on_hand_account.balance(to_date: Date.today.yesterday) %>
            </span>
          </div>
        </div>
        <div class="row">
          <div class="col-md-7">
            <p class="text-success">&nbsp; &nbsp; <i class="fa fa-plus-circle"></i> Cash Receipts </p>
          </div>
          <div class="col-md-4">
            <span class="text-success float-right"><%= number_to_currency current_user.cash_on_hand_account.debits_balance(from_date: Date.today.beginning_of_day, to_date: Date.today.end_of_day) %></span>
          </div>
        </div>
        <div class="row">
        <div class="col-md-7">
          <p class="text-danger">&nbsp; &nbsp; <i class="fa fa-minus-circle"></i> Withdrawals </p>
        </div>
        <div class="col-md-4">
          <span class="text-danger float-right"><%= number_to_currency current_user.cash_on_hand_account.credits_balance(from_date: Date.today.beginning_of_day, to_date: Date.today.end_of_day) %></span>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-md-7">
          <p><b>Ending Balance </b> </p>
        </div>
        <div class="col-md-4">
          <span class="float-right"><b><%= number_to_currency current_user.cash_on_hand_account.balance(to_date: Date.today.end_of_day) %></b></span>
        </div>
      </div>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"> Transactions Summary </h3>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-3">
            <h4><%= current_user.entries.entered_on(from_date: Date.today.beginning_of_day, to_date: Date.today.end_of_day).count %></h4>
            <small>TRANSACTIONS</small>
          </div>
          <div class="col-md-3">
            <h4><%= LoansModule::Loan.disbursed.disbursed_by(employee_id: current_user.id).disbursed(from_date: Date.today.beginning_of_day, to_date: Date.today.end_of_day).count %></h4>
            <small>LOAN RELEASES</small>
          </div>
        </div>
        <hr>
        <%= line_chart current_user.entries.entered_on(from_date: Date.today.beginning_of_month, to_date: Date.today.end_of_month).group_by_day(:entry_date).count, download: true %>
        <%= form_tag({:action => "index", format: 'pdf', controller: "employees/reports", employee_id: current_user.id, date: params[:date]}, {:method => :get})  do %>
              <div class="row">
                <div class="col-md-3">
                  <div class="form-group">
                    <%= text_field_tag :date, Date.today, :class => 'datepicker form-control border-input', :placeholder => "Date" %>
                  </div>
                </div>
                <div class="col-md-1">
                  <button type="submit" class="btn btn-default"> View (PDF)</button>
                </div>
              </div>
            <% end %>
      </div>
    </div>
  </div>
</div>


