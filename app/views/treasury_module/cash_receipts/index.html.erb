
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-md-2">
            <h3 class="card-title"> Cash Receipts </h3>
          </div>
          <div class="col-md-6">
            <%=form_tag treasury_module_cash_receipts_path, method: :get do %>
              <div class="input-group">
                <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search OR #, description", id: 'account-search-form' %>
                <span class="input-group-btn">
                  <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
                    <i class="fa fa-search"></i>
                  <% end %>
                </span>
              </div>
            <% end %>
          </div>
          <div class="col-md-4">
            <span class="float-right">
              <div class="btn-group">
                <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  New Cash Receipt
                </button>
                <div class="dropdown-menu">
                  <% current_user.cash_accounts.each do |cash_account| %>
                    <%= link_to cash_account.name, new_treasury_module_cash_account_cash_receipt_line_item_path(cash_account), class: "dropdown-item" %>
                  <% end %>
                </div>
              </div>
            </span>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h3 class="card-title">Cash Accounts </h3>
            <% current_user.cash_accounts.each do |account| %>
              <%= number_to_currency account.balance %>
              <%= account.name %>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <% @cash_receipts.each do |entry| %>
          <% cache(entry) do %>
            <%= render 'accounting_module/entries/partials/header', entry: entry %>
          <% end %>
        <% end %>
        <center><%= will_paginate @cash_receipts %></center>
      </div>
    </div>
  </div>
</div>
