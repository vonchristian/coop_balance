<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-md-2">
            <h3 class="card-title"> Cash Receipts </h3>
          </div>
          <div class="col-md-6">
            <%=form_tag treasury_module_cash_receipts_path, method: :get do %>
              <div class="input-group">
                <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search OR #, description", id: 'account-search-form' %>
                <span class="input-group-btn">
                  <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
                    <i class="fa fa-search"></i>
                  <% end %>
                </span>
              </div>
            <% end %>
          </div>
          <div class="col-md-4">
            <span class="pull-right">
              <%=link_to 'New Cash Receipt', new_treasury_module_cash_receipt_line_item_path, class: "btn btn-primary float-right" %>
            </span>
          </div>
        </div>
      </div>
    </div>
              <% @cash_receipts.each do |entry| %>
                <% cache(entry) do %>
                  <%= render 'accounting_module/entries/partials/header', entry: entry %>
                <% end %>
              <% end %>
          
        <center><%= will_paginate @cash_receipts %></center>
      </div>
    </div>
  </div>
</div>
