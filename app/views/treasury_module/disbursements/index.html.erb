
<div class="card">
  <div class="card-header">
    <div class="row">
      <div class="col-md-2">
        <h3 class="card-title"> Disbursements </h3>
      </div>
      <div class="col-md-6">
        <%=form_tag treasury_module_disbursements_path, method: :get do %>
          <div class="input-group">
            <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search disbursements ", id: 'account-search-form' %>
            <span class="input-group-btn">
              <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
                <i class="fa fa-search"></i>
              <% end %>
            </span>
          </div>
        <% end %>
      </div>
      <div class="col-md-4">
        <span class="float-right">
          <%=link_to 'New Disbursement', new_treasury_module_disbursement_line_item_path, class: "btn btn-danger pull-right" %>
        </span>
      </div>
    </div>
  </div>
  </div>

          <% @cash_disbursements.each do |entry| %>
          <%= link_to accounting_module_entry_path(entry) do %>
            <div class="card">
              <div class="card-body">
                <div class="row">
                  <div class="col-md-3">
                    <%= entry.commercial_document_name %>
                  </div>
                  <div class="col-md-6">
                    <%= entry.description %><br>
                    <small class="text-muted"><i class="fa fa-clock"></i> <%= entry.entry_date.strftime("%B %e, %Y") %> &nbsp; &nbsp; # <%= entry.reference_number %></small>
                  </div>
                  <div class="col-md-3">
                    <%= number_to_currency  entry.debit_amounts.sum(:amount) %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
        </tbody>
      </table>
    </div>
    <center><%= will_paginate @cash_disbursements %></center>
  </div>
</div>

