<div class="row">
  <div class="col-md-4">
    <div class="box box-solid">
      <div class="box-body">
        <div class="row">
          <div class="col-md-8 border-right">
            <h4><%= number_to_currency current_user.cash_on_hand_account.credits_balance(from_date: Date.today, to_date: Date.today) %></h4>
            <small>CASH DISBURSEMENTS</small>
          </div>
          <div class="col-md-4">
            <center>
              <h3><%= Date.today.strftime("%e") %></h3>
              <small><%= Date.today.strftime("%b").upcase %></small>
            </center>
          </div>
        </div>
        <hr>
      </div>
    </div>
  </div>
  <div class="col-md-8">
    <div class="box box-solid">
      <div class="box-header">
      </div>
      <div class="box-body">
    </div>
  </div>
</div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="box box-danger">
      <div class="box-header with-border">
        <div class="row">
          <div class="col-md-2">
            <h3 class="box-title"> Disbursements </h3>
          </div>
          <div class="col-md-6">
            <%=form_tag treasury_module_disbursements_path, method: :get do %>
              <div class="input-group">
                <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search disbursements ", id: 'account-search-form' %>
                <span class="input-group-btn">
                  <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
                    <i class="fa fa-search"></i>
                  <% end %>
                </span>
              </div>
            <% end %>
          </div>
          <div class="col-md-4">
            <span class="pull-right">
              <%=link_to 'New Disbursement', new_treasury_module_disbursement_line_item_path, class: "btn btn-danger pull-right" %>
            </span>
          </div>
        </div>
      </div>
      <div class="box-body">
        <% @disbursements.each do |disbursement| %>
            <%= link_to accounting_module_entry_path(disbursement) do %>
              <div class="row">
                <div class="col-md-1">
                  <% if disbursement.commercial_document.present? && disbursement.commercial_document.avatar.present? %>
                    <%= image_tag(disbursement.commercial_document.avatar.url(:medium), class: "img-circle", height: 45, width: 45) %>
                  <% end %>
                </div>
                <div class="col-md-5">
                    <b><%= disbursement.description %></b><br>
                    <span class="text-muted">
                      <i class="fa fa-clock-o"></i> <%= disbursement.entry_date.strftime("%B %e, %Y") %> &nbsp;
                      <i class="fa fa-note"></i> <%= disbursement.reference_number %>
                    </span>
                    <br>
                    <b class="text-muted"><i class="fa fa-user"></i> &nbsp; <%= disbursement.commercial_document.try(:name) %></b>
                </div>
                <div class="col-md-3">
                  <h4><%= number_to_currency disbursement.amounts.where(account: current_user.cash_on_hand_account).sum(&:amount) %></h4>
                </div>
              </div>
              <hr>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
