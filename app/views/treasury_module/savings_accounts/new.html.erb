<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="box box-solid">
      <div class="box-header">
        <h3 class="box-title"> New Savings Account Details </h3>
      </div>
      <div class="box-body">
<%= simple_form_for @savings_account, url: :treasury_module_savings_accounts do |f| %>
  <%= f.error_notification %>
  <%= f.input :depositor_first_name, label: "First Name" %>
  <%= f.input :depositor_last_name, label: "Last Name" %>
  <%= f.input :date, label: "Date Opened", as: :string, input_html: { class: "datepicker" } %>
  <%= f.input :saving_product_id, label: "Savings Account Type", collection: CoopServicesModule::SavingProduct.all.map{ |a| [ a.name.titleize, a.id] }, as: :radio_buttons %>
  <%= f.input :account_number, input_html: { value: SecureRandom.uuid }, as: :hidden %>
  <%= f.input :amount, label: "Initial Deposit" %>
  <%= f.input :or_number %>
  <%= f.input :employee_id, input_html: { value: current_user.id }, as: :hidden %>


  <div class="box-footer">
    <%= f.submit "Open Savings Account", class: "btn btn-primary pull-right" %>
  </div>
<% end %>
