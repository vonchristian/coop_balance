<div class="row">
  <div class="col-md-12">
    <div class="box box-solid">
      <div class="box-header">
        <h3 class="box-title"> Barangays </h3>
      </div>
      <div class="box-body">
        <div class="table table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th> Barangay </th>
                <th> Members </th>
                <th> Loans </th>
                <th> Savings </th>
              </tr>
            </thead>
            <tbody>
              <% @barangays.each do |barangay| %>
                <tr>
                  <td> <%= link_to barangay.name, barangay_path(barangay) %></td>
                  <td><%= barangay.members.uniq.count %></td>
                  <td><%= barangay.loans.uniq.count %></td>
                  <td><%= barangay.savings.uniq.count %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
