<div class="row">
  <div class="col-md-12">
    <div class="box box-solid">
      <div class="box-header">
        <h3 class="box-title"> Products </h3>
        <%=link_to 'New Product', new_store_module_product_path, class: "btn btn-primary" %>
      </div>
      <div class="box-body">
        <div class="table table-responsive">
          <table class="table table-hover table-striped">
            <thead>
            	<tr>
            		<th> Name </th>
            	</tr>
            </thead>
            <tbody>
							<% @products.each do |product| %>
							  <tr>
								  <% cache product do %>
								    <td><%=link_to product.name, store_module_product_path(product) %></td>
								  <% end %>
								</tr>
							<% end %>
						</tbody>
					</table>
				</div>
