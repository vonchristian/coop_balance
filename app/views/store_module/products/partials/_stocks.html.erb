<div class="tab-pane active" id="product-stocks">
  <% if @product.stocks.any? %>
    <%= link_to new_store_module_product_stock_path(@product) do %>
      <span class="btn btn-primary"><i class="fa fa-plus-circle"></i> New Stock </span>
    <% end %>
    <div class="table table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <th>Date Delivered</th>
          <th>Quantity</th>
          <th>Unit Cost</th>
          <th>Total Cost</th>
          <th>Barcode</th>
        </thead>
    <%= render @stocks %>
    <%= will_paginate @stocks %>
  <% else %>
    <p class="alert alert-info">No stocks yet for this product <%= link_to 'Add Stock', new_store_module_product_stock_path(@product) %> </p>
  <% end %>
  
</div>