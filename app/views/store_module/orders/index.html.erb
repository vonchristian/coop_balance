<div class="row">
  <div class="col-md-12">
    <div class="box box-body">
      <div class="box-header">
        <h3 class="box-title"> Orders </h3>
      </div>
      <div class="box-body">
        <div class="table table-responsive">
		      <table class="table table-striped table-hover">
		        <thead>
			        <tr>
			        	<th>Date</th>
			        	<th>#</th>
			        	<th>Member</th>
			        	<th>Total Cost</th>
			        </tr>
			      </thead>
			      <tbody>
			        <% @orders.each do |order| %>
			          <tr>
			            <td><%= order.date %></td>
			            <td><%=link_to order.member.try(:full_name), order %></td>
				          <td><%=number_to_currency order.total_cost %></td>
				          <td><%= order.official_receipt_number %></td>
				        </tr>
				      <% end %>
			      </tbody>
		      </table>
		    </div>
		  </div>
    </div>
  </div>
</div>