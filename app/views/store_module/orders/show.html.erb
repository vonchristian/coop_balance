<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-solid">
      <div class="box-header">  
        <span class="pull-right"> <%=link_to 'Receipt (PDF)', store_module_order_path(@order, format: 'pdf'), class: "btn btn-xs btn-info" %></span>
        <br>
        <div class="row">
	        <div class="col-md-1">
	        </div>
	        <div class="col-md-2">
	          <%= member_avatar(@order.member, style: 'width:60px;height:60px;', class: 'media-object img-circle') %>
	        </div>
	        <div class="col-md-8">
	          <h3><%= @order.member_first_and_last_name.upcase %></h3>
	        </div>
	      </div>
      </div>
      <div class="box-body">
				<div class="row">
				  <div class="col-md-1 col-sm-1 col-xs-1">
				  </div>
				  <div class="col-md-1 col-sm-1 col-xs-1">
				    QTY
				  </div>
				  <div class="col-md-5 col-sm-5 col-xs-5">
				    Product
				  </div>
				  <div class="col-md-2 col-sm-2 col-xs-2">
				    <small>Unit Cost</small> 
				  </div>
				  <div class="col-md-3 col-sm-2 col-xs-2">
				    <small>Total Cost </small> 
				  </div>
				</div>
				<br>
        <%=render @order.line_items %>
        <hr>
				<div class="row">
				  <div class="col-md-1">
				  </div>
				  <div class="col-md-5">
				    <b>TOTAL</b>
				  </div>
				  <div class="col-md-5">
				    <b class="pull-right"><%= number_to_currency @order.total_cost %></b>
				  </div>
				</div>
			</div>
		</div>
	</div>
</div>