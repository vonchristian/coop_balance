<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-solid">
      <div class="box-header">
        <br>
        <div class="row">
          <div class="col-md-2">
            <%=link_to loan_path(@loan) do  %>
               <i class="icon-arrow-left fa-2x"></i>
            <% end %>
          </div>
          <div class="col-md-2">
             <%= image_tag(@loan.borrower.avatar.url(:medium), class: "img-circle", height: 40, width: 40) %> 
          </div>
          <div class="col-md-8">
           <h3 class="box-title"> <%= @loan.borrower_full_name %></h3>
          </div>
        </div>
      </div>

      <div class="box-body">
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <%=form_tag new_loan_loan_co_maker_path(@loan), method: :get, class: "sidebar-form" do %>
              <div class="input-group">
                <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Member", id: 'account-search-form' %>
                <span class="input-group-btn">
                  <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
                    <i class="fa fa-search"></i>
                  <% end %>
                </span>
              </div>
            <% end %>
          </div>
        </div>
        <br>
        <% @members.each do |member| %>
         <%= simple_form_for [@loan, @co_maker], url: :loan_loan_co_makers do |f| %>
         <% if member != @loan.borrower %>
         <div class="row">
           <div class="col-md-2 col-md-offset-1 col-xs-2">
             <%= member_avatar(member, style: 'width:40px;height:40px;', class: 'media-object img-circle') %>
            </div>
            <div class="col-md-5 col-xs-5">
              <%= member.full_name %>
              <%= f.input :co_maker_id, input_html: { value: member.id }, as: :hidden %>
            </div>
            <div class="col-md-4 col-xs-4">
              <% if @loan.co_makers.exclude?(member) %>
                <%= button_tag(class: "btn btn-default btn-sm") do %>
                  <i class="icon-user-follow"></i> Select
                <% end %>
              <% else %>
                <%= button_tag(class: "btn btn-success btn-sm disabled")do %>
                  <i class="icon-user-following"></i> Selected
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
          <br>
        <% end %>
      <% end %>
    </div>
  </div>
</div>