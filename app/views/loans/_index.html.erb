<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item"><%=link_to 'All Loans', loans_path(from_date: nil, to_date: nil), class: "nav-link #{'active' if current_page?(loans_path(from_date: "", to_date: "")) }" %></li>
            <li class="nav-item"><%=link_to '1 - 60 Days Past Due', loans_path(from_date: Date.today - 60.days, to_date: Date.today.yesterday), class: "nav-link #{'active' if current_page?(loans_path(from_date: Date.today - 60.days, to_date: Date.today.yesterday))}" %></li>
            <li class="nav-item"><%=link_to '61 - 180 Days Past Due', loans_path(from_date: Date.today - 180.days, to_date: Date.today - 61.days), class: "nav-link #{'active' if current_page?(loans_path(from_date: Date.today - 180.days, to_date: Date.today - 61.days))}" %></li>
            <li class="nav-item"><%=link_to '181 - 363 Days Past Due', loans_path(from_date: Date.today - 363.days, to_date: Date.today - 181.days), class: "nav-link #{'active' if current_page?(loans_path(from_date: Date.today - 363.days, to_date: Date.today - 181.days))}" %></li>
            <li class="nav-item"><%=link_to 'Over 1 Year', loans_path(from_date: Date.today - 999.years, to_date: Date.today - 364.days), class: "nav-link #{'active' if current_page?(loans_path(from_date: Date.today - 999.years, to_date: Date.today - 364.days))}" %></li>
            <li class="nav-item"><%=link_to 'Dashboard', loans_module_monitoring_metrics_path, class: "nav-link #{'active' if current_page?(loans_module_monitoring_metrics_path)}" %></li>
          </ul>
          <br/>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-12">
              <%=form_tag loans_path, method: :get do %>
                <div class="input-group">
                  <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Borrower name", id: 'sidebar-form' %>
                  <span class="input-group-btn">
                    <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
                      <i class="fa fa-search"></i>
                    <% end %>
                  </span>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
          <% loans.each do |loan| %>
            <%= render 'loans/partials/header', loan: loan %>
          <% end %>
          <center><%= will_paginate loans %></center>
        </div>
      </div>
    </div>
  </div>
