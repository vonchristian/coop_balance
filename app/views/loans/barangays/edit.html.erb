<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="card">
      <div class="card-header">
        <h4><center><%= image_tag(@loan.borrower.avatar.url(:medium), style: 'width:60px;height:60px;', class: 'media-object img-circle') %></center></h4>
         <h3><center><%= @loan.borrower_name %></center></h3>
      </div>
      <div class="card-body">
        <%= simple_form_for @loan, url: :loan_barangay do |f| %>
          <%= f.input :barangay_id, collection: Addresses::Barangay.all.map{|a| [a.name, a.id] } %>
          <div class="box-footer">
            <%= f.submit "Update Barangay", class: "btn btn-warning pull-right" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $(document).ready(function() {
    $("#loans_module_loan_barangay_id").select2({
      theme: "bootstrap"
    });
  });
</script>
