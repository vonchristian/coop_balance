<div class="row">
  <div class="col-md-6 col-md-offset-3">
<div class="box box-solid">
  <div class="box-header bg-gray">
    <div class="row">
      <div class="col-md-3">
        <center><%= member_avatar(@loan.borrower, style: 'width:80px;height:80px;', class: 'media-object img-circle') %></center>
      </div>
      <div class="col-md-9">
        <br>
        <h3 class="box-title"><%= @loan.borrower.full_name.upcase %></h3><br>
         <i class="fa fa-map-marker"></i> Address: <%= @loan.borrower.try(:current_address) %>
      </div>
    </div>
  </div>
    <div class="box-body">
    <div class="row">
    <div class="col-md-6">
      &nbsp; &nbsp; Loan Amount 
    </div>
    <div class="col-md-5">
      <span class="pull-right"> <%= number_to_currency @loan.loan_amount %></span>
    </div>
  </div>
  <br>
  <p class="text-danger">LOAN CHARGES </p>
  <% @loan.loan_charges.each do |loan_charge| %>
    <div class="row">
      <div class="col-md-6">
        &nbsp; &nbsp; <%= loan_charge.chargeable.name %>
      </div>
      <div class="col-md-5">
          <span class="pull-right"> <%= number_to_currency loan_charge.charge_amount_with_adjustment %></span>
      </div>
     
     
     </div>
     <br>
  <% end %>
  <hr>
  <div class="row">
    <div class="col-md-6">
      &nbsp; &nbsp; Net Proceed
    </div>
    <div class="col-md-5">
      <span class='pull-right'> <%= number_to_currency @loan.net_proceed %></span>
    </div>
  </div>

<%= simple_form_for [@loan, @voucher], url: :loan_disbursement_vouchers do |f| %>
  <%= f.error_notification %>
  <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
  <div class="box-footer">
    <%= f.submit "Create Voucher", class: "btn btn-primary pull-right" %>
  </div>
  
<% end %>