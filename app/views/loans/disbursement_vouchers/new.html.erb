<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="card">
    <div class="card-header">
      <div class="row">
        <div class="col-md-3">
          <center><%= image_tag(@loan.borrower.avatar.url(:medium), style: 'width:80px;height:80px;', class: 'media-object img-circle') %></center>
        </div>
        <div class="col-md-9">
          <br>
          <h3 class="box-title"><%= @loan.borrower_name.upcase %></h3><br>
           <i class="fa fa-map-marker"></i> Address: <%= @loan.borrower.try(:current_address) %>
        </div>
      </div>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
      <div class="row">
        <div class="col-md-6">
          &nbsp; &nbsp; Loan Amount
        </div>
        <div class="col-md-5">
          <span class="pull-right"> <%= number_to_currency @loan.loan_amount %></span>
        </div>
      </div>
      <br>
      <p class="text-danger">LOAN CHARGES </p>
      <% @loan.loan_charges.each do |loan_charge| %>
        <div class="row">
          <div class="col-md-6">
            &nbsp; &nbsp; <%= loan_charge.charge.name %>
          </div>
          <div class="col-md-5">
              <span class="pull-right"> <%= number_to_currency loan_charge.charge_amount_with_adjustment %></span>
          </div>
        </div>
        <br>
      <% end %>
      <hr>
      <div class="row">
        <div class="col-md-6">
          &nbsp; &nbsp; Net Proceed
        </div>
        <div class="col-md-5">
          <span class='pull-right'> <%= number_to_currency @loan.net_proceed %></span>
        </div>
      </div>
      <br>
      <%= simple_form_for [@loan, @voucher], url: :loan_disbursement_vouchers do |f| %>
        <%= f.error_notification %>
        <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
        <%= f.input :description, input_html: { value: "Loan disbursement voucher of #{@loan.borrower_name}" }, as: :text %>
        <%= f.input :number, input_html: { value: Voucher.generate_number_for(@voucher) } %>
        <%= f.input :preparer_id, input_html: { value: current_user.id }, as: :hidden %>
        <div class="box-footer">
          <%= f.submit "Create Voucher", class: "btn btn-primary pull-right" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
