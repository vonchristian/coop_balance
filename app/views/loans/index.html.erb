<div class="row">
  <div class="col-md-12">
    <div class="box box-solid">
      <div class="box-header">
        <h3 class="box-title">All Loans</h3>
      </div>
      <div class="box-body">
        <% LoansModule::LoanProduct.all.each do |loan_product| %>
          <span class="btn btn-default btn-sm"> <span class="text-muted"> <%=link_to loan_product.name, loans_path(loan_product_id: loan_product.id), class: "text-purple" %> </span> </span> &nbsp;
        <% end %>
        <div class="table table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Borrower</th>
                <th>Loan Amount</th>
                <th>Type</th>
                <th>Application Date</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% @loans.each do |loan| %>
                <tr data-link="<%=loan_path(loan)%>" class="myClass">
                  <td><%= image_tag(loan.borrower.avatar.url(:thumb), class: "img-circle", height: 35, width: 35) %> &nbsp; <%=loan.borrower.try(:fullname) %></td>
                  <td><%= number_to_currency loan.loan_amount %></td>
                  <td><%= loan.loan_product_name %></td>
                  <td><% if loan.disbursed? %>
                    <%= loan.disbursement_date.strftime("%B %e, %Y") %>
                    <% end %>
                      
                    </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $("tr").click(function() {
  window.location = $(this).data("link")
});
  $('.myClass').css('cursor', 'pointer');
</script>
