<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="box box-solid">
      <div class="box-header">
        <h4><center><%= image_tag(@loan.borrower.avatar.url(:medium), style: 'width:60px;height:60px;', class: 'media-object img-circle') %></center></h4>
         <h3><center><%= @loan.borrower_name %></center></h3>
      </div>
      <div class="box-body">
        <div class="row">
          <div class="col-md-10 col-md-offset-1">
            <%= simple_form_for [@loan, @note], url: :loan_notes do |f| %>
              <%= f.input :date, as: :string, input_html: { class: "datepicker" } %>
              <%= f.input :title %>
              <%= f.input :content, as: :text %>
              <%= f.input :noter_id, input_html: { value: current_user.id }, as: :hidden %>
              <div class="box-footer">
                <%= f.submit "Save Note", class: "btn btn-primary pull-right" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
