<div class="row">
  <div class="col-md-12">
    <div class="box box-solid">
       <div class="box-header bg-gray">
    <div class="row">
      <div class="col-md-3">
        <center><%= image_tag(@loan.borrower.avatar.url(:medium), style: 'width:80px;height:80px;', class: 'media-object img-circle') %></center>
      </div>
      <div class="col-md-9">
        <br>
        <h3 class="box-title"><%= @loan.borrower_name.upcase %></h3><br>
         <i class="fa fa-map-marker"></i> Address: <%= @loan.borrower.try(:current_address) %>
      </div>
    </div>
  </div>
      <div class="box-body">
        <div class="row">
          <div class="col-md-8 col-md-offset-1">
            
            <%=link_to 'Add Real Property', new_loan_real_property_path(id: @loan.id) %>
            <% @loan.borrower.real_properties.each do |real_property| %>
              <%=simple_form_for [@loan, @collateral], url: :loan_collaterals do |f| %>
                <div class="row">
                  <div class="col-md-8">
                    <%= f.input :real_property_id, input_html: { value: real_property.id }, as: :hidden %>
                    <%=real_property.description %><br>
                    <% real_property.pictures.each do |image|%>
                      <%=image_tag(image.image.url(:large), class: "img-square", height: 60, width: 60) %>
                    <% end %>
                  </div>
                  <div class="col-md-4 col-xs-4">
                    <% if @loan.real_properties.exclude?(real_property) %>
                      <%= button_tag(class: "btn btn-default btn-sm") do %>
                        <i class="fa fa-plus"></i> Select
                      <% end %>
                    <% else %>
                      <%= button_tag(class: "btn btn-success btn-sm disabled")do %>
                        <i class="icon-user-following"></i> Selected
                      <% end %>
                    <% end %>
                  </div>
                </div>
                <hr>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>