<%= simple_form_for @real_property, :html => {:multipart => true}, url: :loan_real_properties do |f| %>
  <%= f.error_notification %>
  <%= f.input :description %>
  <%= f.input :address, label: "Location" %>
  <%= f.input :owner_id, input_html: { value: @loan.borrower.id } %>
  <%= f.input :owner_type, input_html: { value: @loan.borrower.class } %>

  <%= file_field_tag "images[]", type: :file, multiple: true %>
  <%= f.submit %>
<% end %>