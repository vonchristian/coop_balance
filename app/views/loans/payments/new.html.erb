<div class="row">
  <div class="col-md-12">
    <div class="box box-default">
  <div class="box-header">
    <h3 class="box-title">Loan Payment Details </h3>
  </div>
  <div class="box-body">
    <div class="row">
      <div class="col-md-6 col-md-offset-1">
        <%= image_tag(@loan.borrower.avatar.url(:medium), height: 60, width: 60) %>
        <h4><%= @loan.borrower_full_name %></h4>
        Loan Details
        <%= number_to_currency @loan.loan_amount %>
        <hr>
        PRINCIPAL BALANCE
        <%= @loan.principal_balance %>
        <hr>
        INTEREST
        <%= @loan.interest_balance %>
        <hr>
        PENALTY
        <hr>
      </div>
  <div class="col-md-4">

    <div class="row">
      <div class="col-md-3">

         <%= image_tag(@loan.borrower.avatar.url(:medium), style: 'width:60px;height:60px;', class: 'media-object img-circle') %>

      </div>
      <div class="col-md-9">
        <p><%= @loan.borrower_full_name.upcase %></p>
      </div>
    </div>
    <hr>
<%= simple_form_for [@loan, @payment], validate: true, url: :loan_payments do |f| %>
  <%= f.error_notification %>
  <%= f.input :principal_amount, validate: { presence: true },  input_html: { value: 0 } %>
  <%= f.input :interest_amount, input_html: { value: 0 } %>
  <%= f.input :penalty_amount,  input_html: { value: 0 } %>
  <%= f.input :reference_number %>
  <%= f.input :date, as: :string, input_html: { value: Time.zone.now.strftime("%B %e, %Y"), class: "datepicker" } %>
  <%= f.input :loan_id, input_html: { value: @loan.id },as: :hidden %>
  <%= f.input :recorder_id, input_html: { value: current_user.id }, as: :hidden %>
  <div class="box-footer">
    <%= f.submit "Save Payment", class: "btn btn-primary pull-right" %>
  </div>
<% end %>

