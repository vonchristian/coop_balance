
<div class="card">
  <div class="card-body">
    <br>
    <div class="row">
      <div class="col-md-6 border-right">
        <div class="row">
          <div class="col-md-6">
            <h4 class="card-title">Principal</h4>
          </div>
          <div class="col-md-5">
            <span class="float-right"><h4 class="card-title"><%= number_to_currency @loan.principal_balance %></h4></span>
          </div>
        </div>
         <div class="row">
          <div class="col-md-6">
            <h4 class="card-title">Interests</h4>
          </div>
          <div class="col-md-5">
            <span class="float-right"><h4 class="card-title"><%= number_to_currency @loan.loan_interests_balance %></h4></span>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6">
            <h4 class="card-title">Penalties</h4>
          </div>
          <div class="col-md-5">
            <span class="float-right"><h4 class="card-title"><%= number_to_currency @loan.loan_penalties_balance %></h4></span>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-md-6">
            <h4 class="card-title">Balance</h4>
          </div>
          <div class="col-md-5">
            <span class="float-right"><h4><%= number_to_currency @loan.balance %></h4></span>
          </div>
        </div>
      </div>
      <div class="col-md-4 offset-md-1">
        <%= simple_form_for [@loan, @payment], html: { autocomplete: 'off' }, url: :loan_payments do |f| %>
          <%= f.error_notification %>
          <%= f.input :account_number, input_html: { value: SecureRandom.uuid }, as: :hidden %>
          <%= f.input :description %>
          <%= f.input :date, as: :string, input_html: { value: Time.zone.now.strftime("%B %e, %Y"), class: "datepicker" } %>
          <%= f.input :principal_amount,  input_html: { value: 0 }, as: :currency  %>
          <%= f.input :interest_amount, input_html: { value: 0 }, as: :currency  %>
          <%= f.input :penalty_amount,  input_html: { value: 0 }, as: :currency  %>
          <%= f.input :reference_number %>
          <%= f.input :loan_id, input_html: { value: @loan.id },as: :hidden %>
          <%= f.input :employee_id, input_html: { value: current_user.id }, as: :hidden %>
          <%= f.input :cash_account_id, collection: current_user.cash_accounts.map{|a| [a.name, a.id] } %>

          <%= f.submit "Save Payment", class: "btn btn-primary float-right", data: {disable_with: "Processing Payment..."} %>
        <% end %>
      </div>
    </div>
  </div>
</div>
