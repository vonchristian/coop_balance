<%= render 'loans/partials/header', loan: @loan %>
<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Loan Payment Details </h3>
      </div>
      <div class="card-body">
        <%= simple_form_for [@loan, @payment], html: { autocomplete: 'off' }, url: :loan_payments do |f| %>
          <%= f.error_notification %>
          <%= f.input :date, as: :string, input_html: { value: Time.zone.now.strftime("%B %e, %Y"), class: "datepicker" } %>
          <%= f.input :cash_account_id, default: current_user.cash_accounts.first, collection: current_user.cash_accounts.map{|a| [a.name, a.id] } %>
          <%= f.input :description, as: :text %>
          <%= f.input :principal_amount,  input_html: { value: 0 }, as: :currency  %>
          <%= f.input :interest_amount, input_html: { value: 0 }, as: :currency  %>
          <%= f.input :penalty_amount,  input_html: { value: 0 }, as: :currency  %>
          <%= f.input :reference_number %>
          <%= f.input :loan_id, input_html: { value: @loan.id },as: :hidden %>
          <%= f.input :employee_id, input_html: { value: current_user.id }, as: :hidden %>
          <%= f.input :account_number, input_html: { value: SecureRandom.uuid }, as: :hidden %>
          <hr>
          <%= f.submit "Proceed", class: "btn btn-primary float-right", data: {disable_with: "Processing..." } %>
          <%= link_to 'Cancel', loan_path(@loan), class: "text-danger float-left" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">Loan Details </h3>
      </div>
      <div class="card-body">
        <div class="row justify-content-end">
          <div class="col-md-6">
            <h5 class="card-title">Principal</h5>
          </div>
          <div class="col-md-5">
            <span class="float-right"><h4 class="card-title"><%= number_to_currency @loan.principal_balance %></h4></span>
          </div>
        </div>
        <div class="row justify-content-end">
          <div class="col-md-6">
            <h5 class="card-title">Interests</h5>
          </div>
          <div class="col-md-5">
            <span class="float-right"><h4 class="card-title"><%= number_to_currency @loan.loan_interests_balance %></h4></span>
          </div>
        </div>
        <div class="row justify-content-end">
          <div class="col-md-6">
            <h5 class="card-title">Penalties</h5>
          </div>
          <div class="col-md-5">
            <span class="float-right"><h4 class="card-title"><%= number_to_currency @loan.loan_penalties_balance %></h4></span>
          </div>
        </div>
        <hr>
        <div class="row justify-content-end">
          <div class="col-md-6">
            <h4 class="card-title">Total Receivable</h4>
          </div>
          <div class="col-md-5">
            <span class="float-right"><h4 class="card-title"><%= number_to_currency @loan.balance %></h4></span>
          </div>
        </div>
      </div>
    </div>
    <div class="card">
    <div class="card-body">
        <h4 class="card-title">Amortization Schedules</h4>
        <hr>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Date</th>
              <th>Principal</th>
              <th>Interest</th>
              <th>Total Amortization</th>
            </tr>
          </thead>
          <tbody>
            <% @loan.amortization_schedules.order(created_at: :asc).each do |schedule| %>
              <tr>
                <td><%= schedule.date.strftime("%B %e, %Y") %><br>
                  <%= schedule.try(:name) %>
                </td>
                <td><%= number_to_currency schedule.principal %></td>
                <td>
                  <% if schedule.prededucted_interest? %>
                    <span class="label bg-red"> PREDEDUCTED </span>
                  <% else %>
                    <%= number_to_currency schedule.interest %>
                  <% end %>
                </td>
                </td>
                <td><%= number_to_currency schedule.total_amortization %> </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $("#loans_module_loans_payment_processing_cash_account_id").select2({
      theme: "bootstrap"
    });
  });
</script>
