<div class="tab-pane <%= 'active' if current_page?(loans_module_loan_amortization_schedules_path(@loan)) %>" id="loan-amortization-schedule">
  <p class="text-purple"> AMORTIZATION SCHEDULE </p>
  <%=link_to 'Print Schedule', loans_module_loan_amortization_schedules_path(@loan, format: 'pdf') %>
  <div class="table table-responsive">
    <div class="table">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Date</th>
            <th>Principal</th>
            <th>Interest</th>
            <th>Other Charges</th>
            <th>Total Amortization </th>
            <th>Balance</th>
          </tr>
        </thead>
        <tbody>
          <% @loan.amortization_schedules.order(created_at: :asc).each do |schedule| %>
            <tr>
              <td></td>
              <td><%= schedule.date.strftime("%B %e, %Y") %><br>
                <%= schedule.try(:name) %>
                <%= schedule.amount %>
              </td>
              <td><%= number_to_currency schedule.principal %></td>
              <td><%= number_to_currency schedule.interest %> </td>
              <td>
                <% @loan.loan_charge_payment_schedules.each do |loan_charge_payment_schedule| %>
                  <div class="row">
                    <div class="col-md-6">
                      <%= loan_charge_payment_schedule.date.strftime("%B %e, %Y") %>
                      <%= loan_charge_payment_schedule.name %>
                    </div>
                    <div class="col-md-6">
                      <span class="pull-right"><%= number_to_currency loan_charge_payment_schedule.amount %></span>
                    </div>
                  </div>
                  <br>
                <% end %>
              </td>
              <td><%= number_to_currency schedule.total_amortization %> </td>
              <td><%= number_to_currency @loan.balance_for(schedule) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
