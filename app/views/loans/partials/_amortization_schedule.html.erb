<div class="card">
  <div class="card-header">
    <div class="row">
      <div class="col-md-9">
        <h4 class="card-title"> Amortization Schedules </h4>
      </div>
      <div class="col-md-3">
        <% if !@loan.forwarded_loan? %>
          <%=link_to 'View Schedule(PDF)', loans_module_loan_amortization_schedules_path(@loan, format: 'pdf'), class: 'btn btn-outline-default' %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="card-body">
    <div class="table table-responsive">
      <div class="table">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th></th>
              <th>Date</th>
              <th>Principal</th>
              <th>Interest</th>
              <th>Total Amortization </th>
              <th>Balance</th>
              <th>Notes</th>
              <th>Payment Status</th>
            </tr>
          </thead>
          <tbody>

            <% @loan.amortization_schedules.order(created_at: :asc).each do |schedule| %>
              <tr>
                <td></td>
                <td><%= schedule.date.strftime("%B %e, %Y") %><br>
                  <%= schedule.try(:name) %>
                </td>
                <td><%= number_to_currency schedule.principal %></td>
                <td>
                  <% if schedule.prededucted_interest? %>
                    <%= number_to_currency schedule.interest %>

                    <span class="badge bg-danger"> Prededucted</span>
                  <% else %>
                    <%= number_to_currency schedule.interest %>
                  <% end %> </td>
                </td>
                <td><%= number_to_currency schedule.total_amortization %> </td>
                <td><%= number_to_currency @loan.balance_for(schedule) %></td>
                <td><% schedule.notes.each do |note| %>
                    <%= note.content %>
                    <% end %>
                </td>

                <td><%#= LoansModule::AmortizationSchedule.payment_statuses.keys.to_a %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
