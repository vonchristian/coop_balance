<div class="tab-pane <%= 'active' if current_page? loan_settings_path(@loan) %>">
  Settings
  <%= @loan.barangay_name %>
  <%= link_to 'Set Barangay', edit_loan_barangay_path(id: @loan.id), class: "btn btn-danger" %>
  <hr>
  <p>Loss</p>
  <%= link_to 'Set as Loss', new_loans_module_loan_loss_path(@loan), class: "btn btn-danger" %>
</div>
<h4>Loan Term</h4>
<span class="text-muted"> Extend loan terms </span>
<br>
<% @loan.terms.each do |term| %>
  <%= term.effectivity_date.strftime("%B %e %Y") %>
  <%= term.maturity_date.strftime("%B %e, %Y") %>
<% end %>
  <%= link_to 'New Extension', new_loans_module_loan_term_path(@loan), class: "btn btn-danger" %>
<hr>
<h4>Archive</h4>
<span class="text-muted"> Archive paid loans </span>
<% if policy([:loans_module, :loans, :archiving]).new? && !@loan.archived? %>
  <%= link_to "Archive Loan", loans_module_loan_archivings_path(@loan), method: :post, data: { confirm_with: "Are you sure you want to archive this loan?" }, class: "btn btn-danger" %>
<% end %>
<% if @loan.amounts.blank? %>
<h4> Delete Loan </h4>
<p class="text-muted"> Deleting this loan will remove it from records. Please be careful. </p>
  <%= link_to 'Delete Loan', loans_module_loan_path(@loan), method: :delete, data: { confirm_with: "Are you sure you want to delete this loan? " }, class: "btn btn-danger" %>
<% end %>
