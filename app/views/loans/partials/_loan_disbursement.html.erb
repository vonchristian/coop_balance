<div class="<%='active' if current_page?(loan_disbursements_path(@loan)) %> tab-pane" id="loan-disbursement">
  <% if @loan.cash_disbursement_voucher.present? && @loan.disbursed? %>
    <%= link_to 'Print CDV', voucher_path(@loan.cash_disbursement_voucher, format: "pdf") %>
  <% end %>
  <div class="row">
    <div class="col-md-3">
      &nbsp; &nbsp; Loan Amount
    </div>
    <div class="col-md-3">
      <%= number_to_currency @loan.loan_amount %>
    </div>
  </div>
  <br>
  <p class="text-danger">LOAN CHARGES </p>
  <% @loan.loan_charges.each do |loan_charge| %>
	  <div class="row">
	    <div class="col-md-3">
		    &nbsp; &nbsp; <%= loan_charge.chargeable.name %>
		  </div>
		  <div class="col-md-3">
		      <%= number_to_currency loan_charge.charge_amount_with_adjustment %>
		  </div>


		 </div>
		 <br>
	<% end %>

  <hr />
  <div class="row">
    <div class="col-md-3">
      &nbsp; &nbsp; Net Proceed
    </div>
    <div class="col-md-3">
      <%= number_to_currency @loan.net_proceed %>
    </div>
  </div>
  <br>
  <br>
  <% if !@loan.cash_disbursement_voucher.present? && !@loan.disbursed? %>
    <%= link_to "Create Voucher", new_loan_disbursement_voucher_path(@loan), class: "btn btn-primary" %>
  <% end %>

</div>
