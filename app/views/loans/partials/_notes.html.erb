<div class="card">
  <div class="card-body">
    <h4 class="card-title"> Notes </h4>
    <span class="text-muted"> Actions taken for this loan for monitoring purposes. </span>
  <hr>
    <%= simple_form_for [@loan, @note], url: :loan_notes do |f| %>
          <%= f.input :title %>
          <%= f.input :content, as: :text %>
          <%= f.input :noter_id, input_html: { value: current_user.id }, as: :hidden %>
            <%= f.submit "Save Note", class: "btn btn-primary float-right" %>
        <% end %>
        <hr>

    <% @notes.each do |note| %>
      <div class="row">
        <div class="col-md-1">
          <%=image_tag(note.noter.avatar, class: "img-circle", height:45, width: 45) %>
        </div>
        <div class="col-md-8">
          <h3 class="card-title"><%= note.title %></h3>
          <span class="text-muted">
            <%= note.content %>

          </span>
          <br>
          <%= note.noter.try(:name) %> &nbsp; &nbsp;
          <%= note.date.strftime("%b %e, %Y %M:%I") %>
        </div>
      </div>
      <hr>
    <% end %>
  </div>
</div>
