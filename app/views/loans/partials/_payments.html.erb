<div class="tab-pane" id='loan-payments'>
  <p class="condensed-text"> PAYMENTS HISTORY </p>
  <%=link_to 'New Payment', new_loans_module_loan_payment_path(@loan), class: "btn btn-primary" %>
  <hr>
  <div class="table table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th> Date </th>
          <th> Amount </th>
          <th> Reference Number </th>
        </tr>
      </thead>
      <tbody>
        <% @loan.payments.each do |payment| %>
          <tr>
            <td><%= payment.entry_date.strftime("%B %e, %Y") %></td>
            <td><%= payment.credit_amounts.sum(:amount) %> </td>
            <td><%= payment.reference_number %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div> 
</div>          