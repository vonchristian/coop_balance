<div class="card">
  <div class="card-header">
    <div class="row">
      <div class="col-md-6">
        <h3 class="card-title"> Transactions History</h3>
      </div>
      <div class="col-md-6">
        <% if policy([:loans_module, :payment]).new? %>
          <%=link_to new_loan_payment_path(@loan), data: { turbolinks: false} do %>
            <span class="btn btn-primary float-right"><i class="fa fa-plus-circle"></i> New Payment </span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<table class="table">
  <tr>
    <th>Date</th>
    <th>OR/CDV #</th>
    <th class="text-right">Interest</th>
    <th class="text-right">Penalty</th>
    <th class="text-right">Principal</th>
    <th class="text-right">Total</th>
    <th class="text-right">Balance</th>
    <td></td>
  </tr>
  <% @payments.sort_by(&:entry_date).reverse.each do |entry| %>
    <% if entry.cancelled? %>
      <tr>
        <td><%= entry.entry_date.strftime("%B %e, %Y") %></td>
        <td><%= entry.reference_number %>- CANCELLED</td>
        <td class="text-right">-</td>
        <td class="text-right">-</td>
        <td class="text-right">-</td>
        <td class="text-right">-</td>
        <td></td>
      </tr>
    <% else %>
      <tr>
        <td><%= entry.entry_date.strftime("%B %e, %Y") %></td>
        <td><%= link_to entry.try(:reference_number), accounting_module_entry_path(entry), data:{toggle: 'tooltip'}, title: entry.description %></td>
        <td class="text-right">
          <%= number_to_currency entry.credit_amounts.for_account(account_id: @loan.loan_product_interest_revenue_account).total if entry.debit_amounts.total != @loan.principal_balance(to_date: entry.entry_date) %>
        </td>
        <td class="text-right">
          <%= number_to_currency entry.credit_amounts.for_account(account_id: @loan.loan_product_penalty_revenue_account).total if entry.debit_amounts.total != @loan.principal_balance(to_date: entry.entry_date) %>
        </td>
        <td class="text-right">
          <%= number_to_currency entry.credit_amounts.for_account(account_id: @loan.principal_account).total if entry.debit_amounts.total != @loan.principal_balance(to_date: entry.entry_date) %>
        </td>
        <td class="text-right">
          <%= number_to_currency entry.debit_amounts.total %>
        </td>
        <td class="text-right"><%= number_to_currency @loan.principal_balance(to_date: entry.entry_date) %></td>
        <td></td>
      </tr>
    <% end %>
  <% end %>
</table>
<center><%= will_paginate @payments %></center>

