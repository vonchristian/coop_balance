<div class="card">
  <div class="card-body">
    <% if current_user.cash_on_hand_account.present? %>
    <%=link_to 'New Payment', new_loan_payment_path(@loan), class: "btn btn-primary" %>
    <% end %>
    <hr>
    <h3 class="card-title"> Payment History</h3>
    <br>
    <div class="table table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
          <th> Date </th>
            <th>Description</th>
            <th> Amount </th>
            <th> Reference Number </th>
            <th> Employee </th>
          </tr>
        </thead>
        <tbody>
          <% @payments.each do |payment| %>
            <tr>
              <td><%= link_to payment.entry_date.strftime("%B %e, %Y"), accounting_module_entry_path(payment) %></td>
              <td><%= payment.description %></td>
              <td><%= number_to_currency payment.debit_amounts.sum(&:amount) %> </td>
              <td><%= payment.reference_number %></td>
              <td>
                <%= payment.recorder_name %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <center><%= will_paginate @payments %></center>
    </div>
  </div>
</div>
