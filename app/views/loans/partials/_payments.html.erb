<div class="card">
  <div class="card-header">
    <div class="row">
      <div class="col-md-6">
        <h3 class="card-title"> Transactions History</h3>
      </div>
      <div class="col-md-6">
        <% if policy([:loans_module, :payment]).new? %>
          <%=link_to new_loan_payment_path(@loan), data: { turbolinks: false} do %>
            <span class="btn btn-primary float-right"><i class="fa fa-plus-circle"></i> New Payment </span>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<% @payments.each do |payment| %>
  <%= render 'accounting_module/entries/partials/header', entry: payment %>
<% end %>
<center><%= will_paginate @payments %></center>
