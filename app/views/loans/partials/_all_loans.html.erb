 <div class="box box-solid">
      <div class="box-header">
        <div class="row">
          <div class="col-md-2">
            <h3 class="box-title">All Loans</h3>
          </div>
          <div class="col-md-6">
            <%=form_tag loans_path, method: :get do %>
                <div class="input-group">
                  <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Borrower name", id: 'account-search-form' %>
                  <span class="input-group-btn">
                    <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
                      <i class="fa fa-search"></i>
                    <% end %>
                  </span>
                </div>
              <% end %>
          </div>
        </div>
      </div>
      <div class="box-body">
        <% @loans.each do |loan| %>
          <% cache do %>
            <%= link_to loan_path(loan) do %>
              <div class="row">
                <div class="col-md-1">
                  <%= image_tag(loan.borrower.avatar.url(:medium), height: 60, width: 60, class: "img-circle") %>
                </div>
                <div class="col-md-4">
                  <b><%= loan.borrower_name.try(:upcase) %></b><br>
                  <small class="text-muted"><%= loan.loan_product_name %></small><br>
                  <%= loan.updated_at.strftime("%b %e, %Y") %>
                  <small>Last updated</small>
                </div>
                <div class="col-md-2">
                  <b><%= number_to_currency loan.loan_amount %></b><br>
                  <small>Loan Amount</small>
                </div>
                <div class="col-md-2">
                  <span class="text-red"><%= number_to_currency loan.balance %></span><br>
                  <small class="text-muted">Loan Balance</small><br>
                  <small class="label bg-<%=loan.status_color %>"> <%= loan.status_text.try(:upcase) %> </small>

                </div>
                <div class="col-md-2">

                </div>
              </div>
              <br>
            <% end %>
          <% end %>
        <% end %>
        <center><%= will_paginate @loans %></center>
        <div class="table table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Borrower</th>
                <th>Loan Amount</th>
                <th>Net Proceed</th>
                <th>Type</th>
                <th>Application Date</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% @loans.each do |loan| %>
                <tr data-link="<%=loan_path(loan)%>" class="myClass">
                  <td>
                    <% if loan.borrower.present? %>
                    <%= image_tag(loan.borrower.avatar.url(:thumb), class: "img-circle", height: 35, width: 35) %> &nbsp; <b><%=loan.borrower_name %></b>
                    <% end %>

                    </td>
                  <td><%= number_to_currency loan.loan_amount %></td>

                  <td><%= loan.loan_product_name %></td>
                  <td>
                    <%= loan.application_date.strftime("%B %e, %Y") %>

                    </td>
                  <td></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <center><%=will_paginate @loans %></center>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
  $("tr").click(function() {
  window.location = $(this).data("link")
});
  $('.myClass').css('cursor', 'pointer');
</script>
<script type="text/javascript">
  $('.slider').slider()
</script>
