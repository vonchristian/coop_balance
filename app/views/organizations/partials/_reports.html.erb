<div class="card-body">
  <div class="row">
    <div class="col-md-6">
      <h4 class="card-title">Reports</h4>
    </div>
    <div class="col-md-6">
      <%= link_to 'Excel', organization_loans_path(@organization, format: 'xlsx'), class: 'btn btn-default' %>
    </div>
  </div>
</div>
<hr class="no-margin">
<div class="card-body">
  <%= form_tag({:action => "index", controller: "organizations/reports", organization_id: @organization.id, format: 'pdf'}, {:method => :get, autocomplete: 'off' }) do %>
    <div class="row">
      <div class="col-md-3">
        <div class="form-group">
          <%= text_field_tag :date, @date, :class => 'datepicker form-control border-input', :placeholder => "Date" %>
        </div>
      </div>
      <div class="col-md-3">
        <div class="form-group">
          <%= select_tag :membership_type, options_for_select(Membership.whitelisted_membership_types.map {|m| [m.titleize.pluralize, m]}, params[:membership_type]), class: ' form-control border-input', prompt: false %>
        </div>
      </div>
      <div class="col-md-1">
        <button type="submit" class="btn btn-default"> Generate Billing Statement</button>
      </div>
    </div>
  <% end %>
  <%=link_to 'Billing Statement (PDF)', organization_loans_path(@organization, membership_type: @membership_type, date: @date, format: 'pdf'), class: 'btn btn-info float-right' %>
</div>
