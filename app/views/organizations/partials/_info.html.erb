<div class="tab-pane <%='active' if current_page?(organization_path(@organization)) %>">
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-md-6">
            <h3 class="card-title"><%= @organization.name %></h3>
          </div>
          <div class="col-md-5">
            <%= link_to 'Add Members', new_organization_member_path(@organization), class: "btn btn-primary pull-right" %>
          </div>
        </div>
      </div>
      <div class="card-body">
<% @members.each do |member| %>
  <div class="row">
    <div class="col-md-2 col-md-offset-1">
      <%= image_tag(member.avatar.url(:medium), class: "img-circle", height: 50, width: 50) %>
    </div>
    <div class="col-md-5">
      <b><%= member.name %></b><br>
      <small class="text-muted"><%= member.current_occupation.try(:upcase) %></small>
    </div>
    <div class="col-md-2">
    </div>
  </div>
  <br>
<% end %>
<%=will_paginate @members %>
