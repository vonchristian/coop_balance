<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-md-6">
            <h3 class="card-title"> Organizations </h3>
          </div>
          <div class="col-md-5">
            <%= link_to 'New Organization', new_organization_path, class: "btn btn-primary pull-right" %>
          </div>
        </div>
      </div>
      <div class="card-body">
        <% @organizations.each do |organization| %>
          <div class="row">
            <div class="col-md-2 col-md-offset-1">
              <%= image_tag(organization.avatar.url(:original), class: "img-circle", height: 60 ,width: 60) %>
            </div>
            <div class="col-md-6">
              <b><%= link_to organization.name, organization_path(organization) %></b>
            </div>
            <div class="col-md-2">
              <%= organization.members.count %>
            </div>
          </div>
          <br>
        <% end %>
      </div>
    </div>
  </div>
</div>
