<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <div class="row">
          <div class="col-md-3">
            <h3 class="card-title"> Organizations </h3>
          </div>
          <div class="col-md-6">
            <%=form_tag organizations_path, method: :get do %>
              <div class="input-group">
                <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search Organization ", id: 'account-search-form' %>
                <span class="input-group-btn">
                  <%= button_tag(type: 'submit', id: "search-btn", class: "btn btn-flat") do %>
                    <i class="fa fa-search"></i>
                  <% end %>
                </span>
              </div>
            <% end %>
          </div>
          <div class="col-md-3">
            <%= link_to 'New Organization', new_organization_path, class: "btn btn-primary float-right" %>
          </div>
        </div>
      </div>
    </div>
      <% @organizations.each do |organization| %>
        <%= render 'organizations/partials/header', organization: organization %>
      <% end %>
    </div>
  </div>
</div>
