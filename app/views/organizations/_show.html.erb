<%= render 'organizations/partials/header', organization: @organization %>
  <div class="card">
    <div class="card-body">
      <ul class="nav nav-tabs">
        <li class="nav-item"><%= link_to 'Info', organization_path(@organization), class: "nav-link #{'active' if current_page?(organization_path(@organization))}" %></li>
        <li class="nav-item"><%= link_to 'Loans', organization_loans_path(@organization), class: "nav-link #{'active' if current_page?(organization_loans_path(@organization))}" %></li>
        <li class="nav-item"><%= link_to 'Reports', organization_reports_path(@organization), class: "nav-link #{'active' if current_page?(organization_reports_path(@organization))}" %></li>
      </ul>
    </div>
  </div>
      <% if current_page?(organization_path(@organization)) %>
        <%= render 'organizations/partials/info' %>
      <% end %>
       <% if current_page?(organization_loans_path(@organization)) %>
        <%= render 'organizations/partials/loans' %>
      <% end %>
       <% if current_page?(organization_reports_path(@organization)) %>
        <%= render 'organizations/partials/reports' %>
      <% end %>
    </div>
  </div>
</div>
